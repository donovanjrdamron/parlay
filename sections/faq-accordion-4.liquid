{% comment %}
  FAQ Accordion 4 - Simplified (No Block Overhead)
  Clean, direct settings with blocks only for FAQ items
{% endcomment %}

<section class="faq-accordion-4 section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    
    {% comment %} Content Layout (Image + FAQ Items) {% endcomment %}
    <div class="faq4-content-layout faq4-layout-{{ section.settings.layout }}">
      
      {% comment %} Image {% endcomment %}
      {% if section.settings.show_image %}
        <div class="faq4-image-column {% if section.settings.hide_image_on_mobile %}hide-mobile{% endif %}">
          <div class="faq4-image-wrapper faq4-aspect-{{ section.settings.image_aspect_ratio }}">
            {% if section.settings.image != blank %}
              {{ section.settings.image | image_url: width: 1200 | image_tag:
                loading: 'lazy',
                class: 'faq4-image'
              }}
            {% else %}
              <div class="faq4-image-placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {% comment %} FAQ Items {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="faq4-accordion-column">
          
          {% comment %} Heading {% endcomment %}
          {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
            <div class="faq4-header-wrapper faq4-align-{{ section.settings.heading_text_align }}">
              {% case section.settings.highlight_position %}
                {% when 'above' %}
                  {% if section.settings.highlighted_text != blank %}
                    <span class="faq4-highlighted-text faq4-highlighted-separate">{{ section.settings.highlighted_text }}</span>
                  {% endif %}
                  <{{ section.settings.heading_tag }} class="faq4-heading">
                    {{ section.settings.heading_before }}
                    {{ section.settings.heading_after }}
                  </{{ section.settings.heading_tag }}>

                {% when 'below' %}
                  <{{ section.settings.heading_tag }} class="faq4-heading">
                    {{ section.settings.heading_before }}
                    {{ section.settings.heading_after }}
                  </{{ section.settings.heading_tag }}>
                  {% if section.settings.highlighted_text != blank %}
                    <span class="faq4-highlighted-text faq4-highlighted-separate">{{ section.settings.highlighted_text }}</span>
                  {% endif %}

                {% when 'inline_first' %}
                  <{{ section.settings.heading_tag }} class="faq4-heading">
                    {% if section.settings.highlighted_text != blank %}
                      <span class="faq4-highlighted-text">{{ section.settings.highlighted_text }}</span>
                    {% endif %}
                    {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                    {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
                  </{{ section.settings.heading_tag }}>

                {% when 'inline_second' %}
                  <{{ section.settings.heading_tag }} class="faq4-heading">
                    {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                    {% if section.settings.highlighted_text != blank %}
                      <span class="faq4-highlighted-text">{{ section.settings.highlighted_text }}</span>
                    {% endif %}
                    {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
                  </{{ section.settings.heading_tag }}>
              {% endcase %}
            </div>
          {% endif %}

          {% comment %} Intro Text {% endcomment %}
          {% if section.settings.intro_text != blank %}
            <div class="faq4-intro-text rte">
              {{ section.settings.intro_text }}
            </div>
          {% endif %}

          <div class="faq4-items-wrapper">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'faq_item' %}
                  <div class="faq4-item" data-faq-item data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
                    <button
                      class="faq4-question{% if block.settings.badge_text != blank %} faq4-question--has-badge{% endif %}"
                      type="button"
                      aria-expanded="{% if block.settings.open_by_default %}true{% else %}false{% endif %}"
                      data-faq-trigger
                    >
                      {% if block.settings.badge_text != blank %}
                        <span class="faq4-item-badge">{{ block.settings.badge_text }}</span>
                      {% endif %}

                      <span class="faq4-question-content">
                        {% comment %} Icon before question text {% endcomment %}
                        {% if block.settings.icon_svg != blank or block.settings.icon_material != blank %}
                          <span class="faq4-icon-before">
                            {% if block.settings.icon_svg != blank %}
                              {{ block.settings.icon_svg }}
                            {% elsif block.settings.icon_material != blank %}
                              {% render 'material-icon', icon: block.settings.icon_material, filled: block.settings.icon_material_filled %}
                            {% endif %}
                          </span>
                        {% endif %}

                        <span class="faq4-question-text">{{ block.settings.question }}</span>

                        {% comment %} Chevron icon (right side) {% endcomment %}
                        <span class="faq4-icon faq4-icon-chevron">
                          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 7.5L10 12.5L15 7.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      </span>
                    </button>
                    <div class="faq4-answer" data-faq-content>
                      <div class="faq4-answer-inner rte">
                        {{ block.settings.answer }}
                        {% if block.settings.custom_html != blank %}
                          <div class="faq4-custom-content">
                            {{ block.settings.custom_html }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>

                {% when 'custom_html' %}
                  <div class="faq4-custom-html-block" {{ block.shopify_attributes }}>
                    {{ block.settings.html_content }}
                  </div>

                {% when 'button' %}
                  {% if block.settings.button_text != blank %}
                    <div class="faq4-button-wrapper{% if block.settings.hide_on_desktop %} faq4-button-hide-desktop{% endif %}" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
                      {% if block.settings.scroll_to_section != blank %}
                        <a href="#" class="{% unless block.settings.use_custom_styles %}theme-button {% endunless %}faq4-button{% if block.settings.use_custom_styles %} faq4-button--custom-styles{% endif %} scroll-to-section" data-scroll-target="{{ block.settings.scroll_to_section }}">
                          {% if block.settings.icon_position == 'left' %}
                            {% if block.settings.button_custom_icon != blank or block.settings.button_icon != blank %}
                              <span class="faq4-button-icon faq4-button-icon--left">
                                {% if block.settings.button_custom_icon != blank %}
                                  {{ block.settings.button_custom_icon }}
                                {% elsif block.settings.button_icon != blank %}
                                  {% render 'material-icon', icon: block.settings.button_icon, filled: block.settings.button_icon_filled %}
                                {% endif %}
                              </span>
                            {% endif %}
                          {% endif %}
                          <span class="faq4-button-text">{{- block.settings.button_text -}}</span>
                          {% if block.settings.icon_position == 'right' %}
                            {% if block.settings.button_custom_icon != blank or block.settings.button_icon != blank %}
                              <span class="faq4-button-icon faq4-button-icon--right">
                                {% if block.settings.button_custom_icon != blank %}
                                  {{ block.settings.button_custom_icon }}
                                {% elsif block.settings.button_icon != blank %}
                                  {% render 'material-icon', icon: block.settings.button_icon, filled: block.settings.button_icon_filled %}
                                {% endif %}
                              </span>
                            {% endif %}
                          {% endif %}
                        </a>
                      {% else %}
                        <a href="{{ block.settings.button_link }}" class="{% unless block.settings.use_custom_styles %}theme-button {% endunless %}faq4-button{% if block.settings.use_custom_styles %} faq4-button--custom-styles{% endif %}">
                          {% if block.settings.icon_position == 'left' %}
                            {% if block.settings.button_custom_icon != blank or block.settings.button_icon != blank %}
                              <span class="faq4-button-icon faq4-button-icon--left">
                                {% if block.settings.button_custom_icon != blank %}
                                  {{ block.settings.button_custom_icon }}
                                {% elsif block.settings.button_icon != blank %}
                                  {% render 'material-icon', icon: block.settings.button_icon, filled: block.settings.button_icon_filled %}
                                {% endif %}
                              </span>
                            {% endif %}
                          {% endif %}
                          <span class="faq4-button-text">{{- block.settings.button_text -}}</span>
                          {% if block.settings.icon_position == 'right' %}
                            {% if block.settings.button_custom_icon != blank or block.settings.button_icon != blank %}
                              <span class="faq4-button-icon faq4-button-icon--right">
                                {% if block.settings.button_custom_icon != blank %}
                                  {{ block.settings.button_custom_icon }}
                                {% elsif block.settings.button_icon != blank %}
                                  {% render 'material-icon', icon: block.settings.button_icon, filled: block.settings.button_icon_filled %}
                                {% endif %}
                              </span>
                            {% endif %}
                          {% endif %}
                        </a>
                      {% endif %}
                    </div>
                  {% endif %}
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

    </div>

  </div>
</section>

<style>
  /* Section Container */
  .section-{{ section.id }} {
    {% if section.settings.use_theme_colors %}
      {% if settings.section_gradient_enabled %}
        background: {{ settings.section_gradient_background }};
      {% else %}
        background-color: {{ settings.section_background_color }};
      {% endif %}
    {% else %}
      {% if section.settings.gradient_enabled %}
        background: {{ section.settings.gradient_background }};
      {% else %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
    {% endif %}
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }

  /* Heading Styles */
  .section-{{ section.id }} .faq4-heading {
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: {{ section.settings.heading_color }};
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.heading_font_size_desktop }}px;
      font-weight: {{ settings.heading_font_weight }};
    {% else %}
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      font-weight: {{ section.settings.heading_font_weight }};
    {% endif %}
    line-height: 1.2;
    margin: {{ section.settings.heading_margin_top }}px 0 {{ section.settings.heading_margin_bottom }}px 0;
  }

  .section-{{ section.id }} .faq4-header-wrapper {
    width: 100%;
  }

  .section-{{ section.id }} .faq4-align-left {
    text-align: left;
  }

  .section-{{ section.id }} .faq4-align-center {
    text-align: center;
  }

  .section-{{ section.id }} .faq4-align-right {
    text-align: right;
  }

  /* Highlighted Text */
  .section-{{ section.id }} .faq4-highlighted-text {
    display: inline-block; /* Always inline-block to prevent gradient from spreading across full container width */
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      {% else %}
        color: {{ settings.highlighted_text_solid_color }};
      {% endif %}
    {% else %}
      {% if section.settings.highlighted_gradient_enabled %}
        background: {{ section.settings.highlighted_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      {% else %}
        color: {{ section.settings.highlighted_color }};
      {% endif %}
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.highlighted_text_font_size_desktop }}px;
      font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% else %}
      font-size: {{ section.settings.highlighted_font_size_desktop }}px;
      font-weight: {{ section.settings.highlighted_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% endif %}
    font-family: inherit;
  }

  .section-{{ section.id }} .faq4-heading .faq4-highlighted-text {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .section-{{ section.id }} .faq4-highlighted-separate {
    display: inline-block;
    margin-bottom: {{ section.settings.highlighted_spacing }}px;
  }

  /* Intro Text */
  .section-{{ section.id }} .faq4-intro-text {
    {% if section.settings.use_theme_colors %}
      color: {{ settings.body_color }};
    {% else %}
      color: {{ section.settings.intro_text_color }};
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.body_font_size_desktop }}px;
      font-weight: {{ settings.body_font_weight }};
    {% else %}
      font-size: {{ section.settings.intro_font_size_desktop }}px;
      font-weight: {{ section.settings.intro_font_weight }};
    {% endif %}
    line-height: 1.6;
    margin: 0 auto {{ section.settings.intro_margin_bottom }}px auto;
    max-width: {{ section.settings.intro_max_width }}%;
    text-align: center;
  }

  /* Content Layout */
  .section-{{ section.id }} .faq4-content-layout {
    display: flex;
    gap: {{ section.settings.layout_gap }}px;
    align-items: center;
  }

  .section-{{ section.id }} .faq4-layout-image-left {
    flex-direction: row;
  }

  .section-{{ section.id }} .faq4-layout-image-right {
    flex-direction: row-reverse;
  }

  .section-{{ section.id }} .faq4-image-column {
    flex: 0 0 {{ section.settings.image_width }}%;
  }

  .section-{{ section.id }} .faq4-accordion-column {
    flex: 1;
  }

  /* Image Styles */
  .section-{{ section.id }} .faq4-image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .section-{{ section.id }} .faq4-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .section-{{ section.id }} .faq4-image-placeholder {
    width: 100%;
    min-height: 300px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Aspect Ratios */
  .section-{{ section.id }} .faq4-aspect-original {
    aspect-ratio: auto;
  }

  .section-{{ section.id }} .faq4-aspect-square {
    aspect-ratio: 1 / 1;
  }

  .section-{{ section.id }} .faq4-aspect-portrait {
    aspect-ratio: 3 / 4;
  }

  .section-{{ section.id }} .faq4-aspect-landscape {
    aspect-ratio: 16 / 9;
  }

  .section-{{ section.id }} .faq4-aspect-wide {
    aspect-ratio: 21 / 9;
  }

  /* FAQ Items Wrapper */
  .section-{{ section.id }} .faq4-items-wrapper {
    width: 100%;
  }

  /* FAQ Item */
  .section-{{ section.id }} .faq4-item {
    {% if section.settings.border_bottom_only %}
      border: none;
      border-bottom: {{ section.settings.border_bottom_width }}px solid {{ section.settings.border_bottom_color }};
      border-radius: 0;
    {% else %}
      {% if section.settings.accordion_border_width > 0 %}
        border: {{ section.settings.accordion_border_width }}px solid {{ section.settings.accordion_border_color }};
      {% endif %}
      border-radius: {{ section.settings.accordion_border_radius }}px;
    {% endif %}
    margin-bottom: {{ section.settings.accordion_gap }}px;
    overflow: hidden;
  }

  {% if section.settings.border_bottom_only %}
    .section-{{ section.id }} .faq4-item:last-child {
      border-bottom: none;
    }
  {% endif %}

  /* FAQ Item Badge Styles */
  .section-{{ section.id }} .faq4-item-badge {
    display: inline-block;
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    font-weight: {{ section.settings.badge_font_weight }};
    font-size: {{ section.settings.badge_font_size }}px;
    padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
    margin-bottom: {{ section.settings.badge_margin_bottom }}px;
    border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};
    border-radius: {{ section.settings.badge_border_radius }}px;
    text-align: left;
    line-height: 1.4;
  }

  /* Question Button */
  .section-{{ section.id }} .faq4-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    background: {{ section.settings.question_bg_color }};
    color: {{ section.settings.question_text_color }};
    border: none;
    text-align: left;
    padding: {{ section.settings.question_padding_vertical }}px {{ section.settings.question_padding_horizontal }}px;
    {% if settings.enable_global_typography %}
      font-size: {{ settings.body_font_size_desktop }}px;
      font-weight: {{ settings.body_font_weight }};
    {% else %}
      font-size: {{ section.settings.question_font_size_desktop }}px;
      font-weight: {{ section.settings.question_font_weight }};
    {% endif %}
    transition: all 0.3s ease;
  }

  /* Question with badge - flex column layout */
  .section-{{ section.id }} .faq4-question--has-badge {
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
  }

  .section-{{ section.id }} .faq4-question-content {
    display: flex;
    align-items: center;
    width: 100%;
  }

  .section-{{ section.id }} .faq4-question--has-badge .faq4-question-content {
    justify-content: space-between;
  }

  .section-{{ section.id }} .faq4-question:hover {
    background: {{ section.settings.question_bg_color_hover }};
  }

  .section-{{ section.id }} .faq4-question[aria-expanded="true"] {
    background: {{ section.settings.question_bg_color_active }};
    color: {{ section.settings.question_text_color_active }};
  }

  .section-{{ section.id }} .faq4-question-text {
    flex: 1;
  }

  /* Icon before question text */
  .section-{{ section.id }} .faq4-icon-before {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    min-width: {{ section.settings.icon_size }}px;
    min-height: {{ section.settings.icon_size }}px;
    flex-shrink: 0;
    margin-right: 12px;
    color: {{ section.settings.icon_color }};
    background-color: {{ section.settings.icon_bg_color }};
    {% if section.settings.icon_border_width > 0 %}
      border: {{ section.settings.icon_border_width }}px solid {{ section.settings.icon_border_color }};
    {% endif %}
    border-radius: {{ section.settings.icon_border_radius }}px;
    padding: {{ section.settings.icon_padding }}px;
    transition: all 0.3s ease;
  }

  .section-{{ section.id }} .faq4-icon-before .material-icon,
  .section-{{ section.id }} .faq4-icon-before svg {
    width: 100%;
    height: 100%;
    font-size: {{ section.settings.icon_size }}px !important;
  }

  .section-{{ section.id }} .faq4-question[aria-expanded="true"] .faq4-icon-before {
    color: {{ section.settings.icon_color_active }};
    background-color: {{ section.settings.icon_bg_color_active }};
    {% if section.settings.icon_border_width > 0 %}
      border-color: {{ section.settings.icon_border_color_active }};
    {% endif %}
  }

  /* Chevron icon (right side) */
  .section-{{ section.id }} .faq4-icon {
    flex-shrink: 0;
    margin-left: 1rem;
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
  }

  .section-{{ section.id }} .faq4-question[aria-expanded="true"] .faq4-icon {
    transform: rotate(180deg);
  }

  /* Custom HTML Block */
  .section-{{ section.id }} .faq4-custom-html-block {
    width: 100%;
    margin-bottom: {{ section.settings.accordion_gap }}px;
  }

  /* Answer */
  .section-{{ section.id }} .faq4-answer {
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }

  .section-{{ section.id }} .faq4-answer-inner {
    padding: {{ section.settings.answer_padding_vertical }}px {{ section.settings.answer_padding_horizontal }}px;
    {% if settings.enable_global_typography %}
      font-size: {{ settings.body_font_size_desktop }}px;
      font-weight: {{ settings.body_font_weight }};
    {% else %}
      font-size: {{ section.settings.answer_font_size_desktop }}px;
      font-weight: {{ section.settings.answer_font_weight }};
    {% endif %}
    color: {{ section.settings.answer_text_color }};
    background-color: {{ section.settings.answer_bg_color }};
    line-height: 1.6;
  }

  /* Hide on Mobile */
  @media screen and (max-width: 749px) {
    .section-{{ section.id }} .hide-mobile {
      display: none;
    }
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    .section-{{ section.id }} .faq4-content-layout {
      flex-direction: column;
      gap: 30px;
    }

    .section-{{ section.id }} .faq4-image-column {
      flex: 0 0 100%;
      width: 100%;
    }

    .section-{{ section.id }} .faq4-accordion-column {
      width: 100%;
    }

    .section-{{ section.id }} .faq4-heading {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.heading_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.heading_font_size_mobile }}px;
      {% endif %}
    }

    .section-{{ section.id }} .faq4-highlighted-text {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.highlighted_text_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.highlighted_font_size_mobile }}px;
      {% endif %}
    }

    .section-{{ section.id }} .faq4-intro-text {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.body_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.intro_font_size_mobile }}px;
      {% endif %}
      max-width: 100%;
    }

    .section-{{ section.id }} .faq4-question {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.body_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.question_font_size_mobile }}px;
      {% endif %}
    }

    .section-{{ section.id }} .faq4-answer-inner {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.body_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.answer_font_size_mobile }}px;
      {% endif %}
    }
  }

  /* Button Block Styles */
  {% for block in section.blocks %}
    {% if block.type == 'button' %}
      .section-{{ section.id }} .faq4-button-wrapper[data-block-id="{{ block.id }}"] {
        margin-top: {{ block.settings.margin_top | default: 0 }}px;
        margin-bottom: {{ block.settings.margin_bottom | default: 24 }}px;
        text-align: {{ block.settings.alignment_desktop | default: 'center' }};
        {% if block.settings.full_width %}
          width: 100%;
        {% endif %}
      }

      /* Hide on desktop */
      @media (min-width: 769px) {
        .section-{{ section.id }} .faq4-button-hide-desktop {
          display: none !important;
        }
      }

      {% if block.settings.use_custom_styles %}
        .section-{{ section.id }} .faq4-button-wrapper[data-block-id="{{ block.id }}"] .faq4-button--custom-styles {
          /* Base button styles */
          display: flex !important;

<script>
// FAQ Accordion 4 JavaScript
(function() {
  class FaqAccordion4 {
    constructor(section) {
      this.section = section;
      this.items = section.querySelectorAll('[data-faq-item]');
      this.init();
    }

    init() {
      this.items.forEach(item => {
        const trigger = item.querySelector('[data-faq-trigger]');
        const content = item.querySelector('[data-faq-content]');

        if (trigger && content) {
          trigger.addEventListener('click', () => this.toggleItem(trigger, content));

          // Set initial state for items that should be open by default
          if (trigger.getAttribute('aria-expanded') === 'true') {
            content.style.maxHeight = content.scrollHeight + 'px';
          } else {
            content.style.maxHeight = '0';
          }
        }
      });
    }

    toggleItem(trigger, content) {
      const isOpen = trigger.getAttribute('aria-expanded') === 'true';

      if (isOpen) {
        this.closeItem(trigger, content);
      } else {
        this.openItem(trigger, content);
      }
    }

    openItem(trigger, content) {
      trigger.setAttribute('aria-expanded', 'true');
      content.style.maxHeight = content.scrollHeight + 'px';
    }

    closeItem(trigger, content) {
      trigger.setAttribute('aria-expanded', 'false');
      content.style.maxHeight = content.scrollHeight + 'px';
      
      // Force reflow
      requestAnimationFrame(() => {
        content.style.maxHeight = '0';
      });
    }
  }

  // Initialize function
  function initAccordions() {
    const accordions = document.querySelectorAll('.faq-accordion-4');
    accordions.forEach(accordion => {
      // Avoid re-initializing
      if (!accordion.dataset.initialized) {
        accordion.dataset.initialized = 'true';
        new FaqAccordion4(accordion);
      }
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAccordions);
  } else {
    initAccordions();
  }

  // Initialize on Shopify section load (for theme editor)
  document.addEventListener('shopify:section:load', (event) => {
    const section = event.target.querySelector('.faq-accordion-4');
    if (section) {
      section.dataset.initialized = 'false';
      new FaqAccordion4(section);
    }
  });
})();

// Smooth scroll to section functionality
(function() {
  function initScrollButtons() {
    const scrollButtons = document.querySelectorAll('.scroll-to-section');

    scrollButtons.forEach(button => {
      // Remove existing listener if any
      button.removeEventListener('click', handleScrollClick);
      // Add new listener
      button.addEventListener('click', handleScrollClick);
    });
  }

  function handleScrollClick(e) {
    e.preventDefault();
    e.stopPropagation();

    const targetClass = this.getAttribute('data-scroll-target');

    if (!targetClass) {
      console.warn('No scroll target specified');
      return;
    }

    // Try to find element by class
    let targetElement = document.querySelector('.' + targetClass);

    // If not found, try without adding dot (in case user included it)
    if (!targetElement && targetClass.startsWith('.')) {
      targetElement = document.querySelector(targetClass);
    }

    // Also try by ID as fallback
    if (!targetElement) {
      targetElement = document.getElementById(targetClass);
    }

    if (targetElement) {
      const yOffset = -20; // 20px offset from top
      const y = targetElement.getBoundingClientRect().top + window.pageYOffset + yOffset;

      window.scrollTo({
        top: y,
        behavior: 'smooth'
      });
    } else {
      console.warn('Scroll target not found:', targetClass);
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollButtons);
  } else {
    initScrollButtons();
  }

  // Re-initialize on Shopify section load (for theme editor)
  document.addEventListener('shopify:section:load', function() {
    setTimeout(initScrollButtons, 100);
  });
})();
</script>


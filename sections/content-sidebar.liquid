					{%- if section.settings.breadcrumb_second_text != blank -%}
						<span class="eeadv-breadcrumb-separator">{{ section.settings.breadcrumb_separator }}</span>
						{%- if section.settings.breadcrumb_second_url != blank -%}
							<a href="{{ section.settings.breadcrumb_second_url }}" class="eeadv-breadcrumb-link">
								{{ section.settings.breadcrumb_second_text }}
							</a>
						{%- else -%}
							<span class="eeadv-breadcrumb-link">{{ section.settings.breadcrumb_second_text }}</span>
						{%- endif -%}
					{%- endif -%}
					
					{%- if section.settings.breadcrumb_current_text != blank -%}
						<span class="eeadv-breadcrumb-separator">{{ section.settings.breadcrumb_separator }}</span>
						<span class="eeadv-breadcrumb-link last-link">{{ section.settings.breadcrumb_current_text }}</span>
					{%- endif -%}
				</div>
			{%- endif -%}
			{%- for block in section.blocks -%}
				{%- liquid
					assign this = block.settings
					assign custom_styled = false

					if this.padding_top > 0 or this.padding_bottom > 0 or this.padding_left > 0 or this.padding_right > 0
						assign custom_styled = true
					endif
				-%}

				{%- if custom_styled -%}
					{%- style -%}
						#{{ block.id }} {
							padding: {{ this.padding_top }}px {{ this.padding_right }}px {{ this.padding_bottom }}px {{ this.padding_left }}px;
						}
					{%- endstyle -%}
				{%- endif -%}

				{%- case block.type -%}

					{%- when 'heading' -%}
						{%- liquid 
							assign custom_styled = false
							if this.custom_size or this.text_color != blank or this.line_height != 1.2 or this.font_weight != "700" or this.text_transform != "none" or this.letter_spacing != 0 or this.text_align != "left"
								assign custom_styled = true
							endif
						-%}

						{%- if custom_styled -%}
							{%- style -%}
								#{{ block.id }} {{ this.tag }} {

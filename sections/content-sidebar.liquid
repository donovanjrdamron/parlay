	<script>
		document.addEventListener('DOMContentLoaded', function() {
			const stickyCart = document.getElementById('eeadv-sticky-cart-{{ section.id }}');
			if (!stickyCart) return;

			let isVisible = false;
			
			function toggleStickyCart() {
				const scrollY = window.scrollY;
				const windowHeight = window.innerHeight;
				const documentHeight = document.documentElement.scrollHeight;
				
				// Show after scrolling 300px or when near bottom
				const shouldShow = scrollY > 300 || (scrollY + windowHeight >= documentHeight - 100);
				
				if (shouldShow && !isVisible) {
					stickyCart.classList.add('show');
					isVisible = true;
				} else if (!shouldShow && isVisible) {
					stickyCart.classList.remove('show');
					isVisible = false;
				}
			}

			// Throttled scroll listener
			let ticking = false;
			function handleScroll() {
				if (!ticking) {
					requestAnimationFrame(function() {
						toggleStickyCart();
						ticking = false;
					});
					ticking = true;
				}
			}

			window.addEventListener('scroll', handleScroll);
			
			// Handle form submission (both styles)
			const form = stickyCart.querySelector('.eeadv-sticky-cart-form') || stickyCart.querySelector('.eeadv-sticky-cart-form-full');
			if (form) {
				form.addEventListener('submit', function(e) {
					e.preventDefault();
					
					const formData = new FormData(form);
					
					fetch('/cart/add.js', {
						method: 'POST',
						body: formData
					})
					.then(response => response.json())
					.then(data => {
						// Trigger cart drawer or notification
						if (window.theme && window.theme.cartDrawer) {
							window.theme.cartDrawer.open();
						} else {
							// Fallback notification
							const notification = document.createElement('div');
							notification.textContent = 'Added to cart!';
							notification.style.cssText = 'position:fixed;top:20px;right:20px;background:#28a745;color:white;padding:10px 20px;border-radius:5px;z-index:9999;';
							document.body.appendChild(notification);
							setTimeout(() => notification.remove(), 3000);
						}
					})
					.catch(error => {
					});
				});
			}
		});
	</script>

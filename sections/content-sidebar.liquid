										font-weight: {{ this.font_weight }} !important;
									{%- endif -%}
									{%- if this.text_transform != "none" -%}
										text-transform: {{ this.text_transform }} !important;
									{%- endif -%}
									{%- if this.letter_spacing != 0 -%}
										letter-spacing: {{ this.letter_spacing }}px !important;
									{%- endif -%}
									{%- if this.text_align != "left" -%}
										text-align: {{ this.text_align }} !important;
									{%- endif -%}
								}
								{%- if this.custom_size -%}
									@media screen and (max-width: 768px) {

{%- liquid
	assign path = request.path
	assign is_product_page = false
	assign title = ''

	if path contains 'pages'
		assign path = path | replace: '/pages', ''
		assign title = page.title
	endif

	if path contains 'products'
		assign is_product_page = true
		assign product_collection = product.collections.first
		assign title = product.title
	endif
-%}

{%- if section.settings.hide_header_footer -%}
<style>
	/* Hide header and footer when toggle is enabled */
	body:has(#shopify-section-{{ section.id }}) header,
	body:has(#shopify-section-{{ section.id }}) .shopify-section-header,
	body:has(#shopify-section-{{ section.id }}) footer,
	body:has(#shopify-section-{{ section.id }}) .shopify-section-footer {
		display: none !important;
	}
</style>
{%- endif -%}

{%- style -%}
	#shopify-section-{{ section.id }} {
		padding-top: {{ section.settings.section_padding_top | default: 50 }}px;
		padding-bottom: {{ section.settings.section_padding_bottom | default: 50 }}px;
		background-color: {% if section.settings.use_theme_colors %}{{ settings.section_background_color }}{% else %}{{ section.settings.section_background_color }}{% endif %};
	}

	/* Custom Page Width Logic */
	{%- assign has_sidebar = section.blocks | where: 'type', 'sidebar' | first -%}
	{%- liquid
		assign show_sidebar = false
		if has_sidebar and has_sidebar.settings.show_sidebar
			assign show_sidebar = true
		endif
	-%}
	
	#shopify-section-{{ section.id }} .eeadv-inner-container.eeadv-page-width {
		{%- if show_sidebar -%}
			max-width: {{ section.settings.page_width_with_sidebar }}px;
		{%- else -%}
			max-width: {{ section.settings.page_width_without_sidebar }}px;
		{%- endif -%}
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Mobile responsive adjustments */
	@media (max-width: 768px) {
		#shopify-section-{{ section.id }} .eeadv-inner-container.eeadv-page-width {
			max-width: 100%;
			{%- if show_sidebar -%}
				padding: 0 15px;
			{%- else -%}
				padding: 0;
			{%- endif -%}
		}
		
		{%- unless show_sidebar -%}
		#shopify-section-{{ section.id }} .eeadv-section-main {
			padding: 0 15px;
		}
		{%- endunless -%}
	}

	/* Global Button Styling - Applies to ALL buttons in this section */
	{%- liquid
		if section.settings.use_theme_colors
			assign button_bg_color = settings.button_background_color
			assign button_text_color = settings.button_text_color
			assign button_border_color = settings.button_border_color
		else
			assign button_bg_color = section.settings.button_background_color
			assign button_text_color = section.settings.button_text_color
			assign button_border_color = section.settings.button_border_color
		endif
	-%}
	
	/* Apply standard theme button styling to ALL button types (when enabled) */
	{%- if section.settings.force_global_button_styling -%}
		{%- comment -%} Force: always apply global styling, including sticky buttons {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link,
		#shopify-section-{{ section.id }} .eeadv-content-button,
		#shopify-section-{{ section.id }} .eeadv-content-button-link,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button-transparent {
	{%- elsif section.settings.disable_global_button_styling == false -%}
		{%- comment -%} Default: apply global styling but exclude sticky buttons {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link,
		#shopify-section-{{ section.id }} .eeadv-content-button,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent) {
	{%- endif -%}
		/* Core styling */
		{%- if section.settings.use_theme_colors and settings.button_gradient_enabled -%}
			background: {{ settings.button_gradient }} !important;
			background-color: transparent !important;
		{%- else -%}
			background-color: {{ button_bg_color }} !important;
		{%- endif -%}
		color: {{ button_text_color }} !important;
		border-radius: {% if section.settings.use_theme_colors %}{{ settings.button_border_radius }}{% else %}{{ section.settings.button_border_radius }}{% endif %}px !important;
		font-size: {% if section.settings.use_theme_colors %}{{ settings.button_font_size_desktop }}{% else %}{{ section.settings.button_font_size_desktop }}{% endif %}px !important;
		font-weight: {% if section.settings.use_theme_colors %}{{ settings.button_font_weight }}{% else %}{{ section.settings.button_font_weight }}{% endif %} !important;
		padding: {% if section.settings.use_theme_colors %}{{ settings.button_padding_vertical }}px {{ settings.button_padding_horizontal }}{% else %}{{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}{% endif %}px !important;

		/* 3D Border styling */
		border: {% if section.settings.use_theme_colors %}{{ settings.button_border_width }}{% else %}{{ section.settings.button_border_width }}{% endif %}px solid {{ button_border_color }} !important;
		border-bottom: {% if section.settings.use_theme_colors %}{{ settings.button_border_width }}{% else %}{{ section.settings.button_border_bottom_width }}{% endif %}px solid {{ button_border_color }} !important;
		box-shadow: none !important;
		outline: none !important;
		cursor: pointer !important;
		transition: all 0.3s ease !important;
		text-decoration: none !important;
		display: inline-flex !important;
		align-items: center !important;
		justify-content: center !important;
		text-align: center !important;
		position: relative !important;
		overflow: hidden !important;
	}

	/* Arrow Icon for Buttons */
	{%- if section.settings.show_button_arrow -%}
		{%- if section.settings.force_global_button_styling -%}
			{%- comment -%} Include ALL buttons including sticky cart when forced {%- endcomment -%}
			#shopify-section-{{ section.id }} .eeadv-sidebar-product-link::after,
			#shopify-section-{{ section.id }} .eeadv-content-button::after,
			#shopify-section-{{ section.id }} .eeadv-content-button-link::after,
			#shopify-section-{{ section.id }} .eeadv-sticky-cart-button::after,
			#shopify-section-{{ section.id }} .eeadv-sticky-cart-button-transparent::after {
		{%- elsif section.settings.disable_global_button_styling == false -%}
			{%- comment -%} Exclude sticky cart buttons by default {%- endcomment -%}
			#shopify-section-{{ section.id }} .eeadv-sidebar-product-link::after,
			#shopify-section-{{ section.id }} .eeadv-content-button::after,
			#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent)::after {
		{%- endif -%}
			content: "";
			display: inline-block !important;
			width: 22px !important;
			height: 22px !important;
			margin-left: 8px !important;
			background-image: url("data:image/svg+xml,<svg width='16' height='16' viewBox='0 0 16 16' fill='none' xmlns='http://www.w3.org/2000/svg'><path d='M8 6L8 2L10 2L16 8L10 14L8 14L8 10L-1.74845e-07 10L-3.01991e-07 6L8 6Z' fill='{{ section.settings.button_arrow_color | url_encode }}'/></svg>") !important;
			background-size: contain !important;
			background-repeat: no-repeat !important;
			background-position: center !important;
			vertical-align: middle !important;
			flex-shrink: 0 !important;
		}
	{%- endif -%}

	/* Arrow Icon for Buttons when global styling is disabled */
	{%- if section.settings.show_button_arrow and section.settings.disable_global_button_styling and section.settings.force_global_button_styling == false -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link::after,
		#shopify-section-{{ section.id }} .eeadv-content-button::after,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent)::after {
			content: "";
			display: inline-block !important;
			width: 22px !important;
			height: 22px !important;
			margin-left: 8px !important;
			background-image: url("data:image/svg+xml,<svg width='16' height='16' viewBox='0 0 16 16' fill='none' xmlns='http://www.w3.org/2000/svg'><path d='M8 6L8 2L10 2L16 8L10 14L8 14L8 10L-1.74845e-07 10L-3.01991e-07 6L8 6Z' fill='{{ section.settings.button_arrow_color | url_encode }}'/></svg>") !important;
			background-size: contain !important;
			background-repeat: no-repeat !important;
			background-position: center !important;
			vertical-align: middle !important;
			flex-shrink: 0 !important;
		}
	{%- endif -%}

	/* Standard theme button hover effects */
	{%- if section.settings.force_global_button_styling -%}
		{%- comment -%} Include ALL buttons including sticky cart when forced {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:hover,
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:focus,
		#shopify-section-{{ section.id }} .eeadv-content-button:hover,
		#shopify-section-{{ section.id }} .eeadv-content-button:focus,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:hover,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:focus,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button:hover,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button:focus,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button-transparent:hover,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button-transparent:focus {
	{%- elsif section.settings.disable_global_button_styling == false -%}
		{%- comment -%} Exclude sticky cart buttons by default {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:hover,
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:focus,
		#shopify-section-{{ section.id }} .eeadv-content-button:hover,
		#shopify-section-{{ section.id }} .eeadv-content-button:focus,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent):hover,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent):focus {
	{%- endif -%}
		{%- if section.settings.use_theme_colors and settings.button_hover_enabled -%}
			{%- if settings.button_hover_gradient_enabled -%}
				background: {{ settings.button_hover_gradient }} !important;
				background-color: transparent !important;
			{%- else -%}
				background-color: {{ settings.button_hover_background_color }} !important;
			{%- endif -%}
			color: {{ settings.button_hover_text_color }} !important;
			border-color: {{ settings.button_hover_border_color }} !important;
		{%- else -%}
			background-color: {{ button_border_color }} !important;
			color: {{ button_text_color }} !important;
		{%- endif -%}
		text-decoration: none !important;
		transform: translateY(-1px) !important;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
	}

	/* Standard theme button active state */
	{%- if section.settings.force_global_button_styling -%}
		{%- comment -%} Include ALL buttons including sticky cart when forced {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:active,
		#shopify-section-{{ section.id }} .eeadv-content-button:active,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:active,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button:active,
		#shopify-section-{{ section.id }} .eeadv-sticky-cart-button-transparent:active {
	{%- elsif section.settings.disable_global_button_styling == false -%}
		{%- comment -%} Exclude sticky cart buttons by default {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:active,
		#shopify-section-{{ section.id }} .eeadv-content-button:active,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent):active {
	{%- endif -%}
		transform: translateY(0) !important;
		box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1) !important;
	}

	/* Fallback styling when global button styling is disabled */
	{%- if section.settings.disable_global_button_styling and section.settings.force_global_button_styling == false -%}
		{%- comment -%} Exclude sticky cart buttons by default {%- endcomment -%}
		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link,
		#shopify-section-{{ section.id }} .eeadv-content-button,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent) {
			/* Provide basic button styling instead of browser defaults */
			background: transparent !important;
			color: inherit !important;
			border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }} !important;
			border-bottom: {{ section.settings.button_border_bottom_width }}px solid {{ section.settings.button_border_bottom_color }} !important;
			border-radius: 4px !important;
			font-size: inherit !important;
			font-weight: inherit !important;
			padding: 8px 16px !important;
			box-shadow: none !important;
			outline: none !important;
			cursor: pointer !important;
			transition: all 0.3s ease !important;
			text-decoration: none !important;
			display: inline-block !important;
			align-items: center !important;
			justify-content: center !important;
			text-align: center !important;
			position: relative !important;
			overflow: hidden !important;
		}

		#shopify-section-{{ section.id }} .eeadv-sidebar-product-link:hover,
		#shopify-section-{{ section.id }} .eeadv-content-button:hover,
		#shopify-section-{{ section.id }} .eeadv-content-button-link:not(.eeadv-sticky-cart-button):not(.eeadv-sticky-cart-button-transparent):hover {
			background: currentColor !important;
			color: {{ section.settings.section_background_color | default: '#ffffff' }} !important;
			text-decoration: none !important;
		}
	{%- endif -%}

	#shopify-section-{{ section.id }} .heading-block h1,
	#shopify-section-{{ section.id }} .heading-block h2,
	#shopify-section-{{ section.id }} .heading-block h3,
	#shopify-section-{{ section.id }} .heading-block h4,
	#shopify-section-{{ section.id }} .heading-block h5,
	#shopify-section-{{ section.id }} .heading-block h6 {
		margin: 0;
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .eeadv-breadcrumbs {
		margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 7px;
		color: {% if section.settings.use_theme_colors %}{{ settings.body_color }}{% else %}{{ section.settings.breadcrumb_color }}{% endif %};
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .eeadv-breadcrumbs a {
		text-decoration: none;
		color: inherit;
	}

	#shopify-section-{{ section.id }} .eeadv-section-main {
		display: grid;
		grid-template-columns: minmax(0, calc(100% - var(--side-bar-width) - 125px)) minmax(0, calc(var(--side-bar-width) + 25px));
		gap: 10px;
		max-width: calc(100% - 50px);
		margin: 0 auto;
	}

	#shopify-section-{{ section.id }} .eeadv-section-main:not([style*="--side-bar-width"]) {
		grid-template-columns: 1fr;
		max-width: calc(100% - 100px);
	}

	/* Override max-width on mobile when sidebar is hidden */
	@media (max-width: 768px) {
		{%- unless show_sidebar -%}
		#shopify-section-{{ section.id }} .eeadv-section-main:not([style*="--side-bar-width"]) {
			max-width: 100%;
		}
		{%- endunless -%}
	}

	#shopify-section-{{ section.id }} .eeadv-section-content {
		width: 100%;
	}

	#shopify-section-{{ section.id }} .eeadv-section-sidebar {
		background-color: {% if section.settings.use_theme_colors %}{{ settings.section_background_color }}{% else %}{{ section.settings.sidebar_background_color }}{% endif %};
		{%- assign sidebar_block = section.blocks | where: 'type', 'sidebar' | first -%}
		{%- if sidebar_block -%}
			padding: {{ sidebar_block.settings.sidebar_padding_top | default: 20 }}px 20px {{ sidebar_block.settings.sidebar_padding_bottom | default: 20 }}px;
		{%- else -%}
			padding: 20px;
		{%- endif -%}
		border-radius: 8px;
		position: sticky;
		top: 20px;
		align-self: flex-start;
		max-height: calc(100vh - 40px);
		overflow-y: auto;
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-featured-product {
		margin-bottom: 30px;
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-featured-product h3 {
		font-size: 20px;
    line-height: 24px;
    text-align: center;
    margin-bottom: 10px;
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-featured-product .eeadv-image-container {
		margin-bottom: 15px;
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-product-image {
		display: block;
		width: 100%;
		height: auto;
		max-width: 100%;
		margin: 0 auto;
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-custom-description {
		margin-bottom: 15px;
		text-align: center;
		font-size: 14px;
		line-height: 1.4;
	}

	  #shopify-section-{{ section.id }} .eeadv-sidebar-product-link {
    /* Additional specific styling for sidebar product links */
		letter-spacing: var(--letter-spacing-body);
		width: 100% !important;
		display: block !important;
	}

	/* Make entire sidebar clickable when product is set */
	#shopify-section-{{ section.id }} .eeadv-sidebar-featured-product.eeadv-clickable-sidebar {
		cursor: pointer;
		transition: all 0.3s ease;
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-featured-product.eeadv-clickable-sidebar:hover {
		/* Removed hover shadow effect */
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-rating {
		background-color: {% if section.settings.use_theme_colors %}{{ settings.section_background_color }}{% else %}{{ section.settings.rating_background_color }}{% endif %};
	}

	#shopify-section-{{ section.id }} .eeadv-sidebar-rating h4 {
		padding: 12px 0;
    text-align: center;
    margin: 0;
    color: {% if section.settings.use_theme_colors %}{{ settings.body_color }}{% else %}{{ section.settings.sidebar_title_color }}{% endif %};
    border-bottom: 1px solid #dfdfdf;
    font-size: 20px;
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .eeadv-ratings-by-star {
		padding: 10px;
    margin-bottom: 20px;
	}

	#shopify-section-{{ section.id }} .eeadv-total-rating {
		display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 17px;
    padding: 12px 0;
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .eeadv-ratings-by-star .eeadv-stars-wrapper {
		display: flex;
    gap: 3px;
	}

	#shopify-section-{{ section.id }} .eeadv-ratings-by-star .eeadv-stars-wrapper > svg {
		width: 16px;
    height: auto;
	}

	#shopify-section-{{ section.id }} .eeadv-ratings-by-star .eeadv-ratings {
		display: flex;
    flex-direction: column-reverse;
    gap: 10px;
	}

	#shopify-section-{{ section.id }} .eeadv-star-bar {
		display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 3fr) minmax(0, 35px);
    gap: 5px;
    justify-content: space-between;
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .eeadv-star-bar > div:last-child {
		font-weight: 700 !important;
	}

	#shopify-section-{{ section.id }} .eeadv-review-rating-text {
		font-weight: 700 !important;
	}

	#shopify-section-{{ section.id }} .eeadv-rating-bar {
		position: relative;
    flex: 1;
    height: 25px;
    border: 1px solid #dedede;
	}

	#shopify-section-{{ section.id }} .eeadv-rating-progress {
		display: block;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background-color: {% if section.settings.use_theme_colors %}{{ settings.button_background_color }}{% else %}{{ section.settings.rating_bar_color }}{% endif %};
    width: var(--bar-progress);
	}

	#shopify-section-{{ section.id }} .eeadv-features {
		display: flex;
    flex-direction: column;
    gap: 0;
		padding: 15px;
		border: 1px solid #e0e0e0;
		border-radius: 0px;
		background-color: {{ section.settings.rating_background_color }};
	}

	#shopify-section-{{ section.id }} .eeadv-feature {
		display: flex;
		align-items: center;
    justify-content: space-between;
    gap: 10px;
		letter-spacing: var(--letter-spacing-body);
		padding: 12px 0;
		border-bottom: 1px solid #f0f0f0;
	}

	#shopify-section-{{ section.id }} .eeadv-feature:last-child {
		border-bottom: none;
	}

	#shopify-section-{{ section.id }} .eeadv-feature-title {
		font-weight: var(--font-weight-semibold);
		letter-spacing: var(--letter-spacing-body);
	}

	/* Rich Text Bold Styling - Ensure all bold text uses font-weight: 700 !important */
	#shopify-section-{{ section.id }} strong,
	#shopify-section-{{ section.id }} b,
	#shopify-section-{{ section.id }} .rich-text strong,
	#shopify-section-{{ section.id }} .rich-text b,
	#shopify-section-{{ section.id }} .rte strong,
	#shopify-section-{{ section.id }} .rte b,
	#shopify-section-{{ section.id }} .text-block strong,
	#shopify-section-{{ section.id }} .text-block b,
	#shopify-section-{{ section.id }} .eeadv-basic-text-block strong,
	#shopify-section-{{ section.id }} .eeadv-basic-text-block b,
	#shopify-section-{{ section.id }} .eeadv-heading-block strong,
	#shopify-section-{{ section.id }} .eeadv-heading-block b,
	#shopify-section-{{ section.id }} .eeadv-rating-block-text strong,
	#shopify-section-{{ section.id }} .eeadv-rating-block-text b,
	#shopify-section-{{ section.id }} .eeadv-author-name strong,
	#shopify-section-{{ section.id }} .eeadv-author-name b,
	#shopify-section-{{ section.id }} .eeadv-sidebar-title strong,
	#shopify-section-{{ section.id }} .eeadv-sidebar-title b,

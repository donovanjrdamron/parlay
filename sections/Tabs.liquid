{% comment %}
  Tabs Section
  Mobile: Horizontal tab buttons with content slider
  Desktop: Vertical layout with tab buttons and scrollable content
{% endcomment %}

<section class="tabs section-{{ section.id }}" data-section-id="{{ section.id }}" data-show-only-current="{{ section.settings.show_only_current_active }}">
  <div class="container page-width">
    <div class="ss-content-wrapper">

      {% comment %} Heading {% endcomment %}
      {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="ss-header-wrapper ss-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="ss-highlighted-text ss-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="ss-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="ss-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="ss-highlighted-text ss-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
            {% when 'inline_first' %}
              <{{ section.settings.heading_tag }} class="ss-heading">
                {% if section.settings.highlighted_text != blank %}
                  <span class="ss-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
            {% when 'inline_second' %}
              <{{ section.settings.heading_tag }} class="ss-heading">
                {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                {% if section.settings.highlighted_text != blank %}
                  <span class="ss-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
      {% endif %}

      {% comment %} Subtext {% endcomment %}
      {% if section.settings.subtext != blank %}
        <div class="ss-subtext-wrapper ss-align-{{ section.settings.heading_text_align }}">
          <p class="ss-subtext">{{ section.settings.subtext }}</p>
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}

        {% comment %} Mobile: Tabs Container {% endcomment %}
        <div class="ss-mobile-container">

          {% comment %} Mobile: Tab Buttons {% endcomment %}
          <div class="ss-progress-mobile">
          {% for block in section.blocks %}
            {% if block.type == 'step' %}
              <button class="ss-tab-button ss-button-position-{{ section.settings.button_text_position_mobile }} {% if forloop.first %}ss-active{% endif %}" data-step="{{ forloop.index }}">

                {% comment %} Icon/Image {% endcomment %}
                {% if block.settings.button_icon_type != 'none' %}
                  <span class="ss-button-icon">
                    {% if block.settings.button_icon_type == 'image' %}
                      {% if block.settings.button_icon_image != blank %}
                        <img src="{{ block.settings.button_icon_image | image_url: width: 100 }}" alt="{{ block.settings.tab_button_text }}" class="ss-button-icon-image">
                      {% else %}
                        <svg class="ss-button-icon-placeholder" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/></svg>
                      {% endif %}
                    {% elsif block.settings.button_icon_type == 'svg' %}
                      <span class="ss-button-icon-svg">{{ block.settings.button_icon_svg }}</span>
                    {% elsif block.settings.button_icon_type == 'icon' %}
                      <span class="material-icons ss-button-material-icon">{{ block.settings.button_icon_name | default: 'star' }}</span>
                    {% endif %}
                  </span>
                {% endif %}

                {% comment %} Text {% endcomment %}
                <span class="ss-button-text">{{ block.settings.tab_button_text | default: "Tab" }}</span>

              </button>
            {% endif %}
          {% endfor %}
        </div>

        {% comment %} Mobile: Tab Content {% endcomment %}
        <div class="ss-tab-content-container">
          {% for block in section.blocks %}
            {% if block.type == 'step' %}
              <div class="ss-tab-content {% if forloop.first %}ss-active{% endif %}" data-tab-index="{{ forloop.index }}" {{ block.shopify_attributes }}>

                {% comment %} Image {% endcomment %}
                <div class="ss-step-image-wrapper">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                              {{ block.settings.image | image_url: width: 600 }} 600w,
                              {{ block.settings.image | image_url: width: 800 }} 800w"
                      sizes="(max-width: 768px) 90vw, 600px"
                      alt="{{ block.settings.step_heading | escape }}"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      loading="lazy"
                      class="ss-step-image"
                    >
                  {% else %}
                    <div class="ss-image-placeholder">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}
                </div>

                {% comment %} Content {% endcomment %}
                <div class="ss-step-content">
                  {% if block.settings.step_heading != blank %}
                    <h3 class="ss-step-heading">{{ block.settings.step_heading }}</h3>
                  {% endif %}
                  {% if block.settings.step_text != blank %}
                    <div class="ss-step-text rte">{{ block.settings.step_text }}</div>
                  {% endif %}
                </div>

              </div>
            {% elsif block.type == 'custom_html' %}
              <div class="ss-tab-content ss-custom-html-tab {% if forloop.first %}ss-active{% endif %}" data-tab-index="{{ forloop.index }}" {{ block.shopify_attributes }}>
                <div class="ss-custom-html">
                  {{ block.settings.html_content }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        </div>

        {% comment %} Desktop: Vertical Tabs Container {% endcomment %}
        <div class="ss-desktop-container">
          
          {% comment %} Desktop Tab Buttons {% endcomment %}
          <div class="ss-desktop-progress">
            {% for block in section.blocks %}
              {% if block.type == 'step' %}
                <button class="ss-desktop-tab-button ss-button-position-{{ section.settings.button_text_position_desktop }} {% if forloop.first %}ss-active{% endif %}" data-desktop-step="{{ forloop.index }}">

                  {% comment %} Icon/Image {% endcomment %}
                  {% if block.settings.button_icon_type != 'none' %}
                    <span class="ss-button-icon">
                      {% if block.settings.button_icon_type == 'image' %}
                        {% if block.settings.button_icon_image != blank %}
                          <img src="{{ block.settings.button_icon_image | image_url: width: 100 }}" alt="{{ block.settings.tab_button_text }}" class="ss-button-icon-image">
                        {% else %}
                          <svg class="ss-button-icon-placeholder" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/></svg>
                        {% endif %}
                      {% elsif block.settings.button_icon_type == 'svg' %}
                        <span class="ss-button-icon-svg">{{ block.settings.button_icon_svg }}</span>
                      {% elsif block.settings.button_icon_type == 'icon' %}
                        <span class="material-icons ss-button-material-icon">{{ block.settings.button_icon_name | default: 'star' }}</span>
                      {% endif %}
                    </span>
                  {% endif %}

                  {% comment %} Text {% endcomment %}
                  <span class="ss-button-text">{{ block.settings.tab_button_text | default: "Tab" }}</span>

                </button>
              {% endif %}
            {% endfor %}
          </div>

          {% comment %} Desktop Tab Content {% endcomment %}
          <div class="ss-desktop-tab-content-container">
            {% for block in section.blocks %}
              {% if block.type == 'step' %}
                <div class="ss-desktop-tab-content {% if forloop.first %}ss-active{% endif %}" data-desktop-tab-index="{{ forloop.index }}" {{ block.shopify_attributes }}>

                  {% comment %} Tab Content {% endcomment %}
                  <div class="ss-step-main">

                    {% comment %} Image {% endcomment %}
                    <div class="ss-step-image-wrapper">
                      {% if block.settings.image != blank %}
                        <img
                          src="{{ block.settings.image | image_url: width: 800 }}"
                          srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                                  {{ block.settings.image | image_url: width: 600 }} 600w,
                                  {{ block.settings.image | image_url: width: 800 }} 800w"
                          sizes="(max-width: 768px) 90vw, 600px"
                          alt="{{ block.settings.step_heading | escape }}"
                          width="{{ block.settings.image.width }}"
                          height="{{ block.settings.image.height }}"
                          loading="lazy"
                          class="ss-step-image"
                        >
                      {% else %}
                        <div class="ss-image-placeholder">
                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        </div>
                      {% endif %}
                    </div>

                    {% comment %} Text Content {% endcomment %}
                    <div class="ss-step-content">
                      {% if block.settings.step_heading != blank %}
                        <h3 class="ss-step-heading">{{ block.settings.step_heading }}</h3>
                      {% endif %}
                      {% if block.settings.step_text != blank %}
                        <div class="ss-step-text rte">{{ block.settings.step_text }}</div>
                      {% endif %}
                    </div>

                  </div>
                </div>
              {% elsif block.type == 'custom_html' %}
                <div class="ss-desktop-tab-content ss-custom-html-desktop {% if forloop.first %}ss-active{% endif %}" data-desktop-tab-index="{{ forloop.index }}" {{ block.shopify_attributes }}>
                  <div class="ss-custom-html">
                    {{ block.settings.html_content }}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

      {% endif %}

    </div>
  </div>
</section>

{% comment %} Google Material Icons {% endcomment %}
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<style>
  /* ===========================
     Section Base
     =========================== */
  .section-{{ section.id }} {
    {% if section.settings.use_theme_colors %}
      {% if settings.global_section_use_gradient_background %}
        background: var(--gradient-background);
      {% else %}
        background-color: {{ settings.global_section_background_color }};
      {% endif %}
    {% else %}
      {% if section.settings.enable_gradient_background %}
        background: {{ section.settings.gradient_background }};
      {% else %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
    {% endif %}
    padding-top: {{ section.settings.section_padding_top_mobile }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.section_padding_top_desktop }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_desktop }}px;
    }
  }

  /* ===========================
     Alignment Utilities
     =========================== */
  .section-{{ section.id }} .ss-align-left {
    text-align: left;
  }

  .section-{{ section.id }} .ss-align-center {
    text-align: center;
  }

  .section-{{ section.id }} .ss-align-right {
    text-align: right;
  }

  /* ===========================
     Heading
     =========================== */
  .section-{{ section.id }} .ss-heading {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    letter-spacing: {{ settings.heading_letter_spacing | divided_by: 1000.0 }}em;
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: {{ section.settings.heading_color }};
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.heading_font_size_desktop }}px;
      font-weight: {{ settings.heading_font_weight }};
    {% else %}
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      font-weight: {{ section.settings.heading_font_weight }};
    {% endif %}
    line-height: 1.2;
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
  }

  /* ===========================
     Highlighted Text
     =========================== */
  .section-{{ section.id }} .ss-highlighted-text {
    display: inline-block;
    font-family: {{ settings.highlighted_text_font.family }}, {{ settings.highlighted_text_font.fallback_families }};
    text-transform: {{ settings.highlighted_text_transform }};
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      {% else %}
        color: {{ settings.highlighted_text_solid_color }};
      {% endif %}
    {% else %}
      {% if section.settings.highlighted_gradient_enabled %}
        background: {{ section.settings.highlighted_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      {% else %}
        color: {{ section.settings.highlighted_color }};
      {% endif %}
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.highlighted_text_font_size_desktop }}px;
      font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% else %}
      font-size: {{ section.settings.highlighted_font_size_desktop }}px;
      font-weight: {{ section.settings.highlighted_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% endif %}
  }

  .section-{{ section.id }} .ss-highlighted-separate {
    display: block;
    width: 100%;
    margin-bottom: {{ section.settings.highlighted_spacing }}px;
  }

  /* ===========================
     Subtext
     =========================== */
  .section-{{ section.id }} .ss-subtext {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    {% if section.settings.use_theme_colors %}
      color: {{ settings.text_color }};
    {% else %}
      color: {{ section.settings.subtext_color }};
    {% endif %}
    font-size: {{ section.settings.subtext_font_size_mobile }}px;
    line-height: 1.6;
    margin: 0 0 {{ section.settings.subtext_margin_bottom }}px 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .ss-subtext {
      font-size: {{ section.settings.subtext_font_size_desktop }}px;
    }
  }

  /* ===========================
     Mobile Container
     =========================== */
  .section-{{ section.id }} .ss-mobile-container {
    display: block;
  }

  /* ===========================
     Mobile Tab Buttons
     =========================== */
  .section-{{ section.id }} .ss-progress-mobile {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-bottom: {{ section.settings.progress_spacing_mobile }}px;
    gap: {{ section.settings.button_gap_mobile }}px;
    flex-wrap: wrap;
    padding: {{ section.settings.button_wrap_padding }}px;
    border-radius: {{ section.settings.button_wrap_border_radius }}px;
    border: {{ section.settings.button_wrap_border_width }}px solid {{ section.settings.button_wrap_border_color }};
  }

  .section-{{ section.id }} .ss-tab-button {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
    background: {{ section.settings.progress_circle_inactive_bg }};
    border: {{ section.settings.progress_circle_border_width }}px solid {{ section.settings.progress_circle_border_color }};
    border-radius: 8px;
    font-size: {{ section.settings.button_inactive_font_size_mobile }}px;
    font-weight: {{ section.settings.button_inactive_font_weight }};
    color: {{ section.settings.progress_circle_text_color }};
    transition: all 0.3s ease;
    cursor: pointer;
    user-select: none;
    text-align: {{ section.settings.button_text_align_mobile }};
    font-family: inherit;
    gap: {{ section.settings.button_icon_text_gap_mobile }}px;
  }

  /* Button position layouts - Mobile */
  .section-{{ section.id }} .ss-tab-button.ss-button-position-top {
    flex-direction: column-reverse;
  }

  .section-{{ section.id }} .ss-tab-button.ss-button-position-bottom {
    flex-direction: column;
  }

  .section-{{ section.id }} .ss-tab-button.ss-button-position-left {
    flex-direction: row-reverse;
  }

  .section-{{ section.id }} .ss-tab-button.ss-button-position-right {
    flex-direction: row;
  }

  .section-{{ section.id }} .ss-tab-button:hover {
    opacity: 0.8;
  }

  .section-{{ section.id }} .ss-tab-button.ss-active {
    background: {{ section.settings.progress_circle_active_bg }};
    color: {{ section.settings.progress_circle_active_text_color }};
    border-color: {{ section.settings.progress_circle_active_border_color }};
    font-size: {{ section.settings.button_active_font_size_mobile }}px;
    font-weight: {{ section.settings.button_active_font_weight }};
  }

  /* Button icon styles */
  .section-{{ section.id }} .ss-button-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.button_icon_color_inactive }};
  }

  .section-{{ section.id }} .ss-tab-button.ss-active .ss-button-icon {
    color: {{ section.settings.button_icon_color_active }};
  }

  .section-{{ section.id }} .ss-button-material-icon {
    font-size: {{ section.settings.button_icon_size_mobile }}px;
    width: {{ section.settings.button_icon_size_mobile }}px;
    height: {{ section.settings.button_icon_size_mobile }}px;
  }

  .section-{{ section.id }} .ss-button-icon-svg {
    font-size: {{ section.settings.button_icon_size_mobile }}px;
    width: {{ section.settings.button_icon_size_mobile }}px;
    height: {{ section.settings.button_icon_size_mobile }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-{{ section.id }} .ss-button-icon-svg svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .section-{{ section.id }} .ss-button-icon-image {
    width: {{ section.settings.button_image_size_mobile }}px;
    height: {{ section.settings.button_image_size_mobile }}px;
    object-fit: contain;
    border-radius: {{ section.settings.button_image_border_radius }}px;
  }

  .section-{{ section.id }} .ss-button-icon-placeholder {
    width: {{ section.settings.button_image_size_mobile }}px;
    height: {{ section.settings.button_image_size_mobile }}px;
    opacity: 0.3;
    border-radius: {{ section.settings.button_image_border_radius }}px;
  }

  /* Hide button text on mobile if disabled */
  {% unless section.settings.button_enable_text_mobile %}
  .section-{{ section.id }} .ss-tab-button .ss-button-text {
    display: none;
  }
  {% endunless %}

  /* ===========================
     Mobile Tab Content
     =========================== */
  .section-{{ section.id }} .ss-tab-content-container {
    margin-top: {{ section.settings.progress_spacing_mobile }}px;
  }

  .section-{{ section.id }} .ss-tab-content {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .section-{{ section.id }} .ss-tab-content.ss-active {
    display: block;
    opacity: 1;
  }

  /* ===========================
     Desktop: Vertical Tabs (Hidden on Mobile)
     =========================== */
  .section-{{ section.id }} .ss-desktop-container {
    display: none;
  }

  /* ===========================
     Tab Image
     =========================== */
  .section-{{ section.id }} .ss-step-image-wrapper {
    width: 100%;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
    margin-bottom: {{ section.settings.image_spacing_mobile }}px;
  }

  .section-{{ section.id }} .ss-step-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .section-{{ section.id }} .ss-image-placeholder {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-{{ section.id }} .ss-image-placeholder svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  /* ===========================
     Tab Content
     =========================== */
  .section-{{ section.id }} .ss-step-content {
    padding: 12px;
    background: transparent;
    border-radius: 8px;
  }

  .section-{{ section.id }} .ss-step-heading {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-size: 20px;
    font-weight: 600;
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: #ffffff;
    {% endif %}
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .section-{{ section.id }} .ss-step-text {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 14px;
    {% if section.settings.use_theme_colors %}
      color: {{ settings.text_color }};
    {% else %}
      color: #ffffff;
    {% endif %}
    line-height: 1.6;
    margin: 0;
  }

  /* ===========================
     Custom HTML
     =========================== */
  .section-{{ section.id }} .ss-custom-html {
    width: 100%;
  }

  .section-{{ section.id }} .ss-custom-html-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
  }

  .section-{{ section.id }} .ss-custom-html-step {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* ===========================
     Desktop Responsive
     =========================== */
  @media screen and (min-width: 750px) {

    /* Hide mobile container */
    .section-{{ section.id }} .ss-mobile-container {
      display: none;
    }

    /* Desktop Container - Vertical Stack */
    .section-{{ section.id }} .ss-desktop-container {
      display: flex;
      flex-direction: column;
      gap: {{ section.settings.progress_to_content_gap }}px;
      align-items: center;
    }

    /* Desktop Tab Buttons (Horizontal, at top) */
    .section-{{ section.id }} .ss-desktop-progress {
      flex-shrink: 0;
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: {{ section.settings.button_gap_desktop }}px;
      flex-wrap: wrap;
      justify-content: center;
      padding: {{ section.settings.button_wrap_padding }}px;
      border-radius: {{ section.settings.button_wrap_border_radius }}px;
      border: {{ section.settings.button_wrap_border_width }}px solid {{ section.settings.button_wrap_border_color }};
    }

    .section-{{ section.id }} .ss-desktop-tab-button {
      width: {{ section.settings.desktop_tab_button_width }}px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: {{ section.settings.button_padding_vertical_desktop }}px {{ section.settings.button_padding_horizontal_desktop }}px;
      background: {{ section.settings.progress_circle_inactive_bg }};
      border: {{ section.settings.progress_circle_border_width }}px solid {{ section.settings.progress_circle_border_color }};
      border-radius: 8px;
      font-size: {{ section.settings.button_inactive_font_size_desktop }}px;
      font-weight: {{ section.settings.button_inactive_font_weight }};
      color: {{ section.settings.progress_circle_text_color }};
      transition: all 0.3s ease;
      cursor: pointer;
      user-select: none;
      text-align: {{ section.settings.button_text_align_desktop }};
      font-family: inherit;

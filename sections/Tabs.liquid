<script>
(function() {
  const section = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!section) return;

  const tabButtons = section.querySelectorAll('.ss-tab-button');
  const tabContents = section.querySelectorAll('.ss-tab-content');
  const desktopTabButtons = section.querySelectorAll('.ss-desktop-tab-button');
  const desktopTabContents = section.querySelectorAll('.ss-desktop-tab-content');

  const showOnlyCurrent = section.getAttribute('data-show-only-current') === 'true';

  // Mobile: Tab button click handlers
  tabButtons.forEach((button, index) => {
    button.addEventListener('click', () => {
      // Update button states
      tabButtons.forEach((btn, btnIndex) => {
        if (showOnlyCurrent) {
          // Only highlight clicked button
          if (btnIndex === index) {
            btn.classList.add('ss-active');
          } else {
            btn.classList.remove('ss-active');
          }
        } else {
          // Highlight all buttons up to clicked
          if (btnIndex <= index) {
            btn.classList.add('ss-active');
          } else {
            btn.classList.remove('ss-active');
          }
        }
      });

      // Show corresponding content
      tabContents.forEach((content, contentIndex) => {
        if (contentIndex === index) {
          content.classList.add('ss-active');
        } else {
          content.classList.remove('ss-active');
        }
      });
    });
  });

  // Desktop: Tab button click handlers
  desktopTabButtons.forEach((button, index) => {
    button.addEventListener('click', () => {
      // Update button states
      desktopTabButtons.forEach((btn, btnIndex) => {
        if (showOnlyCurrent) {
          // Only highlight clicked button
          if (btnIndex === index) {
            btn.classList.add('ss-active');
          } else {
            btn.classList.remove('ss-active');
          }
        } else {
          // Highlight all buttons up to clicked
          if (btnIndex <= index) {
            btn.classList.add('ss-active');
          } else {
            btn.classList.remove('ss-active');
          }
        }
      });

      // Show corresponding content
      desktopTabContents.forEach((content, contentIndex) => {
        if (contentIndex === index) {
          content.classList.add('ss-active');
        } else {
          content.classList.remove('ss-active');
        }
      });
    });
  });
})();
</script>


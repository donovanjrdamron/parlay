{% comment %}
  Customer Review Slider - Basic Implementation
  Follows established section patterns with heading scaffold and functional slider
{% endcomment %}

<section class="customer-review-slider section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    <div class="crs-content-wrapper">

      {% comment %} Heading {% endcomment %}
      {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="crs-header-wrapper crs-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="crs-highlighted-text crs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="crs-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="crs-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="crs-highlighted-text crs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
            {% when 'inline_first' %}
              <{{ section.settings.heading_tag }} class="crs-heading">
                {% if section.settings.highlighted_text != blank %}
                  <span class="crs-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
            {% when 'inline_second' %}
              <{{ section.settings.heading_tag }} class="crs-heading">
                {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                {% if section.settings.highlighted_text != blank %}
                  <span class="crs-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
      {% endif %}

      {% comment %} Intro Text {% endcomment %}
      {% if section.settings.intro_text != blank %}
        <div class="crs-intro-text crs-align-{{ section.settings.heading_text_align }} rte">
          {{ section.settings.intro_text }}
        </div>
      {% endif %}

      {% comment %} Review Slider {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="crs-slider" data-slider-container>
          <div class="crs-slider-viewport" data-slider-viewport>
            <div class="crs-slider-track" data-slider-track>
              {% for block in section.blocks %}
                {% if block.type == 'review' %}
                  {% assign custom_html = block.settings.custom_html %}
                  {% assign custom_position = block.settings.custom_html_position %}

                  {% assign product = nil %}
                  {% assign product_variant = nil %}
                  {% if block.settings.product_reference != blank %}
                    {% assign product = all_products[block.settings.product_reference] %}
                    {% if product and product.selected_or_first_available_variant %}
                      {% assign product_variant = product.selected_or_first_available_variant %}
                    {% endif %}
                  {% endif %}

                  {% assign product_image = block.settings.product_image %}
                  {% if product_image == blank and product and product.featured_image %}
                    {% assign product_image = product.featured_image %}
                  {% endif %}

                  {% assign display_product_title = block.settings.product_title_override %}
                  {% if display_product_title == blank and product %}
                    {% assign display_product_title = product.title %}
                  {% endif %}

                  {% assign display_product_price = block.settings.product_price_override %}
                  {% if display_product_price == blank and product_variant %}
                    {% assign display_product_price = product_variant.price | money %}
                  {% endif %}

                  {% assign display_compare_price = block.settings.product_compare_price_override %}
                  {% if display_compare_price == blank and product_variant and product_variant.compare_at_price > product_variant.price %}
                    {% assign display_compare_price = product_variant.compare_at_price | money %}
                  {% endif %}

                  {% assign display_purchase_text = block.settings.purchase_date_text %}

                  {% assign has_product_info = false %}
                  {% if display_product_title != blank or display_product_price != blank or display_compare_price != blank or display_purchase_text != blank or product_image != blank %}
                    {% assign has_product_info = true %}
                  {% endif %}


                  <div class="crs-slide" data-slider-slide {{ block.shopify_attributes }}>
                    <div class="crs-card">
                      {% if custom_html != blank and custom_position == 'above_image' %}
                        <div class="crs-custom-html">{{ custom_html }}</div>
                      {% endif %}

                      {% if section.settings.show_images %}
                        <div class="crs-card-image crs-aspect-{{ section.settings.image_aspect_ratio }}">
                          {% if block.settings.customer_image != blank %}
                            {{ block.settings.customer_image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'crs-image', alt: block.settings.customer_name | default: 'Customer photo' }}
                          {% else %}
                            <div class="crs-image-placeholder">
                              {{ 'image' | placeholder_svg_tag: 'placeholder-svg crs-image' }}
                            </div>
                          {% endif %}
                        </div>
                      {% endif %}

                      {% if custom_html != blank and custom_position == 'below_image' %}
                        <div class="crs-custom-html">{{ custom_html }}</div>
                      {% endif %}

                      <div class="crs-card-body">
                        {% if block.settings.rating > 0 %}
                          {% if custom_html != blank and custom_position == 'above_rating' %}
                            <div class="crs-custom-html crs-custom-html--compact">{{ custom_html }}</div>
                          {% endif %}
                          <div class="crs-rating" aria-label="Rated {{ block.settings.rating }} out of 5">
                            {% for star in (1..5) %}
                              <span class="crs-star {% if star <= block.settings.rating %}crs-star-filled{% endif %}">&#9733;</span>
                            {% endfor %}
                          </div>
                        {% endif %}

                        <div class="crs-customer-info-wrapper">
                          <div class="crs-customer-name-age">
                            <span class="crs-customer-name">{{ block.settings.customer_name }}</span>
                            {% if block.settings.customer_age != blank %}
                              <span class="crs-customer-age">{{ block.settings.customer_age }}</span>
                            {% endif %}
                          </div>
                          <div class="crs-verified-badge">
                            <svg class="crs-verified-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.5924 3.20027C9.34888 3.4078 9.22711 3.51158 9.09706 3.59874C8.79896 3.79854 8.46417 3.93721 8.1121 4.00672C7.95851 4.03705 7.79903 4.04977 7.48008 4.07522C6.6787 4.13918 6.278 4.17115 5.94371 4.28923C5.17051 4.56233 4.56233 5.17051 4.28923 5.94371C4.17115 6.278 4.13918 6.6787 4.07522 7.48008C4.04977 7.79903 4.03705 7.95851 4.00672 8.1121C3.93721 8.46417 3.79854 8.79896 3.59874 9.09706C3.51158 9.22711 3.40781 9.34887 3.20027 9.5924C2.67883 10.2043 2.4181 10.5102 2.26522 10.8301C1.91159 11.57 1.91159 12.43 2.26522 13.1699C2.41811 13.4898 2.67883 13.7957 3.20027 14.4076C3.40778 14.6511 3.51158 14.7729 3.59874 14.9029C3.79854 15.201 3.93721 15.5358 4.00672 15.8879C4.03705 16.0415 4.04977 16.201 4.07522 16.5199C4.13918 17.3213 4.17115 17.722 4.28923 18.0563C4.56233 18.8295 5.17051 19.4377 5.94371 19.7108C6.278 19.8288 6.6787 19.8608 7.48008 19.9248C7.79903 19.9502 7.95851 19.963 8.1121 19.9933C8.46417 20.0628 8.79896 20.2015 9.09706 20.4013C9.22711 20.4884 9.34887 20.5922 9.5924 20.7997C10.2043 21.3212 10.5102 21.5819 10.8301 21.7348C11.57 22.0884 12.43 22.0884 13.1699 21.7348C13.4898 21.5819 13.7957 21.3212 14.4076 20.7997C14.6511 20.5922 14.7729 20.4884 14.9029 20.4013C15.201 20.2015 15.5358 20.0628 15.8879 19.9933C16.0415 19.963 16.201 19.9502 16.5199 19.9248C17.3213 19.8608 17.722 19.8288 18.0563 19.7108C18.8295 19.4377 19.4377 18.8295 19.7108 18.0563C19.8288 17.722 19.8608 17.3213 19.9248 16.5199C19.9502 16.201 19.963 16.0415 19.9933 15.8879C20.0628 15.5358 20.2015 15.201 20.4013 14.9029C20.4884 14.7729 20.5922 14.6511 20.7997 14.4076C21.3212 13.7957 21.5819 13.4898 21.7348 13.1699C22.0884 12.43 22.0884 11.57 21.7348 10.8301C21.5819 10.5102 21.3212 10.2043 20.7997 9.5924C20.5922 9.34887 20.4884 9.22711 20.4013 9.09706C20.2015 8.79896 20.0628 8.46417 19.9933 8.1121C19.963 7.95851 19.9502 7.79903 19.9248 7.48008C19.8608 6.6787 19.8288 6.278 19.7108 5.94371C19.4377 5.17051 18.8295 4.56233
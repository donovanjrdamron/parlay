<script>
  document.addEventListener('DOMContentLoaded', function () {
    var section = document.querySelector('.section-{{ section.id }}');
    if (!section) return;

    var reviewBlocks = section.querySelectorAll('[data-review-text]');

    reviewBlocks.forEach(function (review) {
      var toggle = review.nextElementSibling && review.nextElementSibling.hasAttribute('data-review-toggle')
        ? review.nextElementSibling
        : null;
      if (!toggle) return;

      var isOverflowing = review.scrollHeight > review.clientHeight + 1;

      if (isOverflowing) {
        toggle.textContent = 'Read more...';
        toggle.hidden = false;
        toggle.addEventListener('click', function () {
          var expanded = review.classList.toggle('crs-review-text--expanded');
          toggle.textContent = expanded ? 'Read less' : 'Read more...';
        });
      } else {
        review.classList.remove('crs-review-text--expanded');
        toggle.hidden = true;
      }
    });
  });
</script>


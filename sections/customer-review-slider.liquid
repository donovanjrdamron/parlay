                            </svg>
                            <span class="crs-verified-text">{{ section.settings.verified_badge_text }}</span>
                          </div>
                        </div>

                        {% if custom_html != blank and custom_position == 'below_name' %}
                          <div class="crs-custom-html crs-custom-html--compact">{{ custom_html }}</div>
                        {% endif %}

                        {% if custom_html != blank and custom_position == 'above_review' %}
                          <div class="crs-custom-html">{{ custom_html }}</div>
                        {% endif %}

                        {% if block.settings.review_text != blank %}
                          <div class="crs-review-text rte" data-review-text>
                            {{ block.settings.review_text }}
                          </div>
                          <button type="button" class="crs-read-more" data-review-toggle hidden>Read more...</button>
                        {% endif %}

                        {% if has_product_info %}
                          {% if custom_html != blank and custom_position == 'above_product' %}
                            <div class="crs-custom-html">{{ custom_html }}</div>
                          {% endif %}
                          <div class="crs-product">
                            {% if section.settings.show_images %}
                              <div class="crs-product-image">
                                {% if product_image != blank %}
                                  {{ product_image | image_url: width: 400 | image_tag: loading: 'lazy', class: 'crs-product-img', alt: display_product_title | default: 'Product image' }}
                                {% else %}
                                  <div class="crs-image-placeholder">
                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                  </div>
                                {% endif %}
                              </div>
                            {% endif %}
                            <div class="crs-product-info">
                              <p class="crs-product-name">{{ display_product_title | default: 'Product Name' }}</p>
                              <p class="crs-product-price">
                                {% if display_product_price != blank %}
                                  {{ display_product_price }}
                                {% else %}
                                  $29.99
                                {% endif %}
                                {% if display_compare_price != blank %}
                                  <span class="crs-product-compare-price">{{ display_compare_price }}</span>
                                {% endif %}
                              </p>
                              {% if display_purchase_text != blank %}
                                <p class="crs-product-purchase">{{ display_purchase_text }}</p>
                              {% endif %}
                            </div>
                          </div>
                          {% if custom_html != blank and custom_position == 'below_product' %}
                            <div class="crs-custom-html">{{ custom_html }}</div>
                          {% endif %}
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Custom HTML Blocks {% endcomment %}
      {% for block in section.blocks %}
        {% if block.type == 'custom_html' %}
          <div class="crs-custom-html-block" {{ block.shopify_attributes }}>
            {{ block.settings.html_content }}
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>

{%- style -%}
  .section-{{ section.id }} {
    {% if section.settings.use_theme_colors %}
      {% if section.settings.use_section_gradient %}
        background: {{ settings.section_gradient_background }};
      {% else %}
        background: {{ settings.section_background_color }};
      {% endif %}
    {% else %}
      {% if section.settings.gradient_enabled %}
        background: {{ section.settings.gradient_background }};
      {% else %}
        background: {{ section.settings.background_color }};
      {% endif %}
    {% endif %}
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }

  .section-{{ section.id }} .page-width {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .page-width {
      padding: 0 5rem;
    }
  }

  .section-{{ section.id }} .crs-header-wrapper {
    text-align: {{ section.settings.heading_text_align }};
    margin-bottom: {{ section.settings.header_spacing }}px;
  }

  .section-{{ section.id }} .crs-heading {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    letter-spacing: {{ settings.heading_letter_spacing | divided_by: 1000.0 }}em;
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: {{ section.settings.heading_color }};
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.heading_font_size_desktop }}px;
      font-weight: {{ settings.heading_font_weight }};
      text-transform: {{ settings.heading_text_transform }};
    {% else %}
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      font-weight: {{ section.settings.heading_font_weight }};
    {% endif %}
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    line-height: 1.2;
  }

  .section-{{ section.id }} .crs-highlighted-text {
    font-family: {{ settings.highlighted_text_font.family }}, {{ settings.highlighted_text_font.fallback_families }};
    text-transform: {{ settings.highlighted_text_transform }};
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ settings.highlighted_text_solid_color }};
      {% endif %}
    {% else %}
      {% if section.settings.highlighted_gradient_enabled %}
        background: {{ section.settings.highlighted_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ section.settings.highlighted_color }};
      {% endif %}
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.highlighted_text_font_size_desktop }}px;
      font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% else %}
      font-size: {{ section.settings.highlighted_font_size_desktop }}px;
      font-weight: {{ section.settings.highlighted_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% endif %}
  }

  .section-{{ section.id }} .crs-highlighted-separate {
    display: inline-block;
    margin-bottom: {{ section.settings.highlighted_spacing }}px;
  }

  .section-{{ section.id }} .crs-intro-text {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    {% if section.settings.use_theme_colors %}
      color: {{ settings.body_color }};
    {% else %}
      color: {{ section.settings.intro_text_color }};
    {% endif %}
    line-height: 1.6;
    margin-bottom: {{ section.settings.intro_spacing }}px;
  }

  .section-{{ section.id }} .crs-align-left { text-align: left; }
  .section-{{ section.id }} .crs-align-center { text-align: center; }
  .section-{{ section.id }} .crs-align-right { text-align: right; }

  .section-{{ section.id }} .crs-slider {
    position: relative;
  }

  .section-{{ section.id }} .crs-slider-viewport {
    overflow-x: auto;
    overflow-y: visible;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .section-{{ section.id }} .crs-slider-viewport::-webkit-scrollbar {
    height: 6px;
  }

  .section-{{ section.id }} .crs-slider-viewport::-webkit-scrollbar-track {
    background: rgba(15, 23, 42, 0.08);
    border-radius: 999px;
  }

  .section-{{ section.id }} .crs-slider-viewport::-webkit-scrollbar-thumb {
    background: rgba(15, 23, 42, 0.3);
    border-radius: 999px;
  }

  .section-{{ section.id }} .crs-slider-track {
    display: flex;
    gap: {{ section.settings.card_gap }}px;
    min-width: 100%;
    align-items: stretch;
  }

  .section-{{ section.id }} .crs-slide {
    flex: 0 0 calc({{ section.settings.slide_width_mobile }}% - 1rem);
    min-width: calc({{ section.settings.slide_width_mobile }}% - 1rem);
    scroll-snap-align: start;
    padding: {{ section.settings.slide_padding }}px;
    box-sizing: border-box;
    display: flex;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .crs-slide {
      flex: 0 0 calc({{ section.settings.slide_width_tablet }}% - 1rem);
      min-width: calc({{ section.settings.slide_width_tablet }}% - 1rem);
    }
  }

  @media screen and (min-width: 1024px) {
    .section-{{ section.id }} .crs-slide {
      flex: 0 0 calc({{ section.settings.slide_width_desktop }}% - 1rem);
      min-width: calc({{ section.settings.slide_width_desktop }}% - 1rem);
    }
  }

  .section-{{ section.id }} .crs-card {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }


  .section-{{ section.id }} .crs-card-image {
    width: 100%;
    background: rgba(15, 23, 42, 0.04);
    overflow: hidden;
    position: relative;
    margin-top: {{ section.settings.customer_image_margin_top }}px;
    margin-bottom: {{ section.settings.customer_image_margin_bottom }}px;
  }


  .section-{{ section.id }} .crs-aspect-square {
    aspect-ratio: 1 / 1;
  }

  .section-{{ section.id }} .crs-aspect-portrait {
    aspect-ratio: 3 / 4;
  }

  .section-{{ section.id }} .crs-aspect-landscape {
    aspect-ratio: 16 / 9;
  }

  .section-{{ section.id }} .crs-aspect-circle {
    aspect-ratio: 1 / 1;
    border-radius: 50%;
  }

  .section-{{ section.id }} .crs-image-placeholder {
    width: 100%;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(15, 23, 42, 0.06);
  }

  .section-{{ section.id }} .crs-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .section-{{ section.id }} .crs-card-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.card_body_gap }}px;
    flex: 1;
  }

  .section-{{ section.id }} .crs-card-body > :last-child {
    margin-top: auto;
  }

  .section-{{ section.id }} .crs-custom-html {
    margin: 0.5rem 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .section-{{ section.id }} .crs-custom-html--compact {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.3;
  }

  .section-{{ section.id }} .crs-customer-info-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: {{ section.settings.customer_info_bg_color }};
    padding: {{ section.settings.customer_info_padding }}px;
    border-radius: {{ section.settings.customer_info_border_radius }}px;
    border: {{ section.settings.customer_info_border_width }}px solid {{ section.settings.customer_info_border_color }};
    margin-top: {{ section.settings.customer_info_margin_top }}px;
    margin-bottom: {{ section.settings.customer_info_margin_bottom }}px;
  }

  .section-{{ section.id }} .crs-customer-name-age {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .section-{{ section.id }} .crs-customer-name {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    color: {{ section.settings.customer_name_color }};
    font-size: {{ section.settings.customer_name_size }}px;
    font-weight: {{ section.settings.customer_name_weight }};
    line-height: 1.2;
  }

  .section-{{ section.id }} .crs-customer-age {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    color: {{ section.settings.customer_age_color }};
    font-size: {{ section.settings.customer_age_size }}px;
    font-weight: {{ section.settings.customer_age_weight }};
    line-height: 1.2;
  }

  .section-{{ section.id }} .crs-verified-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .section-{{ section.id }} .crs-verified-icon {
    width: {{ section.settings.verified_badge_icon_size }}px;
    height: {{ section.settings.verified_badge_icon_size }}px;
    color: {{ section.settings.verified_badge_icon_color }};
    flex-shrink: 0;
  }

  .section-{{ section.id }} .crs-verified-text {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    color: {{ section.settings.verified_badge_text_color }};
    font-size: {{ section.settings.verified_badge_text_size }}px;
    font-weight: {{ section.settings.verified_badge_text_weight }};
    line-height: 1.2;
  }

  .section-{{ section.id }} .crs-rating {
    display: flex;
    gap: 0.25rem;
    color: {{ section.settings.star_filled_color }};
    font-size: {{ section.settings.star_size }}px;

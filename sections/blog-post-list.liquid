{% comment %}
  Blog Post List Section
  Displays blog posts in a grid or slider layout with featured images and metadata
{% endcomment %}

<section class="blog-post-list section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    <div class="bpl-content-wrapper">

      {% comment %} Heading {% endcomment %}
      {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="bpl-header-wrapper bpl-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="bpl-highlighted-text bpl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="bpl-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="bpl-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="bpl-highlighted-text bpl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
            {% when 'inline_first' %}
              <{{ section.settings.heading_tag }} class="bpl-heading">
                {% if section.settings.highlighted_text != blank %}
                  <span class="bpl-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
            {% when 'inline_second' %}
              <{{ section.settings.heading_tag }} class="bpl-heading">
                {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                {% if section.settings.highlighted_text != blank %}
                  <span class="bpl-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
      {% endif %}

      {% comment %} Subheading {% endcomment %}
      {% if section.settings.subheading != blank %}
        <div class="bpl-subheading bpl-align-{{ section.settings.heading_text_align }}">
          {{ section.settings.subheading }}
        </div>
      {% endif %}

      {% comment %} Blog Post Grid or Slider {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="bpl-layout-wrapper bpl-layout-mobile-{{ section.settings.layout_mobile }} bpl-layout-desktop-{{ section.settings.layout_desktop }}">
          <div class="bpl-slider" data-slider-container>
            <div class="bpl-slider-viewport" data-slider-viewport>
              <div class="bpl-slider-track" data-slider-track>

          {% for block in section.blocks %}
            {% if block.type == 'blog_post' %}
              {% comment %} Determine content source based on type {% endcomment %}
              {% case block.settings.content_type %}
                {% when 'article' %}
                  {% assign content_item = articles[block.settings.article] %}
                  {% assign content_url = content_item.url %}
                  {% assign default_image = content_item.image %}
                  {% assign default_title = content_item.title %}
                  {% assign default_excerpt = content_item.excerpt_or_content | strip_html | truncatewords: 20 %}
                  {% assign content_author = content_item.author %}
                  {% assign content_date = content_item.published_at %}
                {% when 'advertorial' %}
                  {% assign content_url = block.settings.advertorial_url %}
                  {% assign default_image = null %}
                  {% assign default_title = null %}
                  {% assign default_excerpt = null %}
                  {% assign content_author = null %}
                  {% assign content_date = null %}
                {% when 'listicle' %}
                  {% assign content_url = block.settings.listicle_url %}
                  {% assign default_image = null %}
                  {% assign default_title = null %}
                  {% assign default_excerpt = null %}
                  {% assign content_author = null %}
                  {% assign content_date = null %}
              {% endcase %}

              {% assign post_image = block.settings.post_image %}
              {% comment %} Use custom image if provided, otherwise use content item image {% endcomment %}
              {% if post_image == blank and default_image %}
                {% assign post_image = default_image %}
              {% endif %}

              {% assign post_title = block.settings.post_title_override %}
              {% if post_title == blank %}
                {% assign post_title = default_title %}
              {% endif %}

              {% assign post_excerpt = block.settings.post_excerpt_override %}
              {% if post_excerpt == blank %}
                {% assign post_excerpt = default_excerpt %}
              {% endif %}

              {% comment %} Determine which date to display {% endcomment %}
              {% if block.settings.custom_date != blank %}
                {% assign display_date = block.settings.custom_date %}
              {% elsif content_date %}
                {% assign display_date = content_date | date: "%b %d, %Y" %}
              {% else %}
                {% assign display_date = null %}
              {% endif %}

              <div class="bpl-item" data-slider-slide {{ block.shopify_attributes }}>
                <a href="{{ content_url | default: '#' }}" class="bpl-card">
                  {% comment %} Author Card Above Card (Top of card, inside link) {% endcomment %}
                  {% if block.settings.show_author_card and section.settings.author_card_position == 'above_card' %}
                    <div class="bpl-author-card bpl-author-above">
                      {% if block.settings.author_profile_pic %}
                        <img src="{{ block.settings.author_profile_pic | image_url: width: 80 }}" alt="{{ block.settings.author_name }}" class="bpl-author-pic" loading="lazy">
                      {% else %}
                        <div class="bpl-author-pic bpl-author-pic-placeholder">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                          </svg>
                        </div>
                      {% endif %}
                      <div class="bpl-author-info">
                        <div class="bpl-author-name-wrapper">
                          <span class="bpl-author-name">{{ block.settings.author_name }}</span>
                          {% if block.settings.show_verified_badge %}
                            <svg class="bpl-verified-badge" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                          {% endif %}
                        </div>
                        {% if block.settings.show_date and block.settings.date_position == 'under_author' and display_date %}
                          <span class="bpl-date">{{ display_date }}</span>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}

                  <div class="bpl-image-wrapper">
                    {% if post_image != blank %}
                      <img
                        srcset="
                          {%- if post_image.width >= 165 -%}{{ post_image | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if post_image.width >= 360 -%}{{ post_image | image_url: width: 360 }} 360w,{%- endif -%}
                          {%- if post_image.width >= 533 -%}{{ post_image | image_url: width: 533 }} 533w,{%- endif -%}
                          {%- if post_image.width >= 720 -%}{{ post_image | image_url: width: 720 }} 720w,{%- endif -%}
                          {%- if post_image.width >= 940 -%}{{ post_image | image_url: width: 940 }} 940w,{%- endif -%}
                          {%- if post_image.width >= 1066 -%}{{ post_image | image_url: width: 1066 }} 1066w,{%- endif -%}
                          {{ post_image | image_url }} {{ post_image.width }}w
                        "
                        src="{{ post_image | image_url: width: 533 }}"
                        sizes="(min-width: 750px) calc((100vw - 10rem) / 2), calc(100vw - 3rem)"
                        alt="{{ post_image.alt | escape }}"
                        loading="lazy"
                        width="{{ post_image.width }}"
                        height="{{ post_image.height }}"
                        class="bpl-image"
                      >
                    {% else %}
                      <div class="bpl-image-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {% endif %}

                    {% if section.settings.text_position == 'overlay' %}
                      {% comment %} Fade Mask Bottom {% endcomment %}
                      {% if section.settings.enable_fade_mask %}
                        <div class="bpl-fade-mask"></div>
                      {% endif %}

                      {% comment %} Author Card at Top (Overlay) {% endcomment %}
                      {% if block.settings.show_author_card and section.settings.author_card_position == 'top_overlay' %}
                        <div class="bpl-author-card bpl-author-top">
                          {% if block.settings.author_profile_pic %}
                            <img src="{{ block.settings.author_profile_pic | image_url: width: 80 }}" alt="{{ block.settings.author_name }}" class="bpl-author-pic" loading="lazy">
                          {% else %}
                            <div class="bpl-author-pic bpl-author-pic-placeholder">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                              </svg>
                            </div>
                          {% endif %}
                          <div class="bpl-author-info">
                            <div class="bpl-author-name-wrapper">
                              <span class="bpl-author-name">{{ block.settings.author_name }}</span>
                              {% if block.settings.show_verified_badge %}
                                <svg class="bpl-verified-badge" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                              {% endif %}
                            </div>
                            {% if block.settings.show_date and block.settings.date_position == 'under_author' and display_date %}
                              <span class="bpl-date">{{ display_date }}</span>
                            {% endif %}
                          </div>
                        </div>
                      {% endif %}

                      {% comment %} Post Title and Arrow (Overlay) {% endcomment %}
                      <div class="bpl-info bpl-info-overlay">
                        <div class="bpl-overlay-content">
                          <div class="bpl-name-arrow-wrapper">
                            <span class="bpl-post-title">{{ post_title }}</span>
                            <svg class="bpl-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                          </div>
                          {% if post_excerpt != blank %}
                            <p class="bpl-post-excerpt">{{ post_excerpt }}</p>
                          {% endif %}
                          {% if block.settings.show_date and block.settings.date_position == 'under_excerpt' and display_date %}
                            <span class="bpl-date">{{ display_date }}</span>
                          {% endif %}
                        </div>
                      </div>
                    {% endif %}
                  </div>

                  {% if section.settings.text_position == 'below' %}
                    {% comment %} Post Info (Below Card) {% endcomment %}
                    <div class="bpl-info bpl-info-below">
                      <div class="bpl-name-arrow-wrapper">
                        <span class="bpl-post-title">{{ post_title }}</span>
                        <svg class="bpl-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </div>
                      {% if post_excerpt != blank %}
                        <p class="bpl-post-excerpt">{{ post_excerpt }}</p>
                      {% endif %}
                      {% if block.settings.show_date and block.settings.date_position == 'under_excerpt' and display_date %}
                        <span class="bpl-date">{{ display_date }}</span>
                      {% endif %}
                    </div>
                  {% endif %}
                </a>
              </div>
            {% endif %}
          {% endfor %}

              </div>
            </div>
          </div>
        </div>
      {% endif %}

    </div>
  </div>
</section>

<style>
  .blog-post-list.section-{{ section.id }} {
    {% if section.settings.use_theme_colors %}
      background: {{ settings.section_background_color }};
    {% else %}
      {% if section.settings.use_section_gradient %}
        background: {{ section.settings.section_gradient_background }};
      {% else %}
        background-color: {{ section.settings.section_background_color }};
      {% endif %}
    {% endif %}
  }

  .blog-post-list.section-{{ section.id }} .bpl-heading,
  .blog-post-list.section-{{ section.id }} .bpl-subheading {
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: {{ section.settings.section_text_color }};
    {% endif %}
  }

  .blog-post-list.section-{{ section.id }} .container {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .blog-post-list.section-{{ section.id }} .container {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  /* Heading Styles */
  .blog-post-list.section-{{ section.id }} .bpl-header-wrapper {
    margin-bottom: 1.6rem;
  }

  .blog-post-list.section-{{ section.id }} .bpl-heading {
    font-family: var(--font-heading-family);
    font-size: 3.2rem;
    font-weight: var(--font-heading-weight);
    line-height: 1.2;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .blog-post-list.section-{{ section.id }} .bpl-heading {
      font-size: 4.8rem;
    }
  }

  .blog-post-list.section-{{ section.id }} .bpl-highlighted-text {
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ settings.highlighted_text_solid_color }};
      {% endif %}
    {% else %}
      {% if section.settings.use_highlight_gradient %}
        background: {{ section.settings.highlight_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ section.settings.highlight_color }};
      {% endif %}
    {% endif %}
  }

  .blog-post-list.section-{{ section.id }} .bpl-highlighted-separate {
    display: block;
    margin-bottom: 0.8rem;
  }

  .blog-post-list.section-{{ section.id }} .bpl-subheading {
    font-size: 1.6rem;
    line-height: 1.5;
    margin-top: 1.2rem;
    margin-bottom: 3.2rem;
  }

  @media screen and (min-width: 750px) {
    .blog-post-list.section-{{ section.id }} .bpl-subheading {
      font-size: 1.8rem;
      margin-bottom: 4.8rem;
    }
  }

  /* Alignment */
  .blog-post-list.section-{{ section.id }} .bpl-align-left {
    text-align: left;
  }

  .blog-post-list.section-{{ section.id }} .bpl-align-center {
    text-align: center;
  }

  .blog-post-list.section-{{ section.id }} .bpl-align-right {
    text-align: right;
  }

  /* Layout Wrapper - Default as slider structure */
  .blog-post-list.section-{{ section.id }} .bpl-layout-wrapper {
    /* Default structure is slider for both */
  }

  /* Mobile Grid Layout */
  @media screen and (max-width: 749px) {
    .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-slider {
      display: grid !important;
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap_mobile }}px;
      overflow: visible !important;
      {% if section.settings.equal_height_cards %}
        align-items: stretch;
      {% endif %}
    }

    .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-slider-viewport,
    .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-slider-track {
      display: contents !important;
      overflow: visible !important;
    }

    /* Disable slider behavior on mobile when grid is active */
    .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-slider-viewport {
      overflow: visible !important;
    }

    .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-item {
      flex: none !important;
      width: auto !important;
    }
  }

  /* Desktop Grid Layout */
  @media screen and (min-width: 750px) {
    .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-slider {
      display: grid !important;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: {{ section.settings.grid_gap_desktop }}px;
      overflow: visible !important;
      {% if section.settings.equal_height_cards %}
        align-items: stretch;
      {% endif %}
    }

    .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-slider-viewport,
    .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-slider-track {
      display: contents !important;
      overflow: visible !important;
    }

    /* Disable slider behavior on desktop when grid is active */
    .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-slider-viewport {
      overflow: visible !important;
    }

    .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-item {
      flex: none !important;
      width: auto !important;
    }
  }

  /* Equal Height Cards for Grid Mode */
  {% if section.settings.equal_height_cards %}
    @media screen and (max-width: 749px) {
      .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-item {
        display: flex;
        flex-direction: column;
      }

      .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-card {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-image-wrapper {
        flex-shrink: 0;
      }

      .blog-post-list.section-{{ section.id }} .bpl-layout-mobile-grid .bpl-info-below {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }
    }

    @media screen and (min-width: 750px) {
      .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-item {
        display: flex;
        flex-direction: column;
      }

      .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-card {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-image-wrapper {
        flex-shrink: 0;
      }

      .blog-post-list.section-{{ section.id }} .bpl-layout-desktop-grid .bpl-info-below {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }
    }
  {% endif %}

  /* Blog Post Card */
  .blog-post-list.section-{{ section.id }} .bpl-card {
    display: block;
    text-decoration: none;
    color: inherit;
    position: relative;
    border-radius: {{ section.settings.card_border_radius }}px;
    {% if section.settings.card_border_width > 0 %}
      border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    {% endif %}
  }

  .blog-post-list.section-{{ section.id }} .bpl-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
    border-radius: {{ section.settings.card_border_radius }}px;
    {% if section.settings.image_aspect_ratio == 'square' %}
      aspect-ratio: 1 / 1;
    {% elsif section.settings.image_aspect_ratio == 'portrait' %}
      aspect-ratio: 3 / 4;
    {% elsif section.settings.image_aspect_ratio == 'landscape' %}
      aspect-ratio: 4 / 3;
    {% elsif section.settings.image_aspect_ratio == 'wide' %}
      aspect-ratio: 16 / 9;
    {% elsif section.settings.image_aspect_ratio == 'custom' %}
      padding-bottom: {{ section.settings.custom_aspect_ratio_mobile }}%;
    {% endif %}
    display: flex;
  }

  {% if section.settings.image_aspect_ratio == 'custom' %}
    @media screen and (min-width: 750px) {
      .blog-post-list.section-{{ section.id }} .bpl-image-wrapper {
        padding-bottom: {{ section.settings.custom_aspect_ratio_desktop }}%;
      }
    }
  {% endif %}

  /* When author card is above, remove top border radius from image */
  .blog-post-list.section-{{ section.id }} .bpl-card:has(.bpl-author-above) .bpl-image-wrapper {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

  .blog-post-list.section-{{ section.id }} .bpl-image,
  .blog-post-list.section-{{ section.id }} .bpl-image-placeholder {
    {% if section.settings.image_aspect_ratio == 'custom' %}
      position: absolute;
      top: 0;
      left: 0;
    {% else %}
      position: relative;
      z-index: 0;
    {% endif %}
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-post-list.section-{{ section.id }} .bpl-card:hover .bpl-image {
    transform: scale(1.05);
  }

  .blog-post-list.section-{{ section.id }} .bpl-image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-post-list.section-{{ section.id }} .bpl-image-placeholder svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  /* Fade Mask */
  .blog-post-list.section-{{ section.id }} .bpl-fade-mask {
    position: absolute !important;
    bottom: 0;
    left: 0;
    right: 0;
    top: {{ 100 | minus: section.settings.fade_height_mobile }}%;
    background: linear-gradient(to top, {{ section.settings.fade_color }} 0%, transparent 100%);
    pointer-events: none;
    z-index: 1;
    content: '';
    display: block;
  }

  @media screen and (min-width: 750px) {
    .blog-post-list.section-{{ section.id }} .bpl-fade-mask {
      top: {{ 100 | minus: section.settings.fade_height_desktop }}%;
    }
  }

  /* Ensure image wrapper creates stacking context for absolute children */
  .blog-post-list.section-{{ section.id }} .bpl-image-wrapper {
    transform: translateZ(0);
  }

  /* Post Info - Overlay */
  .blog-post-list.section-{{ section.id }} .bpl-info-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ section.settings.info_padding_mobile }}px;
    z-index: 2;
  }

  @media screen and (min-width: 750px) {
    .blog-post-list.section-{{ section.id }} .bpl-info-overlay {
      padding: {{ section.settings.info_padding_desktop }}px;
    }
  }

  .blog-post-list.section-{{ section.id }} .bpl-overlay-content {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .blog-post-list.section-{{ section.id }} .bpl-info-overlay .bpl-name-arrow-wrapper {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* Post Info - Below Card */
  .blog-post-list.section-{{ section.id }} .bpl-info-below {
    padding-top: {{ section.settings.info_padding_mobile }}px;
    padding-left: {{ section.settings.info_padding_mobile }}px;
    padding-right: {{ section.settings.info_padding_mobile }}px;
    padding-bottom: {{ section.settings.info_padding_mobile }}px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;

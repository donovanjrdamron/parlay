{% schema %}
{
  "name": "Infinity",
  "settings": [
    {
      "type": "color",
      "id": "background_color_bar",
      "label": "Background Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#000"
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Border Width",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 4,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "Text_bar_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "text-type1",
      "label": "Point 1",

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .announcement-bar-{{ section.id }} {
    {% if section.settings.gradient_background != blank %}
      background: {{ section.settings.gradient_background }};
    {% else %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    color: {{ section.settings.text_color }};
  }

  .announcement-bar__message__svg-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .announcement-bar__message__svg-icon svg {
    width: var(--mobile-icon-size, 1.2em);
    height: var(--mobile-icon-size, 1.2em);
    fill: var(--icon-color, currentColor);
    color: var(--icon-color, currentColor);
  }

  .announcement-bar__message__svg-icon svg path,
  .announcement-bar__message__svg-icon svg circle,
  .announcement-bar__message__svg-icon svg rect,
  .announcement-bar__message__svg-icon svg polygon {
    fill: inherit;
  }

  .announcement-bar__message .material-symbols-outlined {
    color: var(--icon-color, currentColor);
  }

  @media screen and (min-width: 750px) {
    .announcement-bar__message__svg-icon svg {
      width: var(--desktop-icon-size, 1.2em);
      height: var(--desktop-icon-size, 1.2em);
    }
  }

  {% if section.settings.enable_infinite_scroll %}
    .announcement-bar-{{ section.id }} .page-width {
      max-width: 100%;
      padding: 0;
    }

    .announcement-bar-{{ section.id }} .infinite-scroll-wrapper {
      overflow: hidden;
      width: 100%;
    }

    .announcement-bar-{{ section.id }} .infinite-scroll-content {
      display: flex;
      align-items: center;
      width: fit-content;
      animation: infinite-scroll {{ section.settings.scroll_speed }}s linear infinite;
    }

    .announcement-bar-{{ section.id }} .infinite-scroll-content .splide__list {
      display: flex;
      align-items: center;
      gap: {{ section.settings.infinite_scroll_spacing_mobile }}px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .announcement-bar-{{ section.id }} .infinite-scroll-content .splide__slide {
      flex-shrink: 0;
      white-space: nowrap;
    }

    @media screen and (min-width: 750px) {
      .announcement-bar-{{ section.id }} .infinite-scroll-content .splide__list {
        gap: {{ section.settings.infinite_scroll_spacing_desktop }}px;
      }
    }

    @keyframes infinite-scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    .announcement-bar-{{ section.id }} .infinite-scroll-content:hover {
      animation-play-state: paused;
    }
  {% endif %}
{%- endstyle -%}

{% liquid
  assign has_mobile_slider = false
  assign has_desktop_slider = false
  if section.settings.slider_mobile and section.settings.columns_mobile > 0
    assign has_mobile_slider = true
  endif
  if section.settings.slider_desktop and section.settings.columns_desktop > 0
    assign has_desktop_slider = true
  endif
  
  assign displayed = true
  if section.settings.hidden_products != blank
    assign hidden_handles = section.settings.hidden_products | split: ','
    for hidden_handle in hidden_handles
      assign handle_strip = hidden_handle | strip
      if handle_strip == product.handle
        assign displayed = false
        break
      endif
    endfor
  endif
  if section.settings.enable_specific_display and section.settings.displayed_products != blank
    assign displayed_handles = section.settings.displayed_products | split: ','
    assign displayed = false
    for displayed_handle in displayed_handles
      assign handle_strip = displayed_handle | strip
      if handle_strip == product.handle
        assign displayed = true
        break
      endif
    endfor
  endif

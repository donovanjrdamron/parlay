{% comment %}
  Featured Collection Slider - Same style as Testimonial Reviews
{% endcomment %}

<style>
  /* Section Styling */
  .section-{{ section.id }} {
    background: {{ section.settings.section_background }};
    padding-top: {{ section.settings.section_padding_top_mobile }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.section_padding_top_desktop }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_desktop }}px;
    }
  }

  /* Container */
  .section-{{ section.id }} .fc-container {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .fc-container {
      padding-left: 5rem;
      padding-right: 5rem;
    }
  }

  /* Heading Section */
  .section-{{ section.id }} .fc-header-wrapper {
    margin-bottom: {{ section.settings.header_spacing }}px;
    text-align: {{ section.settings.heading_text_align }};
  }

  .section-{{ section.id }} .fc-heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: 1.2;
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .fc-heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    }
  }

  /* Highlighted Text */
  .section-{{ section.id }} .fc-highlighted-text {
    display: inline-block;
    {% if section.settings.highlighted_gradient_enabled %}
      background: {{ section.settings.highlighted_gradient }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% else %}
      color: {{ section.settings.highlighted_color }};
    {% endif %}
    font-size: {{ section.settings.highlighted_font_size_mobile }}px;
    font-weight: {{ section.settings.highlighted_font_weight }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .fc-highlighted-text {
      font-size: {{ section.settings.highlighted_font_size_desktop }}px;
    }
  }

  /* Layout Container */
  .section-{{ section.id }} .fc-products-wrapper {
    position: relative;
  }

  {% if section.settings.layout_mode == 'slider' %}
    /* Slider Layout */
    .section-{{ section.id }} .fc-slider-wrapper {
      position: relative;
      overflow: hidden;
    }

    .section-{{ section.id }} .fc-slider-container {
      overflow-x: scroll;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
      scrollbar-color: {{ section.settings.scrollbar_thumb_color }} {{ section.settings.scrollbar_track_color }};
      padding-bottom: 2rem;
    }

    .section-{{ section.id }} .fc-slider-container::-webkit-scrollbar {
      height: {{ section.settings.scrollbar_height }}px;
      background-color: {{ section.settings.scrollbar_track_color }};
      border-radius: {{ section.settings.scrollbar_border_radius }}px;
    }

    .section-{{ section.id }} .fc-slider-container::-webkit-scrollbar-thumb {
      background-color: {{ section.settings.scrollbar_thumb_color }};
      border-radius: {{ section.settings.scrollbar_border_radius }}px;
    }

    .section-{{ section.id }} .fc-slider-track {
      display: flex;
      gap: {{ section.settings.cards_gap }}px;
      width: max-content;
    }
  {% else %}
    /* Grid Layout */
    .section-{{ section.id }} .fc-grid-container {
      display: grid;
      grid-template-columns: repeat({{ section.settings.grid_columns_mobile }}, 1fr);
      gap: {{ section.settings.cards_gap }}px;
    }

    @media screen and (min-width: 750px) and (max-width: 989px) {
      .section-{{ section.id }} .fc-grid-container {
        grid-template-columns: repeat({{ section.settings.grid_columns_tablet }}, 1fr);
      }
    }

    @media screen and (min-width: 990px) {
      .section-{{ section.id }} .fc-grid-container {
        grid-template-columns: repeat({{ section.settings.grid_columns_desktop }}, 1fr);
      }
    }
  {% endif %}

  /* Product Image */
  .section-{{ section.id }} .fc-product-image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* 1:1 aspect ratio */
    background: {{ section.settings.image_background }};
    overflow: hidden;
  }

  .section-{{ section.id }} .fc-product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
  }

  /* Product Info */
  .section-{{ section.id }} .fc-product-info {
    padding: {{ section.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.product_info_gap }}px;
  }

  .section-{{ section.id }} .fc-product-title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: 1.3;
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Rating Stars */
  .section-{{ section.id }} .fc-rating-stars {
    margin-bottom: {{ section.settings.rating_margin_bottom }}px;
    display: block;
  }

  .section-{{ section.id }} .fc-rating-stars__container {
    position: relative;
    display: inline-flex;
    flex-direction: row;
    gap: 2px;
    font-size: {{ section.settings.rating_stars_size }}px;
    line-height: 1;
  }

  .section-{{ section.id }} .fc-rating-stars__container--underlay {
    color: {{ section.settings.rating_bg_star_color }};
    display: flex;
    flex-direction: row;
    gap: 2px;
  }

  .section-{{ section.id }} .fc-rating-stars__container--overlay {
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    color: {{ section.settings.rating_star_color }};
    display: flex;
    flex-direction: row;
    gap: 2px;
    white-space: nowrap;
  }

  .section-{{ section.id }} .fc-rating-stars svg {
    width: 1em;
    height: 1em;
    fill: currentColor;
    display: block;
    flex-shrink: 0;
  }

  .section-{{ section.id }} .fc-product-price {
    color: {{ section.settings.price_color }};
    font-size: {{ section.settings.price_font_size }}px;
    font-weight: {{ section.settings.price_font_weight }};
    margin: 0 0 {{ section.settings.price_margin_bottom }}px 0;
  }

  .section-{{ section.id }} .fc-compare-price {
    color: {{ section.settings.compare_price_color }};
    font-size: {{ section.settings.compare_price_font_size }}px;
    text-decoration: line-through;
    margin-left: 8px;
  }

  /* Badge Styling */
  .section-{{ section.id }} .fc-sale-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    {% if section.settings.use_theme_badge_colors %}
      {% if settings.enable_badge_gradient %}
        background: {{ settings.badge_gradient }};
      {% else %}
        background: {{ settings.badge_bg_color }};
      {% endif %}
      color: {{ settings.badge_text_color }};
    {% else %}
      background: {{ section.settings.sale_badge_background }};
      color: {{ section.settings.sale_badge_color }};
    {% endif %}
    font-size: {{ section.settings.sale_badge_font_size }}px;
    font-weight: {{ section.settings.sale_badge_font_weight }};
    padding: {{ section.settings.sale_badge_padding_y }}px {{ section.settings.sale_badge_padding_x }}px;
    border-radius: {{ section.settings.sale_badge_border_radius }}px;
    line-height: 1;
  }

  /* Custom Badges */
  .section-{{ section.id }} .fc-custom-badge {
    position: absolute;
    {% case section.settings.badge_position %}
      {% when 'top-left' %}
        top: {{ section.settings.badge_offset_y }}px;
        left: {{ section.settings.badge_offset_x }}px;
      {% when 'top-right' %}
        top: {{ section.settings.badge_offset_y }}px;
        right: {{ section.settings.badge_offset_x }}px;
      {% when 'bottom-left' %}
        bottom: {{ section.settings.badge_offset_y }}px;
        left: {{ section.settings.badge_offset_x }}px;
      {% when 'bottom-right' %}
        bottom: {{ section.settings.badge_offset_y }}px;
        right: {{ section.settings.badge_offset_x }}px;
    {% endcase %}
    padding: {{ section.settings.badge_padding_y }}px {{ section.settings.badge_padding_x }}px;
    border-radius: {{ section.settings.badge_border_radius }}px;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    line-height: 1;
    z-index: 2;
    display: inline-flex;
    align-items: center;
    gap: {{ section.settings.badge_icon_gap }}px;
  }

  .section-{{ section.id }} .fc-badge-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.custom_badge_icon_size }}px;
    width: {{ section.settings.custom_badge_icon_size }}px;
    height: {{ section.settings.custom_badge_icon_size }}px;
    flex-shrink: 0;
  }

  .section-{{ section.id }} .fc-badge-icon .material-icon {
    font-size: {{ section.settings.custom_badge_icon_size }}px;
    width: {{ section.settings.custom_badge_icon_size }}px;
    height: {{ section.settings.custom_badge_icon_size }}px;
  }

  .section-{{ section.id }} .fc-badge-icon svg,
  .section-{{ section.id }} .fc-badge-icon-svg svg {
    width: {{ section.settings.custom_badge_icon_size }}px;
    height: {{ section.settings.custom_badge_icon_size }}px;
    fill: currentColor;
  }

  .section-{{ section.id }} .fc-badge-text {
    display: inline-flex;
    align-items: center;
    line-height: 1.2;
  }

  .section-{{ section.id }} .fc-custom-badge-1 {
    background: {{ section.settings.badge_1_bg }};
    color: {{ section.settings.badge_1_color }};
  }

  .section-{{ section.id }} .fc-custom-badge-2 {
    background: {{ section.settings.badge_2_bg }};
    color: {{ section.settings.badge_2_color }};
  }

  .section-{{ section.id }} .fc-custom-badge-3 {
    background: {{ section.settings.badge_3_bg }};
    color: {{ section.settings.badge_3_color }};
  }

  /* View All Button */
  .section-{{ section.id }} .fc-view-all {
    margin-top: {{ section.settings.view_all_margin_top }}px;
    text-align: center;
  }

  .section-{{ section.id }} .fc-view-all-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.view_all_icon_gap }}px;
    padding: {{ section.settings.view_all_button_padding_y }}px {{ section.settings.view_all_button_padding_x }}px;
    {% if section.settings.use_theme_view_all_colors %}
      background: {{ settings.button_background_color }};
      color: {{ settings.button_text_color }};
    {% else %}
      {% if section.settings.view_all_gradient_enabled %}
        background: {{ section.settings.view_all_button_gradient }};
      {% else %}
        background: {{ section.settings.view_all_button_bg }};
      {% endif %}
      color: {{ section.settings.view_all_button_color }};
    {% endif %}
    text-decoration: none;
    border-radius: {{ section.settings.view_all_button_radius }}px;
    font-size: {{ section.settings.view_all_button_font_size }}px;
    font-weight: {{ section.settings.view_all_button_font_weight }};
    transition: all 0.3s ease;
  }

  .section-{{ section.id }} .fc-view-all-btn:hover {
    {% if section.settings.use_theme_view_all_colors %}
      opacity: 0.85;
    {% else %}
      {% if section.settings.view_all_gradient_enabled and section.settings.view_all_hover_gradient_enabled %}
        background: {{ section.settings.view_all_button_hover_gradient }};
      {% elsif section.settings.view_all_gradient_enabled == false %}
        background: {{ section.settings.view_all_button_bg_hover }};
      {% else %}
        opacity: 0.85;
      {% endif %}
    {% endif %}
    transform: translateY(-2px);
  }

  .section-{{ section.id }} .fc-view-all-btn .material-icon {
    font-size: {{ section.settings.view_all_icon_size }}px;
    color: {{ section.settings.view_all_icon_color }};
    width: {{ section.settings.view_all_icon_size }}px;
    height: {{ section.settings.view_all_icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    line-height: 1;
  }

  .section-{{ section.id }} .fc-view-all-btn .fc-view-all__icon-svg {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.view_all_icon_size }}px;
    height: {{ section.settings.view_all_icon_size }}px;
    flex-shrink: 0;
    line-height: 1;
  }

  .section-{{ section.id }} .fc-view-all-btn .fc-view-all__icon-svg svg {
    width: {{ section.settings.view_all_icon_size }}px;
    height: {{ section.settings.view_all_icon_size }}px;
    fill: {{ section.settings.view_all_icon_color }};
    color: {{ section.settings.view_all_icon_color }};
    display: block;
  }

  .section-{{ section.id }} .fc-view-all-btn .fc-view-all__label {
    display: inline-flex;
    align-items: center;
    line-height: 1.2;
  }

  /* Product Card */
  .section-{{ section.id }} .fc-product-card {
    {% if section.settings.layout_mode == 'slider' %}
      width: {{ section.settings.card_width_mobile }}px;
    {% else %}
      width: 100%;
    {% endif %}
    display: flex;
    flex-direction: column;
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    border: 1px solid {{ section.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  {% if section.settings.layout_mode == 'slider' %}
    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .fc-product-card {
        width: {{ section.settings.card_width_desktop }}px;
      }
    }
  {% endif %}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .fc-product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }
  }

  .section-{{ section.id }} .fc-product-link {
    display: flex;
    flex-direction: column;
    flex: 1;
    text-decoration: none;
    color: inherit;
  }

  /* View Product Button */
  .section-{{ section.id }} .fc-button-wrapper {
    padding: 0 {{ section.settings.card_padding }}px {{ section.settings.card_padding }}px;
  }

  .section-{{ section.id }} .fc-view-product-btn {
    width: 100%;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    {% if section.settings.use_theme_button_colors %}
      background: {{ settings.button_background_color }};
      color: {{ settings.button_text_color }};
    {% else %}
      {% if section.settings.button_gradient_enabled %}
        background: {{ section.settings.button_gradient }};
      {% else %}
        background: {{ section.settings.button_background }};
      {% endif %}
      color: {{ section.settings.button_text_color }};
    {% endif %}
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.button_icon_gap }}px;
  }

  .section-{{ section.id }} .fc-view-product-btn:hover {
    {% if section.settings.use_theme_button_colors %}
      opacity: 0.85;
    {% else %}
      {% if section.settings.button_gradient_enabled and section.settings.button_hover_gradient_enabled %}
        background: {{ section.settings.button_hover_gradient }};
      {% elsif section.settings.button_gradient_enabled == false %}
        background: {{ section.settings.button_background_hover }};
      {% else %}
        opacity: 0.85;
      {% endif %}
    {% endif %}
    transform: translateY(-2px);
  }

  .section-{{ section.id }} .fc-view-product-btn .material-icon {
    font-size: {{ section.settings.button_icon_size }}px;
    color: {{ section.settings.button_icon_color }};
    width: {{ section.settings.button_icon_size }}px;
    height: {{ section.settings.button_icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    line-height: 1;
  }

  .section-{{ section.id }} .fc-view-product-btn .fc-button__icon-svg {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.button_icon_size }}px;
    height: {{ section.settings.button_icon_size }}px;
    flex-shrink: 0;
    line-height: 1;
  }

  .section-{{ section.id }} .fc-view-product-btn .fc-button__icon-svg svg {
    width: {{ section.settings.button_icon_size }}px;
    height: {{ section.settings.button_icon_size }}px;
    fill: {{ section.settings.button_icon_color }};
    color: {{ section.settings.button_icon_color }};
    display: block;
  }

  .section-{{ section.id }} .fc-view-product-btn .fc-button__label {
    display: inline-flex;
    align-items: center;
    line-height: 1.2;
  }

  /* Mobile Overlay - Position Info on Top of Image */
  {% if section.settings.overlay_info_on_image_mobile %}
    @media screen and (max-width: 749px) {
      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-product-link {
        position: relative;
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-product-image-wrapper {
        position: relative;
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-product-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.5) 50%, transparent 100%);
        padding: 20px {{ section.settings.card_padding }}px {{ section.settings.card_padding }}px;
        z-index: 2;
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-product-title {
        color: #ffffff;
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-product-price {
        color: #ffffff;
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-compare-price {
        color: rgba(255, 255, 255, 0.7);
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-rating-stars__container--underlay {
        color: rgba(255, 255, 255, 0.3);
      }

      .section-{{ section.id }} .fc-product-card--overlay-mobile .fc-rating-stars__container--overlay {
        color: #ffffff;
      }
    }
  {% endif %}
</style>

<section class="section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="fc-container">

    {% comment %} Header {% endcomment %}
    {% if section.settings.show_heading %}
      <div class="fc-header-wrapper">
        <{{ section.settings.heading_tag }} class="fc-heading">
          {% case section.settings.highlight_position %}
            {% when 'inline_first' %}
              <span class="fc-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            {% when 'inline_second' %}
              {{ section.settings.heading_before }}
              <span class="fc-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {{ section.settings.heading_after }}
            {% when 'above' %}
              <span class="fc-highlighted-text" style="display: block; margin-bottom: 8px;">{{ section.settings.highlighted_text }}</span>
              {{ section.settings.heading_before }} {{ section.settings.heading_after }}
            {% when 'below' %}
              {{ section.settings.heading_before }} {{ section.settings.heading_after }}
              <span class="fc-highlighted-text" style="display: block; margin-top: 8px;">{{ section.settings.highlighted_text }}</span>
          {% endcase %}
        </{{ section.settings.heading_tag }}>
      </div>
    {% endif %}

    {% comment %} Products - Slider or Grid {% endcomment %}
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      {% if collection.products_count > 0 %}

        {% comment %} Capture current page product ID if on product page {% endcomment %}
        {% assign page_product_id = nil %}
        {% if section.settings.hide_current_product and template.name == 'product' %}
          {% assign page_product_id = product.id %}
        {% endif %}

        <div class="fc-products-wrapper">

          {% if section.settings.layout_mode == 'slider' %}
            {% comment %} Slider Layout {% endcomment %}
            <div class="fc-slider-wrapper">
              <div class="fc-slider-container">
                <div class="fc-slider-track">
                  {% for product in collection.products limit: section.settings.products_to_show %}
                    {% assign should_hide = false %}
                    {% if page_product_id and product.id == page_product_id %}
                      {% assign should_hide = true %}
                    {% endif %}

                    {% unless should_hide %}
                      {% render 'featured-collection-card', product: product, section: section, product_index: forloop.index0 %}
                    {% endunless %}
                  {% endfor %}
                </div>
              </div>
            </div>
          {% else %}
            {% comment %} Grid Layout {% endcomment %}
            <div class="fc-grid-container">
              {% for product in collection.products limit: section.settings.products_to_show %}
                {% assign should_hide = false %}
                {% if page_product_id and product.id == page_product_id %}
                  {% assign should_hide = true %}
                {% endif %}

                {% unless should_hide %}
                  {% render 'featured-collection-card', product: product, section: section, product_index: forloop.index0 %}
                {% endunless %}
              {% endfor %}
            </div>
          {% endif %}

        </div>
      {% endif %}
    {% endif %}

    {% comment %} View All Button {% endcomment %}
    {% if section.settings.show_view_all and section.settings.collection != blank %}
      <div class="fc-view-all">
        <a href="{{ collections[section.settings.collection].url }}" class="fc-view-all-btn">
          {% if section.settings.view_all_icon_position == 'before' %}
            {% if section.settings.view_all_custom_icon != blank %}
              <span class="fc-view-all__icon-svg">
                {{ section.settings.view_all_custom_icon }}
              </span>
            {% elsif section.settings.view_all_icon != blank %}
              {% render 'material-icon', icon: section.settings.view_all_icon, filled: section.settings.view_all_icon_filled %}
            {% endif %}
          {% endif %}

          <span class="fc-view-all__label">{{ section.settings.view_all_text }}</span>

          {% if section.settings.view_all_icon_position == 'after' %}
            {% if section.settings.view_all_custom_icon != blank %}
              <span class="fc-view-all__icon-svg">
                {{ section.settings.view_all_custom_icon }}
              </span>
            {% elsif section.settings.view_all_icon != blank %}
              {% render 'material-icon', icon: section.settings.view_all_icon, filled: section.settings.view_all_icon_filled %}
            {% endif %}
          {% endif %}
        </a>
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "Collection Grid (Simple)",
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 50,
      "step": 1,

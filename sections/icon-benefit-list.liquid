{{ 'section-icon-benefit-list.css' | asset_url | stylesheet_tag }}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --image-width-desktop: {{ section.settings.image_width_desktop }}%;
    --vertical-alignment: {{ section.settings.vertical_alignment }};
    --icon-size: {{ section.settings.icon_size }}px;
    --icon-size-mobile: {{ section.settings.icon_size_mobile }}px;
    --icon-border-radius: {{ section.settings.icon_border_radius }}px;
    --icon-padding: {{ section.settings.icon_padding }}px;
    --icon-alignment: {{ section.settings.icon_alignment }};
    --title-font-size: {{ section.settings.title_font_size }}px;
    --text-font-size-desktop: {{ section.settings.text_font_size_desktop }}px;
    --text-font-size-mobile: {{ section.settings.text_font_size_mobile }}px;
    --content-border-width-desktop: {{ section.settings.content_border_width_desktop }}px;
    --content-border-width-mobile: {{ section.settings.content_border_width_mobile }}px;
    --content-border-color: {{ section.settings.content_border_color }};
    --content-border-radius: {{ section.settings.content_border_radius }}px;
    --content-padding-horizontal-desktop: {{ section.settings.content_padding_horizontal_desktop }}px;
    --content-padding-vertical-desktop: {{ section.settings.content_padding_vertical_desktop }}px;
    --content-padding-horizontal-mobile: {{ section.settings.content_padding_horizontal_mobile }}px;
    --content-padding-vertical-mobile: {{ section.settings.content_padding_vertical_mobile }}px;
    --gap-between-items: {{ section.settings.gap_between_items }}px;

    {%- comment -%} Header Styling {%- endcomment -%}
    --heading-color: {% if section.settings.use_theme_colors %}{{ settings.colors_text }}{% else %}{{ section.settings.heading_color }}{% endif %};
    --heading-font-size-desktop: {{ section.settings.heading_font_size_desktop }}px;
    --heading-font-size-mobile: {{ section.settings.heading_font_size_mobile }}px;
    --heading-font-weight: {{ section.settings.heading_font_weight }};
    --heading-line-height: {{ section.settings.heading_line_height }};
    --heading-spacing-desktop: {{ section.settings.heading_spacing_desktop }}px;
    --heading-spacing-mobile: {{ section.settings.heading_spacing_mobile }}px;

    --highlight-font-size-desktop: {{ section.settings.highlight_font_size_desktop }}px;
    --highlight-font-size-mobile: {{ section.settings.highlight_font_size_mobile }}px;
    --highlight-font-weight: {{ section.settings.highlight_font_weight }};
    --highlight-margin-top: {{ section.settings.highlight_margin_top }}px;
    --highlight-margin-bottom: {{ section.settings.highlight_margin_bottom }}px;

    --subheading-color: {% if section.settings.use_theme_colors %}{{ settings.colors_text }}{% else %}{{ section.settings.subheading_color }}{% endif %};
    --subheading-font-size-desktop: {{ section.settings.subheading_font_size_desktop }}px;
    --subheading-font-size-mobile: {{ section.settings.subheading_font_size_mobile }}px;
    --subheading-font-weight: {{ section.settings.subheading_font_weight }};
  }

  {%- comment -%} Highlighted Text Color {%- endcomment -%}
  #shopify-section-{{ section.id }} .ibl-highlighted-text {
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      {% else %}
        color: {{ settings.highlighted_text_color }};
      {% endif %}
    {% elsif section.settings.highlighted_gradient_enabled %}
      background: {{ section.settings.highlighted_gradient }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% else %}
      color: {{ section.settings.highlighted_color }};
    {% endif %}
  }

  {%- comment -%} Section Background {%- endcomment -%}
  #shopify-section-{{ section.id }} .icon-benefit-section {
    {% unless section.settings.use_theme_colors %}
      background-color: {{ section.settings.section_background_color }};
    {% endunless %}
  }

  /* Button Block Styles */
  {% for block in section.blocks %}
    {% if block.type == 'button' %}
      #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] {
        margin-top: {{ block.settings.margin_top | default: 0 }}px;
        margin-bottom: {{ block.settings.margin_bottom | default: 24 }}px;
        text-align: {{ block.settings.alignment_desktop | default: 'left' }};
        {% if block.settings.full_width %}
          width: 100%;
        {% endif %}
      }

      /* Hide on desktop */
      @media (min-width: 769px) {
        #shopify-section-{{ section.id }} .ibl-button-hide-desktop {
          display: none !important;
        }
      }

      {% if block.settings.use_custom_styles %}
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button--custom-styles {
          display: flex !important;
          align-items: center !important;
          justify-content: center !important;
          gap: {{ block.settings.button_icon_gap | default: 8 }}px;
          text-decoration: none;
          cursor: pointer;
          text-align: center;
          line-height: 1;
          {% if block.settings.use_custom_width %}
            width: {{ block.settings.custom_width_desktop | default: 300 }}px;
            max-width: 100%;
          {% else %}
            width: auto;
          {% endif %}
          box-shadow: none;
          transform: none;
          color: {{ block.settings.button_text_color | default: '#FFFFFF' }};
          {% if block.settings.use_gradient %}
            background: {{ block.settings.button_gradient }};
          {% else %}
            background-color: {{ block.settings.button_bg_color | default: '#000000' }};
          {% endif %}
          border: {{ block.settings.border_width | default: 0 }}px solid {{ block.settings.border_color | default: '#000000' }};
          border-radius: {{ block.settings.border_radius | default: 4 }}px;
          font-size: {{ block.settings.font_size_desktop | default: 16 }}px;
          font-weight: {{ block.settings.font_weight | default: '600' }};
          text-transform: {{ block.settings.text_transform | default: 'uppercase' }};
          letter-spacing: {{ block.settings.letter_spacing | default: 1 }}px;
          padding: {{ block.settings.padding_vertical | default: 12 }}px {{ block.settings.padding_horizontal | default: 24 }}px;
          transition: all 0.3s ease;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon {
          display: inline-flex;
          align-items: center;
          justify-content: center;
          font-size: {{ block.settings.button_icon_size | default: 20 }}px;
          color: {{ block.settings.button_icon_color | default: '#FFFFFF' }};
          line-height: 1;
          flex-shrink: 0;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon svg,
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon .material-icon {
          width: 1em;
          height: 1em;
          font-size: inherit;
          color: inherit;
          display: block;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon svg {
          fill: currentColor;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-text {
          line-height: 1;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button--custom-styles:hover {
          color: {{ block.settings.button_text_color_hover | default: '#FFFFFF' }};
          {% unless block.settings.use_gradient %}
            background-color: {{ block.settings.button_bg_color_hover | default: '#333333' }};
          {% endunless %}
          transform: none;
          box-shadow: none;
        }
        @media (max-width: 768px) {
          #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button--custom-styles {
            font-size: {{ block.settings.font_size_mobile | default: 14 }}px;
            {% if block.settings.use_custom_width %}
              width: {{ block.settings.custom_width_mobile | default: 280 }}px;
              max-width: 100%;
            {% endif %}
          }
        }
      {% endif %}

      {% unless block.settings.use_custom_styles %}
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button,
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
          display: inline-flex !important;
          align-items: center !important;
          justify-content: center !important;
          gap: {{ block.settings.button_icon_gap | default: 8 }}px !important;
          line-height: 1 !important;
          width: auto !important;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon {
          display: inline-flex;
          align-items: center;
          justify-content: center;
          font-size: {{ block.settings.button_icon_size | default: 20 }}px;
          color: {{ block.settings.button_icon_color | default: '#FFFFFF' }};
          line-height: 1;
          flex-shrink: 0;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon svg,
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon .material-icon {
          width: 1em;
          height: 1em;
          color: inherit;
          display: block;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-icon svg {
          fill: currentColor;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button-text {
          line-height: 1;
        }
      {% endunless %}

      {% if block.settings.use_custom_width and block.settings.use_custom_styles == false %}
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button,
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
          width: {{ block.settings.custom_width_desktop | default: 300 }}px;
          max-width: 100%;
        }
      {% endif %}

      {% if block.settings.full_width %}
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] {
          width: 100%;
          display: block;
        }
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button,
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
          width: 100%;
          display: block;
          text-align: center;
          max-width: none;
        }
      {% endif %}

      @media (max-width: 768px) {
        #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] {
          text-align: {{ block.settings.alignment_mobile | default: 'center' }};
        }
        {% if block.settings.use_custom_width and block.settings.use_custom_styles == false %}
          #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button,
          #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
            width: {{ block.settings.custom_width_mobile | default: 280 }}px;
            max-width: 100%;
          }
        {% endif %}
        {% if block.settings.full_width_mobile_only %}
          #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] {
            width: 100%;
            display: block;
          }
          #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .ibl-button,
          #shopify-section-{{ section.id }} .ibl-button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
            width: 100%;
            display: block;
            text-align: center;
            max-width: none;
          }
        {% endif %}
      }
    {% endif %}
  {% endfor %}
</style>

<div class="icon-benefit-section{% unless section.settings.use_theme_colors %} custom-bg{% endunless %}">
  <div class="page-width">

    {%- comment -%} Custom HTML - Above Heading (Mobile) {%- endcomment -%}
    {%- if section.settings.custom_html_above_heading != blank -%}
      <div class="ibl-custom-html-above-heading ibl-custom-html-mobile" style="margin-bottom: {{ section.settings.custom_html_above_heading_spacing }}px;">
        {{ section.settings.custom_html_above_heading }}
      </div>
    {%- endif -%}

    {%- comment -%} Section Heading {%- endcomment -%}
    {%- if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank -%}
      <div class="ibl-header-wrapper ibl-align-{{ section.settings.heading_text_align_mobile }}">
        {%- case section.settings.highlight_position -%}
          {%- when 'above' -%}
            {%- if section.settings.highlighted_text != blank -%}
              <span class="ibl-highlighted-text ibl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {%- endif -%}
            <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
          {%- when 'below' -%}
            <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
            {%- if section.settings.highlighted_text != blank -%}
              <span class="ibl-highlighted-text ibl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {%- endif -%}
          {%- when 'inline_first' -%}
            <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
              {%- if section.settings.highlighted_text != blank -%}
                <span class="ibl-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {%- endif -%}
              {%- if section.settings.heading_before != blank -%}{{ " " }}{{ section.settings.heading_before }}{%- endif -%}
              {%- if section.settings.heading_after != blank -%}{{ " " }}{{ section.settings.heading_after }}{%- endif -%}
            </{{ section.settings.heading_tag }}>
          {%- when 'inline_second' -%}
            <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
              {%- if section.settings.heading_before != blank -%}{{ section.settings.heading_before }}{{ " " }}{%- endif -%}
              {%- if section.settings.highlighted_text != blank -%}
                <span class="ibl-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {%- endif -%}
              {%- if section.settings.heading_after != blank -%}{{ " " }}{{ section.settings.heading_after }}{%- endif -%}
            </{{ section.settings.heading_tag }}>
        {%- endcase -%}
      </div>
    {%- endif -%}

    {%- comment -%} Custom HTML - Below Heading (Mobile) {%- endcomment -%}
    {%- if section.settings.custom_html_below_heading != blank -%}
      <div class="ibl-custom-html-below-heading ibl-custom-html-mobile" style="margin-bottom: {{ section.settings.custom_html_below_heading_spacing }}px;">
        {{ section.settings.custom_html_below_heading }}
      </div>
    {%- endif -%}

    {%- comment -%} Subheading (Mobile) {%- endcomment -%}
    {%- if section.settings.subheading != blank -%}
      <div class="ibl-subheading-wrapper ibl-subheading-mobile" style="text-align: {{ section.settings.subheading_text_align_mobile }};">
        <p class="ibl-subheading">{{ section.settings.subheading }}</p>
      </div>
    {%- endif -%}

    {%- comment -%} Custom HTML - Below Subtext (Mobile) {%- endcomment -%}
    {%- if section.settings.custom_html_below_subtext != blank -%}
      <div class="ibl-custom-html-below-subtext ibl-custom-html-mobile" style="margin-bottom: {{ section.settings.custom_html_below_subtext_spacing }}px;">
        {{ section.settings.custom_html_below_subtext }}
      </div>
    {%- endif -%}

    <div class="icon-benefit-container icon-benefit-container--{{ section.settings.image_position }}">

      {%- comment -%} Image Side {%- endcomment -%}
      <div class="icon-benefit-image-wrapper{% if section.settings.hide_image_mobile %} hide-mobile{% endif %}">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="icon-benefit-image"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'icon-benefit-image placeholder-svg' }}
        {%- endif -%}
      </div>

      {%- comment -%} Wrapper for Main Heading + Content Box {%- endcomment -%}
      <div class="icon-benefit-content-wrapper">
        {%- comment -%} Custom HTML - Above Heading (Desktop) {%- endcomment -%}
        {%- if section.settings.custom_html_above_heading != blank -%}
          <div class="ibl-custom-html-above-heading ibl-custom-html-desktop" style="margin-bottom: {{ section.settings.custom_html_above_heading_spacing }}px;">
            {{ section.settings.custom_html_above_heading }}
          </div>
        {%- endif -%}

        {%- comment -%} Main Section Heading (appears above content box on desktop) {%- endcomment -%}
        {%- if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank -%}
          <div class="ibl-header-wrapper-desktop ibl-align-{{ section.settings.heading_text_align_desktop }}">
            {%- case section.settings.highlight_position -%}
              {%- when 'above' -%}
                {%- if section.settings.highlighted_text != blank -%}
                  <span class="ibl-highlighted-text ibl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
                {%- endif -%}
                <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
                  {{ section.settings.heading_before }}
                  {{ section.settings.heading_after }}
                </{{ section.settings.heading_tag }}>
              {%- when 'below' -%}
                <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
                  {{ section.settings.heading_before }}
                  {{ section.settings.heading_after }}
                </{{ section.settings.heading_tag }}>
                {%- if section.settings.highlighted_text != blank -%}
                  <span class="ibl-highlighted-text ibl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
                {%- endif -%}
              {%- when 'inline_first' -%}
                <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
                  {%- if section.settings.highlighted_text != blank -%}
                    <span class="ibl-highlighted-text">{{ section.settings.highlighted_text }}</span>
                  {%- endif -%}
                  {%- if section.settings.heading_before != blank -%}{{ " " }}{{ section.settings.heading_before }}{%- endif -%}
                  {%- if section.settings.heading_after != blank -%}{{ " " }}{{ section.settings.heading_after }}{%- endif -%}
                </{{ section.settings.heading_tag }}>
              {%- when 'inline_second' -%}
                <{{ section.settings.heading_tag }} class="ibl-heading {{ section.settings.heading_tag }}">
                  {%- if section.settings.heading_before != blank -%}{{ section.settings.heading_before }}{{ " " }}{%- endif -%}
                  {%- if section.settings.highlighted_text != blank -%}
                    <span class="ibl-highlighted-text">{{ section.settings.highlighted_text }}</span>
                  {%- endif -%}
                  {%- if section.settings.heading_after != blank -%}{{ " " }}{{ section.settings.heading_after }}{%- endif -%}
                </{{ section.settings.heading_tag }}>
            {%- endcase -%}
          </div>
        {%- endif -%}

        {%- comment -%} Custom HTML - Below Heading (Desktop) {%- endcomment -%}
        {%- if section.settings.custom_html_below_heading != blank -%}
          <div class="ibl-custom-html-below-heading ibl-custom-html-desktop" style="margin-bottom: {{ section.settings.custom_html_below_heading_spacing }}px;">
            {{ section.settings.custom_html_below_heading }}
          </div>
        {%- endif -%}

        {%- comment -%} Subheading (Desktop - appears under heading) {%- endcomment -%}
        {%- if section.settings.subheading != blank -%}
          <div class="ibl-subheading-wrapper ibl-subheading-desktop" style="text-align: {{ section.settings.subheading_text_align_desktop }};">
            <p class="ibl-subheading">{{ section.settings.subheading }}</p>
          </div>
        {%- endif -%}

        {%- comment -%} Custom HTML - Below Subtext (Desktop) {%- endcomment -%}
        {%- if section.settings.custom_html_below_subtext != blank -%}
          <div class="ibl-custom-html-below-subtext ibl-custom-html-desktop" style="margin-bottom: {{ section.settings.custom_html_below_subtext_spacing }}px;">
            {{ section.settings.custom_html_below_subtext }}
          </div>
        {%- endif -%}

        {%- comment -%} Content Box {%- endcomment -%}
        <div class="icon-benefit-content">
            <ul class="icon-benefit-list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'benefit_item' -%}
                <li class="icon-benefit-item" {{ block.shopify_attributes }} style="
                  --item-icon-bg: {{ block.settings.icon_bg_color }};
                  --item-icon-color: {{ block.settings.icon_color }};
                  --item-text-color: {{ block.settings.text_color }};
                ">
                  <div class="icon-benefit-item__icon">
                    {%- if block.settings.custom_svg != blank -%}
                      {%- comment -%} Custom SVG Override {%- endcomment -%}
                      {{ block.settings.custom_svg }}
                    {%- elsif block.settings.material_icon != blank -%}
                      {%- comment -%} Google Material Icon {%- endcomment -%}
                      <span class="material-icons">{{ block.settings.material_icon }}</span>
                    {%- else -%}
                      {%- comment -%} Default Icon {%- endcomment -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                      </svg>
                    {%- endif -%}
                  </div>
                  <div class="icon-benefit-item__text">
                    {%- if block.settings.title != blank -%}
                      <h3 class="icon-benefit-item__title" style="color: {{ block.settings.title_color }};">
                        {{ block.settings.title }}
                      </h3>
                    {%- endif -%}
                    {%- if block.settings.description != blank -%}
                      <div class="icon-benefit-item__description">
                        {{ block.settings.description }}
                      </div>
                    {%- endif -%}
                  </div>
                </li>
              {%- endif -%}
            {%- endfor -%}
            </ul>
        </div>

        {%- comment -%} Render buttons outside .icon-benefit-content {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'button' -%}
              {%- if block.settings.button_text != blank -%}
                <div class="ibl-button-wrapper{% if block.settings.hide_on_desktop %} ibl-button-hide-desktop{% endif %}" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
                  {%- if block.settings.scroll_to_section != blank -%}
                    <a href="#" class="{% unless block.settings.use_custom_styles %}theme-button {% endunless %}ibl-button{% if block.settings.use_custom_styles %} ibl-button--custom-styles{% endif %} scroll-to-section" data-scroll-target="{{ block.settings.scroll_to_section }}">
                      {%- if block.settings.icon_position == 'left' -%}
                        {%- if block.settings.button_custom_icon != blank or block.settings.button_icon != blank -%}
                          <span class="ibl-button-icon ibl-button-icon--left">
                            {%- if block.settings.button_custom_icon != blank -%}
                              {{ block.settings.button_custom_icon }}
                            {%- elsif block.settings.button_icon != blank -%}
                              {% render 'material-icon', icon: block.settings.button_icon, filled: block.settings.button_icon_filled %}
                            {%- endif -%}
                          </span>
                        {%- endif -%}
                      {%- endif -%}
                      <span class="ibl-button-text">{{- block.settings.button_text -}}</span>
                      {%- if block.settings.icon_position == 'right' -%}
                        {%- if block.settings.button_custom_icon != blank or block.settings.button_icon != blank -%}
                          <span class="ibl-button-icon ibl-button-icon--right">

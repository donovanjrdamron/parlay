{% comment %}
  Testimonial Reviews Slider Section
  A slider showcasing customer reviews and testimonials
{% endcomment %}

<section class="testimonial-reviews-slider section-{{ section.id }} {% if section.settings.hide_on_mobile %}hide-mobile{% endif %} {% if section.settings.hide_on_desktop %}hide-desktop{% endif %}" data-section-id="{{ section.id }}">
  <style>
    /* ===========================
       Section Background & Padding
       =========================== */
    .section-{{ section.id }} {
      {% if section.settings.override_section_settings %}
        {% if section.settings.section_gradient_enabled %}
          background: {{ section.settings.section_gradient_background }};
        {% else %}
          background-color: {{ section.settings.section_background_color }};
        {% endif %}
      {% else %}
        {% if settings.enable_global_section_settings %}
          {% if settings.global_section_use_gradient_background %}
            background: {{ settings.global_section_gradient_background }};
          {% else %}
            background-color: {{ settings.global_section_background_color }};
          {% endif %}
        {% else %}
          background-color: #ffffff;
        {% endif %}
      {% endif %}
      padding-top: {{ section.settings.section_padding_top_mobile }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }} {
        padding-top: {{ section.settings.section_padding_top_desktop }}px;
        padding-bottom: {{ section.settings.section_padding_bottom_desktop }}px;
      }
    }

    /* ===========================
       Container
       =========================== */
    .section-{{ section.id }} .trs-container {
      max-width: {{ settings.page_width }}px;
      margin: 0 auto;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .trs-container {
        padding-left: 5rem;
        padding-right: 5rem;
      }
    }

    /* ===========================
       Heading Section
       =========================== */
    .section-{{ section.id }} .trs-header-wrapper {
      margin-bottom: {{ section.settings.header_spacing }}px;
    }

    .section-{{ section.id }} .trs-align-left {
      text-align: left;
    }

    .section-{{ section.id }} .trs-align-center {
      text-align: center;
    }

    .section-{{ section.id }} .trs-align-right {
      text-align: right;
    }

    .section-{{ section.id }} .trs-heading {
      font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
      letter-spacing: {{ settings.heading_letter_spacing | divided_by: 1000.0 }}em;
      {% if section.settings.use_theme_colors %}
        color: {{ settings.heading_color }};
      {% else %}
        color: {{ section.settings.heading_color }};
      {% endif %}
      {% if settings.enable_global_typography %}
        font-size: {{ settings.heading_font_size_desktop }}px;
        font-weight: {{ settings.heading_font_weight }};
      {% else %}
        font-size: {{ section.settings.heading_font_size_desktop }}px;
        font-weight: {{ section.settings.heading_font_weight }};
      {% endif %}
      line-height: 1.2;
      margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    }

    /* Highlighted Text */
    .section-{{ section.id }} .trs-highlighted-text {
      display: inline-block;
      font-family: {{ settings.highlighted_text_font.family }}, {{ settings.highlighted_text_font.fallback_families }};
      text-transform: {{ settings.highlighted_text_transform }};
      {% if section.settings.use_theme_colors %}
        {% if settings.highlighted_text_gradient_enabled %}
          background: {{ settings.highlighted_text_gradient }};
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
        {% else %}
          color: {{ settings.highlighted_text_solid_color }};
        {% endif %}
      {% else %}
        {% if section.settings.highlighted_gradient_enabled %}
          background: {{ section.settings.highlighted_gradient }};
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
        {% else %}
          color: {{ section.settings.highlighted_color }};
        {% endif %}
      {% endif %}
      {% if settings.enable_global_typography %}
        font-size: {{ settings.highlighted_text_font_size_desktop }}px;
        font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
      {% else %}
        font-size: {{ section.settings.highlighted_font_size_desktop }}px;
        font-weight: {{ section.settings.highlighted_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
      {% endif %}
    }

    .section-{{ section.id }} .trs-highlighted-text.trs-highlighted-separate {
      display: block;
      width: 100%;
      margin-bottom: {{ section.settings.highlighted_spacing }}px;
    }

    /* Mobile Responsive Typography */
    @media screen and (max-width: 749px) {
      .section-{{ section.id }} .trs-heading {
        {% if settings.enable_global_typography %}
          font-size: {{ settings.heading_font_size_mobile }}px;
        {% else %}
          font-size: {{ section.settings.heading_font_size_mobile }}px;
        {% endif %}
      }

      .section-{{ section.id }} .trs-highlighted-text {
        {% if settings.enable_global_typography %}
          font-size: {{ settings.highlighted_text_font_size_mobile }}px;
        {% else %}
          font-size: {{ section.settings.highlighted_font_size_mobile }}px;
        {% endif %}
      }
    }

    .section-{{ section.id }} .trs-intro-text {
      font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
      color: {{ section.settings.intro_text_color }};
      font-size: {{ section.settings.intro_text_font_size_mobile }}px;
      line-height: 1.6;
      margin: 0 0 {{ section.settings.intro_text_margin_bottom }}px 0;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .trs-intro-text {
        font-size: {{ section.settings.intro_text_font_size_desktop }}px;
      }
    }

    /* ===========================
       Slider Container
       =========================== */
    .section-{{ section.id }} .trs-slider-wrapper {
      position: relative;
      overflow: hidden;
    }

    .section-{{ section.id }} .trs-slider-container {
      overflow-x: scroll;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
      scrollbar-color: {{ section.settings.scrollbar_thumb_color }} {{ section.settings.scrollbar_track_color }};
      padding-bottom: 2rem;
    }

    .section-{{ section.id }} .trs-slider-container::-webkit-scrollbar {
      height: {{ section.settings.scrollbar_height }}px;
      background-color: {{ section.settings.scrollbar_track_color }};
      border-radius: {{ section.settings.scrollbar_border_radius }}px;
    }

    .section-{{ section.id }} .trs-slider-container::-webkit-scrollbar-thumb {
      background-color: {{ section.settings.scrollbar_thumb_color }};
      border-radius: {{ section.settings.scrollbar_border_radius }}px;
    }

    .section-{{ section.id }} .trs-slider-track {
      display: flex;
      gap: {{ section.settings.cards_gap }}px;
      width: max-content;
    }

    /* ===========================
       Review Card
       =========================== */
    .section-{{ section.id }} .trs-card {
      width: {{ section.settings.card_width_mobile }}px;
      min-height: {{ section.settings.card_min_height }}px;
      display: flex;
      flex-direction: column;
      background-color: {{ section.settings.card_background_color }};
      border-radius: {{ section.settings.card_border_radius }}px;
      padding: {{ section.settings.card_padding }}px;
      border: {{ section.settings.card_border_width }}px {{ section.settings.card_border_style }} {{ section.settings.card_border_color }};
      box-shadow: {{ section.settings.card_shadow }};
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .trs-card {
        width: {{ section.settings.card_width_desktop }}px;
      }

      {% if section.settings.card_hover_enabled %}
        .section-{{ section.id }} .trs-card:hover {
          transform: translateY(-{{ section.settings.card_hover_lift }}px);
          box-shadow: {{ section.settings.card_hover_shadow }};
        }
      {% endif %}
    }

    /* ===========================
       Card Content
       =========================== */
    .section-{{ section.id }} .trs-card-title {
      {% if section.settings.title_font_family == 'heading' %}
        font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
      {% elsif section.settings.title_font_family == 'highlight' %}
        font-family: var(--font-accent-family, {{ settings.type_header_font.family }}), {{ settings.type_header_font.fallback_families }};
      {% else %}
        font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
      {% endif %}
      color: {{ section.settings.title_color }};
      font-size: {{ section.settings.title_font_size_mobile }}px;
      font-weight: {{ section.settings.title_font_weight }};
      line-height: 1.3;
      margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
      text-align: center;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .trs-card-title {
        font-size: {{ section.settings.title_font_size_desktop }}px;
      }
    }

    .section-{{ section.id }} .trs-card-content {
      flex-grow: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: {{ section.settings.content_margin_bottom }}px;
    }

    .section-{{ section.id }} .trs-card-description {
      font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
      color: {{ section.settings.description_color }};
      font-size: {{ section.settings.description_font_size_mobile }}px;
      line-height: 1.6;
      text-align: center;
      margin: 0;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .trs-card-description {
        font-size: {{ section.settings.description_font_size_desktop }}px;
      }
    }

    /* ===========================
       Card Footer
       =========================== */
    .section-{{ section.id }} .trs-card-footer {
      margin-top: auto;
      display: flex;
      align-items: center;
      gap: {{ section.settings.footer_gap }}px;
      flex-wrap: wrap;
    }

    .section-{{ section.id }} .trs-rating {
      font-size: {{ section.settings.star_size }}px;
      color: {{ section.settings.star_color }};
      letter-spacing: -1px;
      line-height: 1;
    }

    .section-{{ section.id }} .trs-name {
      display: flex;
      align-items: center;
      gap: 8px;
      font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
      font-size: {{ section.settings.name_font_size }}px;
      font-weight: {{ section.settings.name_font_weight }};
      color: {{ section.settings.name_color }};
      border-right: {{ section.settings.name_border_width }}px solid {{ section.settings.name_border_color }};
      padding-right: 10px;
    }

    .section-{{ section.id }} .trs-verified {
      display: flex;
      gap: 5px;
      align-items: center;
    }

    .section-{{ section.id }} .trs-verified-icon {
      width: {{ section.settings.verified_icon_size }}px;
      height: {{ section.settings.verified_icon_size }}px;
      flex-shrink: 0;
      color: {{ section.settings.verified_icon_color }};
    }

    .section-{{ section.id }} .trs-verified-text {
      font-size: {{ section.settings.verified_font_size }}px;
      color: {{ section.settings.verified_color }};
    }

    /* ===========================
       Visibility Classes
       =========================== */
    .section-{{ section.id }}.hide-mobile {
      display: none;
    }

    .section-{{ section.id }}.hide-desktop {
      display: block;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}.hide-mobile {
        display: block;
      }

      .section-{{ section.id }}.hide-desktop {
        display: none;
      }
    }
  </style>

  <div class="trs-container">
    
    {% comment %} Heading {% endcomment %}
    {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
      <div class="trs-header-wrapper trs-align-{{ section.settings.heading_text_align }}">
        {% case section.settings.highlight_position %}
          {% when 'above' %}
            {% if section.settings.highlighted_text != blank %}
              <span class="trs-highlighted-text trs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {% endif %}
            <{{ section.settings.heading_tag }} class="trs-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
          {% when 'below' %}
            <{{ section.settings.heading_tag }} class="trs-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
            {% if section.settings.highlighted_text != blank %}
              <span class="trs-highlighted-text trs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {% endif %}
          {% when 'inline_first' %}
            <{{ section.settings.heading_tag }} class="trs-heading {{ section.settings.heading_tag }}">
              {% if section.settings.highlighted_text != blank %}
                <span class="trs-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
              {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
            </{{ section.settings.heading_tag }}>
          {% when 'inline_second' %}
            <{{ section.settings.heading_tag }} class="trs-heading {{ section.settings.heading_tag }}">
              {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
              {% if section.settings.highlighted_text != blank %}
                <span class="trs-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
            </{{ section.settings.heading_tag }}>
        {% endcase %}
      </div>
    {% endif %}

    {% comment %} Intro Text {% endcomment %}
    {% if section.settings.intro_text != blank %}
      <div class="trs-intro-text trs-align-{{ section.settings.heading_text_align }}">
        {{ section.settings.intro_text }}
      </div>
    {% endif %}

    {% comment %} Slider {% endcomment %}
    {% if section.blocks.size > 0 %}
      <div class="trs-slider-wrapper">
        <div class="trs-slider-container">
          <div class="trs-slider-track">
            
            {% for block in section.blocks %}
              <div class="trs-card" {{ block.shopify_attributes }}>
                
                {% comment %} Card Title {% endcomment %}
                {% if block.settings.title != blank %}
                  <p class="trs-card-title">{{ block.settings.title }}</p>
                {% endif %}

                {% comment %} Card Content {% endcomment %}
                {% if block.settings.description != blank %}
                  <div class="trs-card-content">
                    <div class="trs-card-description">{{ block.settings.description }}</div>
                  </div>
                {% endif %}

                {% comment %} Card Footer {% endcomment %}
                <div class="trs-card-footer">
                  
                  {% comment %} Star Rating {% endcomment %}
                  {% if block.settings.star_rating > 0 %}
                    <div class="trs-rating">
                      {% assign full_stars = block.settings.star_rating | floor %}
                      {% assign decimal = block.settings.star_rating | modulo: 1 %}
                      {% assign has_half = false %}
                      {% if decimal >= 0.25 and decimal < 0.75 %}
                        {% assign has_half = true %}
                      {% elsif decimal >= 0.75 %}
                        {% assign full_stars = full_stars | plus: 1 %}
                      {% endif %}

                      {% assign next_star = full_stars | plus: 1 %}
                      {% for i in (1..5) %}
                        {% if i <= full_stars %}
                          <span style="color: {{ section.settings.star_color }};">★</span>
                        {% elsif i == next_star and has_half %}
                          <span style="background-image: linear-gradient(to right, {{ section.settings.star_color }} 50%, {{ section.settings.star_empty_color }} 50%); -webkit-background-clip: text !important; -moz-background-clip: text !important; -webkit-text-fill-color: transparent !important;">★</span>
                        {% else %}
                          <span style="color: {{ section.settings.star_empty_color }};">★</span>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}

                  {% comment %} Name {% endcomment %}
                  {% if block.settings.name != blank %}
                    <div class="trs-name">{{ block.settings.name }}</div>
                  {% endif %}

                  {% comment %} Verified Badge {% endcomment %}
                  {% if block.settings.show_verified %}
                    <div class="trs-verified">
                      <svg class="trs-verified-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">

{% comment %}
  Feature Cards Slider Section
  Mobile: Draggable slider with autoplay
  Desktop: Static horizontal display
{% endcomment %}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

<section class="feature-cards-slider section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    
    {% comment %} Section Heading {% endcomment %}
    {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
      <div class="fcs-header-wrapper fcs-align-{{ section.settings.heading_text_align }}">
        {% case section.settings.highlight_position %}
          {% when 'above' %}
            {% if section.settings.highlighted_text != blank %}
              <span class="fcs-highlighted-text fcs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {% endif %}
            <{{ section.settings.heading_tag }} class="fcs-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
          {% when 'below' %}
            <{{ section.settings.heading_tag }} class="fcs-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
            {% if section.settings.highlighted_text != blank %}
              <span class="fcs-highlighted-text fcs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {% endif %}
          {% when 'inline_first' %}
            <{{ section.settings.heading_tag }} class="fcs-heading {{ section.settings.heading_tag }}">
              {% if section.settings.highlighted_text != blank %}
                <span class="fcs-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
              {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
            </{{ section.settings.heading_tag }}>
          {% when 'inline_second' %}
            <{{ section.settings.heading_tag }} class="fcs-heading {{ section.settings.heading_tag }}">
              {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
              {% if section.settings.highlighted_text != blank %}
                <span class="fcs-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
            </{{ section.settings.heading_tag }}>
        {% endcase %}
      </div>
    {% endif %}

    {% comment %} Subheading {% endcomment %}
    {% if section.settings.subheading != blank %}
      <div class="fcs-subheading-wrapper">
        <p class="fcs-subheading">{{ section.settings.subheading }}</p>
      </div>
    {% endif %}

    {% comment %} Slider Container {% endcomment %}
    {% if section.blocks.size > 0 %}
      <div class="fcs-slider-wrapper">
        <div class="fcs-slider-viewport" id="fcs-slider-viewport-{{ section.id }}">
          <div class="fcs-slider-track" id="fcs-slider-track-{{ section.id }}">
            {%- for block in section.blocks -%}
              {%- if block.type == 'feature_card' -%}
              <div class="fcs-card" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
                {% if block.settings.video_url != blank %}
                  <div class="fcs-card-image-wrapper">
                    <video
                      autoplay
                      muted
                      loop
                      playsinline
                      class="fcs-card-video"
                    >
                      <source src="{{ block.settings.video_url }}" type="video/mp4">
                      Your browser does not support the video tag.
                    </video>
                  </div>
                {% elsif block.settings.image != blank %}
                  <div class="fcs-card-image-wrapper">
                    <img
                      src="{{ block.settings.image | image_url: width: 600 }}"
                      srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                              {{ block.settings.image | image_url: width: 600 }} 600w"
                      sizes="(max-width: 768px) 300px, 600px"
                      alt="{{ block.settings.title | escape }}"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      loading="lazy"
                      class="fcs-card-image"
                    >
                  </div>
                {% else %}
                  <div class="fcs-card-image-wrapper">
                    <div class="fcs-image-placeholder">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  </div>
                {% endif %}

                <div class="fcs-card-content">
                  {% comment %} Title with Number Badge {% endcomment %}
                  {% if block.settings.title != blank %}
                    <div class="fcs-title-wrapper">
                      {% if block.settings.enable_number %}
                        {%- liquid
                          assign has_custom_svg = false
                          assign has_google_icon = false
                          assign display_color = block.settings.icon_color

                          if block.settings.custom_svg != blank
                            assign has_custom_svg = true
                            if block.settings.custom_svg_color != blank
                              assign display_color = block.settings.custom_svg_color
                            endif
                          elsif block.settings.google_icon != blank
                            assign has_google_icon = true
                          endif
                        -%}
                        <div class="fcs-number-badge" style="{% if has_custom_svg or has_google_icon %}font-size: {{ block.settings.icon_size }}px; color: {{ display_color }};{% else %}color: {{ block.settings.icon_color }};{% endif %}">
                          {% if has_custom_svg %}
                            <div class="fcs-custom-svg" style="width: {{ block.settings.icon_size }}px; height: {{ block.settings.icon_size }}px; display: inline-flex; align-items: center; justify-content: center; color: {{ display_color }};">
                              {{ block.settings.custom_svg }}
                            </div>
                          {% elsif has_google_icon %}
                            <span class="material-icons" style="font-size: {{ block.settings.icon_size }}px; color: {{ display_color }};">{{ block.settings.google_icon }}</span>
                          {% else %}
                            {{ block.settings.number_value }}
                          {% endif %}
                        </div>
                      {% endif %}
                      <h3 class="fcs-card-title">{{ block.settings.title }}</h3>
                    </div>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div class="fcs-card-description">{{ block.settings.description }}</div>
                  {% endif %}

                  {% comment %} Custom HTML {% endcomment %}
                  {% if block.settings.custom_html != blank %}
                    <div class="fcs-custom-html">
                      {{ block.settings.custom_html }}
                    </div>
                  {% endif %}
                </div>
              </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    {% endif %}

    {% comment %} Render button blocks outside slider track {% endcomment %}
    {%- for block in section.blocks -%}
      {%- if block.type == 'button' -%}
        {%- if block.settings.button_text != blank -%}
          <div class="fcs-button-wrapper" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
            <a
              href="{% if block.settings.scroll_to_section != blank %}#{% elsif block.settings.button_link != blank %}{{ block.settings.button_link }}{% else %}#{% endif %}"
              class="fcs-button {% if block.settings.use_custom_styles %}fcs-button--custom-styles{% endif %}{% if block.settings.scroll_to_section != blank %} scroll-to-section{% endif %}"
              {% if block.settings.scroll_to_section != blank %}data-scroll-target="{{ block.settings.scroll_to_section }}"{% endif %}
            >
              {%- if block.settings.icon_position == 'left' -%}
                {%- if block.settings.button_custom_icon != blank -%}
                  <span class="fcs-button-icon fcs-button-icon--left fcs-button-icon--custom">
                    {{ block.settings.button_custom_icon }}
                  </span>
                {%- elsif block.settings.button_icon != blank -%}
                  <span class="material-symbols-outlined fcs-button-icon fcs-button-icon--left{% if block.settings.button_icon_filled %} material-symbols-filled{% endif %}">
                    {{ block.settings.button_icon }}
                  </span>
                {%- endif -%}
              {%- endif -%}

              <span class="fcs-button-text">{{- block.settings.button_text -}}</span>

              {%- if block.settings.icon_position == 'right' -%}
                {%- if block.settings.button_custom_icon != blank -%}
                  <span class="fcs-button-icon fcs-button-icon--right fcs-button-icon--custom">
                    {{ block.settings.button_custom_icon }}
                  </span>
                {%- elsif block.settings.button_icon != blank -%}
                  <span class="material-symbols-outlined fcs-button-icon fcs-button-icon--right{% if block.settings.button_icon_filled %} material-symbols-filled{% endif %}">
                    {{ block.settings.button_icon }}
                  </span>
                {%- endif -%}
              {%- endif -%}
            </a>
          </div>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

  </div>
</section>

<style>
/* ===========================
   Section Background & Spacing
   =========================== */
.section-{{ section.id }} {
  {% if section.settings.use_theme_colors %}
    background: {{ settings.background_color }};
  {% else %}
    {% if section.settings.gradient_enabled %}
      background: {{ section.settings.gradient_background }};
    {% else %}
      background: {{ section.settings.background_color }};
    {% endif %}
  {% endif %}
  padding-top: {{ section.settings.padding_top_mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }
}

/* ===========================
   Container & Page Width
   =========================== */
.section-{{ section.id }} .page-width {
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 1.5rem;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }} .page-width {
    padding: 0 5rem;
  }
}

/* ===========================
   Header Wrapper
   =========================== */
.section-{{ section.id }} .fcs-header-wrapper {
  margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
}

.section-{{ section.id }} .fcs-header-wrapper.fcs-align-left {
  text-align: left;
}

.section-{{ section.id }} .fcs-header-wrapper.fcs-align-center {
  text-align: center;
}

.section-{{ section.id }} .fcs-header-wrapper.fcs-align-right {
  text-align: right;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-header-wrapper {
    margin-bottom: {{ section.settings.heading_spacing_desktop }}px;
  }
}

/* ===========================
   Heading
   =========================== */
.section-{{ section.id }} .fcs-heading {
  font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
  letter-spacing: {{ settings.heading_letter_spacing | divided_by: 1000.0 }}em;
  {% if section.settings.use_theme_colors %}
    color: {{ settings.heading_color }};
  {% else %}
    color: {{ section.settings.heading_color }};
  {% endif %}
  {% if settings.enable_global_typography %}
    font-size: {{ settings.heading_font_size_desktop }}px;
    font-weight: {{ settings.heading_font_weight }};
  {% else %}
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: {{ section.settings.heading_font_weight }};
  {% endif %}
  line-height: {{ section.settings.heading_line_height }};
  margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
}

/* ===========================
   Highlighted Text
   =========================== */
.section-{{ section.id }} .fcs-highlighted-text {
  display: inline-block;
  font-family: {{ settings.highlighted_text_font.family }}, {{ settings.highlighted_text_font.fallback_families }};
  text-transform: {{ settings.highlighted_text_transform }};
  {% if section.settings.use_theme_colors %}
    {% if settings.highlighted_text_gradient_enabled %}
      background: {{ settings.highlighted_text_gradient }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% else %}
      color: {{ settings.highlighted_text_solid_color }};
    {% endif %}
  {% else %}
    {% if section.settings.highlighted_gradient_enabled %}
      background: {{ section.settings.highlighted_gradient }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% else %}
      color: {{ section.settings.highlighted_color }};
    {% endif %}
  {% endif %}
  {% if settings.enable_global_typography %}
    font-size: {{ settings.highlighted_text_font_size_desktop }}px;
    font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
  {% else %}
    font-size: {{ section.settings.highlight_font_size_desktop }}px;
    font-weight: {{ section.settings.highlight_font_weight }};
  {% endif %}
}

@media screen and (max-width: 768px) {
  .section-{{ section.id }} .fcs-heading {
    {% if settings.enable_global_typography %}
      font-size: {{ settings.heading_font_size_mobile }}px;
    {% else %}
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    {% endif %}
  }

  .section-{{ section.id }} .fcs-highlighted-text {
    {% if settings.enable_global_typography %}
      font-size: {{ settings.highlighted_text_font_size_mobile }}px;
    {% else %}
      font-size: {{ section.settings.highlight_font_size_mobile }}px;
    {% endif %}
  }
}

.section-{{ section.id }} .fcs-highlighted-separate {
  display: block;
  margin-top: {{ section.settings.highlight_margin_top }}px;
  margin-bottom: {{ section.settings.highlight_margin_bottom }}px;
}

/* ===========================
   Subheading
   =========================== */
.section-{{ section.id }} .fcs-subheading-wrapper {
  text-align: {{ section.settings.heading_text_align }};
  margin-bottom: {{ section.settings.subheading_spacing_mobile }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-subheading-wrapper {
    margin-bottom: {{ section.settings.subheading_spacing_desktop }}px;
  }
}

.section-{{ section.id }} .fcs-subheading {
  {% if section.settings.use_theme_colors %}
    color: {{ settings.text_color }};
  {% else %}
    color: {{ section.settings.subheading_color }};
  {% endif %}
  font-size: {{ section.settings.subheading_font_size_mobile }}px;
  font-weight: {{ section.settings.subheading_font_weight }};
  line-height: 1.6;
  margin: 0 auto;
  max-width: {{ section.settings.subheading_max_width }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-subheading {
    font-size: {{ section.settings.subheading_font_size_desktop }}px;
  }
}

/* ===========================
   Slider Wrapper
   =========================== */
.section-{{ section.id }} .fcs-slider-wrapper {
  position: relative;
  max-width: 100%;
  margin: 0 auto;
}

/* ===========================
   Slider Viewport
   =========================== */
.section-{{ section.id }} .fcs-slider-viewport {
  overflow-x: scroll; /* Changed from 'auto' to 'scroll' to always show scrollbar */
  overflow-y: hidden;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: {{ section.settings.scrollbar_thumb_color }} {{ section.settings.scrollbar_track_color }};
  padding: 20px 5px;
  padding-bottom: {{ section.settings.scrollbar_spacing }}px;
}

/* Webkit Scrollbar Styling */
.section-{{ section.id }} .fcs-slider-viewport::-webkit-scrollbar {
  height: {{ section.settings.scrollbar_height }}px;
  display: block; /* Force scrollbar to always be visible */
  -webkit-appearance: none;
}

.section-{{ section.id }} .fcs-slider-viewport::-webkit-scrollbar-track {
  background: {{ section.settings.scrollbar_track_color }};
  border-radius: {{ section.settings.scrollbar_border_radius }}px;
}

.section-{{ section.id }} .fcs-slider-viewport::-webkit-scrollbar-thumb {
  background: {{ section.settings.scrollbar_thumb_color }};
  border-radius: {{ section.settings.scrollbar_border_radius }}px;
}

.section-{{ section.id }} .fcs-slider-viewport::-webkit-scrollbar-thumb:hover {
  background: {{ section.settings.scrollbar_thumb_hover_color }};
}

/* Desktop: Center cards if 4 or fewer, enable slider if more than 4 */
@media screen and (min-width: 769px) {
  {% if section.blocks.size <= 4 %}
    /* 4 or fewer cards: Center them and hide scrollbar */
    .section-{{ section.id }} .fcs-slider-viewport {
      overflow-x: visible;
      scrollbar-width: none;
    }
    
    .section-{{ section.id }} .fcs-slider-viewport::-webkit-scrollbar {
      display: none;
    }
    
    .section-{{ section.id }} .fcs-slider-track {
      justify-content: center;
      width: 100%;
    }
  {% else %}
    /* More than 4 cards: Enable slider on desktop */
    .section-{{ section.id }} .fcs-slider-viewport {
      {% if section.settings.hide_scrollbar_desktop %}
        scrollbar-width: none;
      {% endif %}
    }
    
    .section-{{ section.id }} .fcs-slider-viewport::-webkit-scrollbar {
      {% if section.settings.hide_scrollbar_desktop %}
        display: none;
      {% endif %}
    }
  {% endif %}
}

/* ===========================
   Slider Track
   =========================== */
.section-{{ section.id }} .fcs-slider-track {
  display: flex;
  gap: {{ section.settings.card_gap_mobile }}px;
  min-width: 100%;
  width: max-content;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-slider-track {
    gap: {{ section.settings.card_gap_desktop }}px;
  }
}

/* ===========================
   Card
   =========================== */
.section-{{ section.id }} .fcs-card {
  flex: 0 0 80%;
  max-width: {{ section.settings.card_max_width }}px;
  min-width: 280px;
  height: max-content;
  display: flex;
  flex-direction: column;
  background-color: {{ section.settings.card_background }};
  border: {{ section.settings.card_border_width }}px {{ section.settings.card_border_style }} {{ section.settings.card_border_color }};
  border-radius: {{ section.settings.card_border_radius }}px;
  box-sizing: border-box;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  overflow: hidden;
}

.section-{{ section.id }} .fcs-card:hover {
  transform: translateY(-{{ section.settings.card_hover_lift }}px);
  {% if section.settings.card_hover_shadow %}
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  {% endif %}
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-card {
    flex: 0 0 auto;
  }
}

/* ===========================
   Card Image
   =========================== */
.section-{{ section.id }} .fcs-card-image-wrapper {
  width: 100%;
  aspect-ratio: {{ section.settings.image_aspect_ratio }};
  overflow: hidden;
}

.section-{{ section.id }} .fcs-card-image,
.section-{{ section.id }} .fcs-card-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.section-{{ section.id }} .fcs-image-placeholder {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-{{ section.id }} .fcs-image-placeholder svg {
  width: 50%;
  height: 50%;
  opacity: 0.3;
}

/* ===========================
   Card Content
   =========================== */
.section-{{ section.id }} .fcs-card-content {
  padding: {{ section.settings.card_content_padding }}px;
}

/* ===========================
   Title Wrapper (for inline number + title)
   =========================== */
.section-{{ section.id }} .fcs-title-wrapper {
  display: flex;
  align-items: center;
  gap: {{ section.settings.number_spacing }}px;
  margin-bottom: {{ section.settings.title_spacing }}px;
}

/* ===========================
   Number Badge
   =========================== */
.section-{{ section.id }} .fcs-number-badge {
  width: {{ section.settings.number_size }}px;
  height: {{ section.settings.number_size }}px;
  background: {{ section.settings.number_background }};
  color: {{ section.settings.number_text_color }};
  border-radius: {{ section.settings.number_border_radius }}%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: {{ section.settings.number_font_size_mobile }}px;
  font-weight: {{ section.settings.number_font_weight }};
  border: {{ section.settings.number_border_width }}px solid {{ section.settings.number_border_color }};
  flex-shrink: 0;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-number-badge {
    font-size: {{ section.settings.number_font_size_desktop }}px;
  }
}

/* Custom SVG & Google Icons */
.section-{{ section.id }} .fcs-custom-svg svg {
  width: 100%;
  height: 100%;
}

{% for block in section.blocks %}
  {% if block.type == 'feature_card' %}
    .section-{{ section.id }} .fcs-card[data-block-id="{{ block.id }}"] .fcs-custom-svg svg {
      {% if block.settings.icon_fill_enabled %}
        fill: {{ block.settings.icon_fill_color }};
      {% else %}
        fill: none;
      {% endif %}
      {% if block.settings.icon_outline_enabled %}
        stroke: {{ block.settings.icon_outline_color }};
        stroke-width: {{ block.settings.icon_outline_width }}px;
      {% else %}
        stroke: none;
      {% endif %}
    }
  {% endif %}
{% endfor %}

.section-{{ section.id }} .fcs-number-badge .material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-feature-settings: 'liga';
  -webkit-font-smoothing: antialiased;
}

/* ===========================
   Custom HTML
   =========================== */
.section-{{ section.id }} .fcs-custom-html {
  margin-top: {{ section.settings.custom_html_spacing }}px;
}

/* ===========================
   Card Content Alignment
   =========================== */
.section-{{ section.id }} .fcs-card-content {
  text-align: {{ section.settings.card_content_alignment }};
}

.section-{{ section.id }} .fcs-title-wrapper {
  {% if section.settings.card_content_alignment == 'center' %}
    justify-content: center;
  {% elsif section.settings.card_content_alignment == 'right' %}
    justify-content: flex-end;
  {% else %}
    justify-content: flex-start;
  {% endif %}
}

/* ===========================
   Card Title
   =========================== */
.section-{{ section.id }} .fcs-card-title {
  margin: 0;
  font-weight: {{ section.settings.title_font_weight }};
  color: {{ section.settings.title_color }};
  font-size: {{ section.settings.title_font_size_mobile }}px;
  line-height: 1.3;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-card-title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
  }
}

/* ===========================
   Card Description
   =========================== */
.section-{{ section.id }} .fcs-card-description {
  font-size: {{ section.settings.description_font_size_mobile }}px;
  font-weight: {{ section.settings.description_font_weight }};
  color: {{ section.settings.description_color }};
  line-height: 1.6;
  margin: 0;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .fcs-card-description {
    font-size: {{ section.settings.description_font_size_desktop }}px;
  }
}

/* ===========================
   Button Block Styles
   =========================== */
{% for block in section.blocks %}
  {% if block.type == 'button' %}
    #shopify-section-{{ section.id }} .fcs-button-wrapper[data-block-id="{{ block.id }}"] {
      margin-top: {{ block.settings.margin_top | default: 0 }}px;
      margin-bottom: {{ block.settings.margin_bottom | default: 24 }}px;
      text-align: {{ block.settings.alignment_desktop | default: 'left' }};
      {% if block.settings.hide_on_desktop %}
        display: none;
      {% endif %}
    }

    @media screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} .fcs-button-wrapper[data-block-id="{{ block.id }}"] {
        text-align: {{ block.settings.alignment_mobile | default: 'center' }};
        {% if block.settings.hide_on_desktop %}
          display: block;
        {% endif %}
      }

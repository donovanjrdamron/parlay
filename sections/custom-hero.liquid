{{ 'hero.css' | asset_url | stylesheet_tag }}
{% style %}
  /* Rating block container background styles */
  {% for block in section.blocks %}
    {% if block.type == 'rating' and block.settings.enable_container_background %}
      .custom-hero__rating-wrapper[data-block-id="{{ block.id }}"] {
        background-color: {{ block.settings.container_background_color | default: '#f8f9fa' }} !important;
        padding: {{ block.settings.container_padding_vertical | default: 12 }}px {{ block.settings.container_padding_horizontal | default: 20 }}px !important;
        border-radius: {{ block.settings.container_border_radius | default: 8 }}px !important;
        display: inline-block !important;
        width: auto !important;
        {% if block.settings.enable_container_border %}
          border: {{ block.settings.container_border_width | default: 1 }}px solid {{ block.settings.container_border_color | default: '#e9ecef' }} !important;
        {% endif %}
      }
    {% endif %}
  {% endfor %}

  /* Rating block base styles */
  .custom-hero__rating-container {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .custom-hero__rating-stars {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .custom-hero__rating-stars svg {
    width: 16px;
    height: 16px;
  }

  .custom-hero__rating-text {
    font-size: 14px;
    line-height: 1.4;
  }

  .custom-hero__rating-text p {
    margin: 0;
  }

  .custom-hero__rating-text strong,
  .custom-hero__rating-text b {
    margin-right: 4px;
  }

  .custom-hero__profile-images {
    display: flex;
    align-items: center;
  }

  .custom-hero__profile-image {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid #fff;
    margin-left: -8px;
  }

  .custom-hero__profile-image:first-child {
    margin-left: 0;
  }

  /* Block margin customization */
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'badge' %}
        .custom-hero__badge-wrapper[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 16 }}px !important;
          justify-content: {% if section.settings.desktop_content_alignment == 'center' %}center{% elsif section.settings.desktop_content_alignment == 'right' %}flex-end{% else %}flex-start{% endif %} !important;
        }
        @media (max-width: 768px) {
          .custom-hero__badge-wrapper[data-block-id="{{ block.id }}"] {
            justify-content: {% if section.settings.mobile_content_alignment == 'center' %}center{% elsif section.settings.mobile_content_alignment == 'right' %}flex-end{% else %}flex-start{% endif %} !important;
          }
        }
        {% if block.settings.enable_container_background %}
          .custom-hero__badge-wrapper[data-block-id="{{ block.id }}"] .custom-hero__badge {
            background-color: {{ block.settings.container_background_color | default: '#f8f9fa' }} !important;
            padding: {{ block.settings.container_padding_vertical | default: 8 }}px {{ block.settings.container_padding_horizontal | default: 16 }}px !important;
            border-radius: {{ block.settings.container_border_radius | default: 20 }}px !important;
            display: inline-block !important;
          }
        {% endif %}
      {% when 'rating' %}
        .custom-hero__rating-wrapper[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 16 }}px !important;
        }
        .custom-hero__rating-wrapper[data-block-id="{{ block.id }}"] .custom-hero__rating-text {
          color: {{ block.settings.rating_text_color | default: '#000000' }} !important;
        }
        .custom-hero__rating-wrapper[data-block-id="{{ block.id }}"] .custom-hero__rating-stars svg {
          fill: {{ block.settings.star_color | default: '#FFD700' }} !important;
        }
      {% when 'guarantee' %}
        .custom-hero__guarantee[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 16 }}px !important;
          justify-content: {% if block.settings.alignment == 'center' %}center{% elsif block.settings.alignment == 'right' %}flex-end{% else %}flex-start{% endif %} !important;
        }
      {% when 'heading' %}
        .section-{{ section.id }}.custom-hero .custom-hero__title[data-block-id="{{ block.id }}"],
        .section-{{ section.id }}.custom-hero .custom-hero__title.section-heading[data-block-id="{{ block.id }}"],
        .custom-hero__content-wrapper .custom-hero__title[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 16 }}px !important;
          font-size: {{ block.settings.font_size_desktop | default: 48 }}px !important;
          line-height: {{ block.settings.line_height | default: 1.2 }} !important;
          font-weight: {{ block.settings.font_weight | default: 700 }} !important;
          letter-spacing: {{ block.settings.letter_spacing | default: 0 }}px !important;
          text-transform: {{ block.settings.text_transform | default: 'none' }} !important;
          color: {% if block.settings.use_theme_colors %}{{ settings.heading_color }}{% else %}{{ block.settings.heading_color | default: '#000000' }}{% endif %} !important;
        }

        @media (max-width: 768px) {
          .section-{{ section.id }}.custom-hero .custom-hero__title[data-block-id="{{ block.id }}"],
          .section-{{ section.id }}.custom-hero .custom-hero__title.section-heading[data-block-id="{{ block.id }}"],
          .custom-hero__content-wrapper .custom-hero__title[data-block-id="{{ block.id }}"] {
            font-size: {{ block.settings.font_size_mobile | default: 32 }}px !important;
          }
        }

        /* Highlight/Accent Text Styles */
        .custom-hero__title[data-block-id="{{ block.id }}"] .section-accent-text {
          font-size: {{ block.settings.highlight_font_size_desktop | default: 48 }}px !important;
          font-weight: {{ block.settings.highlight_font_weight | default: 700 }} !important;
          {% if block.settings.use_theme_colors %}
            {% comment %} Use theme colors {% endcomment %}
            {% if settings.highlighted_text_gradient_enabled and settings.highlighted_text_gradient != blank %}
              background: {{ settings.highlighted_text_gradient }} !important;
              -webkit-background-clip: text !important;
              -webkit-text-fill-color: transparent !important;
              background-clip: text !important;
              text-fill-color: transparent !important;
            {% else %}
              color: {{ settings.highlighted_text_solid_color | default: '#EF4A65' }} !important;
            {% endif %}
          {% else %}
            {% comment %} Use block-specific colors {% endcomment %}
            {% if block.settings.use_highlight_gradient and block.settings.highlight_gradient != blank %}
              background: {{ block.settings.highlight_gradient }} !important;
              -webkit-background-clip: text !important;
              -webkit-text-fill-color: transparent !important;
              background-clip: text !important;
              text-fill-color: transparent !important;
            {% else %}
              color: {{ block.settings.highlight_color | default: '#EF4A65' }} !important;
            {% endif %}
          {% endif %}
        }

        @media (max-width: 768px) {
          .custom-hero__title[data-block-id="{{ block.id }}"] .section-accent-text {
            font-size: {{ block.settings.highlight_font_size_mobile | default: 32 }}px !important;
          }
        }

        /* Highlight Position Styles */
        {% if block.settings.highlight_position == 'above' or block.settings.highlight_position == 'below' %}
          .custom-hero__title[data-block-id="{{ block.id }}"] {
            display: flex !important;
            flex-direction: {% if block.settings.highlight_position == 'above' %}column-reverse{% else %}column{% endif %} !important;
            gap: 8px !important;
          }

          .custom-hero__title[data-block-id="{{ block.id }}"] .section-accent-text {
            display: block !important;
          }
        {% endif %}
      {% when 'subtitle' %}
        .section-{{ section.id }}.custom-hero .custom-hero__subtitle[data-block-id="{{ block.id }}"],
        .custom-hero__content-wrapper .custom-hero__subtitle[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 24 }}px !important;
          padding-top: {{ block.settings.padding_top | default: 0 }}px !important;
          padding-bottom: {{ block.settings.padding_bottom | default: 0 }}px !important;
          padding-left: {{ block.settings.padding_left | default: 0 }}px !important;
          padding-right: {{ block.settings.padding_right | default: 0 }}px !important;
          text-align: {{ block.settings.alignment | default: 'left' }} !important;
          color: {{ block.settings.text_color | default: '#000000' }} !important;
        }
      {% when 'benefits' %}
        .custom-hero__benefits[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 24 }}px !important;
        }
      {% when 'button' %}
        .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 24 }}px !important;
          {% if block.settings.full_width %}
            width: 100% !important;
          {% endif %}
        }
        {% if block.settings.use_custom_styles %}
          .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button--custom-styles {
            /* Base button styles */
            display: inline-block !important;
            text-decoration: none !important;
            cursor: pointer !important;
            text-align: center !important;
            line-height: 1.2 !important;
            width: auto !important;
            box-shadow: none !important;
            transform: none !important;
            /* Custom styles */
            color: {{ block.settings.button_text_color | default: '#FFFFFF' }} !important;
            {% if block.settings.use_gradient %}
              background: {{ block.settings.button_gradient }} !important;
            {% else %}
              background-color: {{ block.settings.button_bg_color | default: '#000000' }} !important;
            {% endif %}
            border: {{ block.settings.border_width | default: 0 }}px solid {{ block.settings.border_color | default: '#000000' }} !important;
            border-radius: {{ block.settings.border_radius | default: 4 }}px !important;
            font-size: {{ block.settings.font_size_desktop | default: 16 }}px !important;
            font-weight: {{ block.settings.font_weight | default: '600' }} !important;
            text-transform: {{ block.settings.text_transform | default: 'uppercase' }} !important;
            letter-spacing: {{ block.settings.letter_spacing | default: 1 }}px !important;
            padding: {{ block.settings.padding_vertical | default: 12 }}px {{ block.settings.padding_horizontal | default: 24 }}px !important;
            transition: all 0.3s ease !important;
          }
          .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button--custom-styles:hover {
            color: {{ block.settings.button_text_color_hover | default: '#FFFFFF' }} !important;
            {% unless block.settings.use_gradient %}
              background-color: {{ block.settings.button_bg_color_hover | default: '#333333' }} !important;
            {% endunless %}
            transform: none !important;
            box-shadow: none !important;
          }
          @media (max-width: 768px) {
            .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button--custom-styles {
              font-size: {{ block.settings.font_size_mobile | default: 14 }}px !important;
            }
          }
        {% endif %}
        {% if block.settings.full_width %}
          .section-{{ section.id }}.custom-hero .custom-hero__button-wrapper[data-block-id="{{ block.id }}"],
          .custom-hero__content-wrapper .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] {
            width: 100% !important;
            display: block !important;
          }
          .section-{{ section.id }}.custom-hero .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button,
          .section-{{ section.id }}.custom-hero .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .theme-button,
          .custom-hero__content-wrapper .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button,
          .custom-hero__content-wrapper .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
            width: 100% !important;
            display: block !important;
            text-align: center !important;
            max-width: none !important;
          }
        {% endif %}
        @media (max-width: 768px) {
          {% if block.settings.full_width_mobile_only %}
            .section-{{ section.id }}.custom-hero .custom-hero__button-wrapper[data-block-id="{{ block.id }}"],
            .custom-hero__content-wrapper .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] {
              width: 100% !important;
              display: block !important;
            }
            .custom-hero .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button,
            .custom-hero .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .theme-button,
            .custom-hero__content-wrapper .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .custom-hero__button,
            .custom-hero__content-wrapper .custom-hero__button-wrapper[data-block-id="{{ block.id }}"] .theme-button {
              width: 100% !important;
              display: block !important;
              text-align: center !important;
              max-width: none !important;
            }
          {% endif %}
        }
      {% when 'guarantee' %}
        .custom-hero__guarantee[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 0 }}px !important;
          text-align: {{ block.settings.alignment | default: 'center' }} !important;
        }
      {% when 'custom_html' %}
        .custom-hero__custom-html[data-block-id="{{ block.id }}"] {
          margin-top: {{ block.settings.margin_top | default: 0 }}px !important;
          margin-bottom: {{ block.settings.margin_bottom | default: 16 }}px !important;
          width: 100%;
        }
    {% endcase %}
  {% endfor %}

  .section-{{ section.id }}.custom-hero {
    {% if section.settings.use_theme_colors %}
      {% if settings.section_gradient_enabled %}
        background: {{ settings.section_gradient_background }};
      {% else %}
        background-color: {{ settings.section_background_color }};
      {% endif %}
    {% elsif section.settings.enable_gradient %}
      background: {{ section.settings.section_gradient_background }};
    {% else %}
      background-color: {{ section.settings.section_bg }};
    {% endif %}
    padding: {{ section.settings.section_padding_vertical }}px {{ section.settings.section_padding_horizontal }}px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media screen and (max-width: 768px) {
    .section-{{ section.id }}.custom-hero {
      padding: {{ section.settings.section_padding_vertical_mobile }}px {{ section.settings.section_padding_horizontal_mobile }}px;
    }
  }


  .custom-hero__container {
    max-width: {{ section.settings.container_max_width | default: 1200 }}px;
    margin: 0 auto;
    {% if section.settings.contain_section %}
      padding: {{ section.settings.container_padding_top }}px {{ section.settings.container_padding_right }}px {{ section.settings.container_padding_bottom }}px {{ section.settings.container_padding_left }}px;
      border-radius: {{ section.settings.border_radius }}px;
      {% if section.settings.enable_container_gradient %}
        background: {{ section.settings.container_gradient_background }};
      {% else %}
        background-color: {{ section.settings.container_bg_color }};
      {% endif %}
      {% if section.settings.enable_border %}
        border: {{ section.settings.border_width }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
      {% endif %}
      {% if section.settings.enable_shadow %}
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      {% endif %}
      {% if section.settings.fit_image_to_height %}
        overflow: hidden;
      {% endif %}
    {% endif %}
  }

  @media screen and (max-width: 768px) {
    .custom-hero__container {
      {% if section.settings.contain_section %}
        padding: {{ section.settings.container_padding_top_mobile }}px {{ section.settings.container_padding_right_mobile }}px {{ section.settings.container_padding_bottom_mobile }}px {{ section.settings.container_padding_left_mobile }}px;
      {% endif %}
    }
  }

  .custom-hero__flex {
    align-items: {% if section.settings.fit_image_to_height %}stretch{% else %}center{% endif %};
    gap: {% if section.settings.fit_image_to_height %}0{% else %}40px{% endif %};
  }

  @media screen and (max-width: 768px) {
    .custom-hero__flex {
      {% if section.settings.fit_image_to_height %}
        flex-direction: column;
      {% endif %}
    }
  }

  {% if section.settings.fit_image_to_height %}
    .custom-hero__image-wrapper {
      padding: 0;
      overflow: hidden;
      {% if section.settings.contain_section %}
        flex: 1;
      {% endif %}
    }

    @media screen and (max-width: 768px) {
      .custom-hero__image-wrapper {
        {% if section.settings.contain_section %}
          width: 100%;
          max-width: 100%;
          flex: none;
        {% endif %}
      }
    }
  {% endif %}

  .custom-hero__image {
    border-radius: {% if section.settings.fit_image_to_height %}0{% else %}8px{% endif %};
    {% if section.settings.fit_image_to_height %}
      height: 100%;
      object-fit: cover;
      width: 100%;
    {% endif %}
  }

  /* Aspect Ratio Styles */
  .section-{{ section.id }} .custom-hero__image-wrapper {
    position: relative;
    width: 100%;
  }

  /* Desktop Aspect Ratio */
  @media screen and (min-width: 750px) {
    {% if section.settings.desktop_aspect_ratio != 'auto' %}
      .section-{{ section.id }} .custom-hero__image-wrapper {
        aspect-ratio: {{ section.settings.desktop_aspect_ratio }} !important;
        overflow: hidden;
      }

      .section-{{ section.id }} .custom-hero__image-wrapper .custom-hero__image {
        width: 100% !important;
        height: 100% !important;
        object-fit: cover !important;
      }
    {% endif %}

    /* Show desktop image, hide mobile image on desktop */
    .section-{{ section.id }} .custom-hero__image--desktop {
      display: block;
    }

    .section-{{ section.id }} .custom-hero__image--mobile {
      display: none;
    }
  }

  /* Mobile Aspect Ratio */
  @media screen and (max-width: 749px) {
    {% if section.settings.mobile_aspect_ratio != 'auto' %}
      .section-{{ section.id }} .custom-hero__image-wrapper {
        aspect-ratio: {{ section.settings.mobile_aspect_ratio }} !important;
        overflow: hidden;
      }

      .section-{{ section.id }} .custom-hero__image-wrapper .custom-hero__image {
        width: 100% !important;
        height: 100% !important;
        object-fit: cover !important;
      }
    {% endif %}

    /* Hide desktop image, show mobile image on mobile */
    .section-{{ section.id }} .custom-hero__image--desktop {
      display: none;
    }

    .section-{{ section.id }} .custom-hero__image--mobile {
      display: block;
    }
  }

  .custom-hero__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {% if section.settings.fit_image_to_height %}0{% else %}8px{% endif %};
    background-color: {% if section.settings.use_theme_colors %}{{ settings.section_background_color }}{% else %}{{ section.settings.section_bg }}{% endif %};
    z-index: 2;
  }

  /* Force hide video controls immediately, even during page load */
  .custom-hero__video {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  .custom-hero__video::-webkit-media-controls {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }

  .custom-hero__video::-webkit-media-controls-panel {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }

  .custom-hero__video::-webkit-media-controls-play-button {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }

  .custom-hero__video::-webkit-media-controls-start-playback-button {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }

  .custom-hero__video::-webkit-media-controls-enclosure {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-timeline {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-current-time-display {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-time-remaining-display {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-mute-button {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-toggle-closed-captions-button {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-volume-slider {
    display: none !important;
  }

  .custom-hero__video::-webkit-media-controls-fullscreen-button {
    display: none !important;
  }

  .custom-hero__video::-moz-media-controls {
    display: none !important;
  }

  .custom-hero__video::-ms-media-controls {
    display: none !important;
  }

  /* Additional fallback to ensure no controls show */
  .custom-hero__video[controls] {
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    appearance: none !important;
  }

  /* Hide video initially and fade in when loaded */
  .custom-hero__video {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .custom-hero__video.loaded {
    opacity: 1;
  }

  /* Video container to handle video and fallback positioning */
  .custom-hero__video-container {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: {% if section.settings.use_theme_colors %}{{ settings.section_background_color }}{% else %}{{ section.settings.section_bg }}{% endif %};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Loading indicator for video */
  .custom-hero__video-container::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-top: 2px solid rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    animation: videoLoadingSpin 1s linear infinite;
    z-index: 1;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  /* Hide loading indicator when video loads or errors */
  .custom-hero__video-container.video-loaded::before,
  .custom-hero__video-container.video-error::before {
    opacity: 0;
  }

  @keyframes videoLoadingSpin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  /* Fallback image - hidden by default, only shows if video fails */
  .custom-hero__video-fallback {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {% if section.settings.fit_image_to_height %}0{% else %}8px{% endif %};
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    z-index: 1;
  }

  /* Show fallback image only when video fails to load */
  .custom-hero__video-container.video-error .custom-hero__video-fallback {
    opacity: 1;
  }

  /* Hide video when it fails to load */
  .custom-hero__video-container.video-error .custom-hero__video {
    opacity: 0;
  }


  {% if section.settings.enable_image_fade_mask %}
    {% assign fade_height = section.settings.image_fade_mask_height | default: 50 %}
    {% assign fade_20 = fade_height | times: 0.2 %}
    {% assign fade_50 = fade_height | times: 0.5 %}
    {% assign fade_100 = fade_height %}

    .section-{{ section.id }} .custom-hero__image-wrapper {
      {% if section.settings.image_position == 'left' %}
        -webkit-mask-image: linear-gradient(to left, rgba(0,0,0,0) 0%, rgba(0,0,0,0.1) {{ fade_20 }}%, rgba(0,0,0,0.5) {{ fade_50 }}%, rgba(0,0,0,1) {{ fade_100 }}%);
        mask-image: linear-gradient(to left, rgba(0,0,0,0) 0%, rgba(0,0,0,0.1) {{ fade_20 }}%, rgba(0,0,0,0.5) {{ fade_50 }}%, rgba(0,0,0,1) {{ fade_100 }}%);
      {% else %}
        -webkit-mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0.1) {{ fade_20 }}%, rgba(0,0,0,0.5) {{ fade_50 }}%, rgba(0,0,0,1) {{ fade_100 }}%);

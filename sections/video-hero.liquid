{% style %}
  .video-hero-{{ section.id }} {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.min_height }}vh;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
    border-radius: 0 0 {{ section.settings.border_radius }}px {{ section.settings.border_radius }}px;
    z-index: 1;
    border: none !important;
    outline: none !important;
    box-shadow: none !important;
  }

  #shopify-section-{{ section.id }} {
    border: none !important;
    outline: none !important;
    box-shadow: none !important;
  }

  {% if request.page_type == 'index' %}
    .video-hero-{{ section.id }} {
      margin-top: calc(var(--header-height, 0px) * -1);
      padding-top: var(--header-height, 0px);
    }
  {% endif %}

  .video-hero-{{ section.id }} .video-hero__video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .video-hero-{{ section.id }} .video-hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .video-hero-{{ section.id }} .video-hero__video--desktop {
    display: block;
  }

  .video-hero-{{ section.id }} .video-hero__video--mobile {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .video-hero-{{ section.id }} .video-hero__video--desktop {
      display: none;
    }

    .video-hero-{{ section.id }} .video-hero__video--mobile {
      display: block;
    }
  }

  .video-hero-{{ section.id }} .video-hero__video-fallback {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    z-index: 1;
  }

  .video-hero-{{ section.id }} .video-hero__video-container.video-error .video-hero__video-fallback {
    opacity: 1;
  }

  .video-hero-{{ section.id }} .video-hero__video-container.video-error .video-hero__video {
    opacity: 0;
  }

  .video-hero-{{ section.id }} .video-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .video-hero-{{ section.id }} .video-hero__content {
    position: absolute;
    {% if section.settings.content_position_type == 'percentage' %}
      top: {{ section.settings.content_top_position }}%;
      {% if section.settings.content_top_position == 50 %}
        transform: translateY(-50%);
      {% else %}
        transform: translateY({{ section.settings.content_vertical_offset }}px);
      {% endif %}
    {% else %}
      top: auto;
      bottom: {{ section.settings.content_bottom_position }}px;
      transform: translateY({{ section.settings.content_vertical_offset }}px);
    {% endif %}
    left: {{ section.settings.content_left_margin }}px;
    z-index: 3;
    width: {{ section.settings.content_width }}px;
    max-width: {{ section.settings.content_max_width }}px;
    padding: {{ section.settings.content_padding_vertical }}px {{ section.settings.content_padding_horizontal }}px;
    text-align: {{ section.settings.text_alignment }} !important;
    color: {{ section.settings.text_color }};
  }

  .video-hero-{{ section.id }} .video-hero__heading {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: {{ section.settings.heading_line_height }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
    margin: {{ section.settings.heading_margin_top }}px 0 {{ section.settings.heading_margin_bottom }}px 0;
    color: {{ section.settings.heading_color }};
    text-align: {{ section.settings.text_alignment }} !important;
    width: 100%;
    max-width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .video-hero-{{ section.id }} .video-hero__subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
    font-weight: {{ section.settings.subheading_font_weight }};
    line-height: {{ section.settings.subheading_line_height }};
    letter-spacing: {{ section.settings.subheading_letter_spacing }}px;
    margin: {{ section.settings.subheading_margin_top }}px 0 {{ section.settings.subheading_margin_bottom }}px 0;
    color: {{ section.settings.subheading_color }};
    text-align: {{ section.settings.text_alignment }} !important;
    width: 100%;
    max-width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .video-hero-{{ section.id }} .video-hero__text {
    font-size: {{ section.settings.text_font_size }}px;
    line-height: {{ section.settings.text_line_height }};
    letter-spacing: {{ section.settings.text_letter_spacing }}px;
    margin: {{ section.settings.text_margin_top }}px 0 {{ section.settings.text_margin_bottom }}px 0;
    color: {{ section.settings.text_color }};
    text-align: {{ section.settings.text_alignment }} !important;
    width: 100%;
    max-width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .video-hero-{{ section.id }} .video-hero__text p {
    text-align: {{ section.settings.text_alignment }} !important;
    margin: 0;
  }

  .video-hero-{{ section.id }} .video-hero__button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    transition: all 0.3s ease;
  }

  .video-hero-{{ section.id }} .video-hero__button:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  /* Hide video controls */
  .video-hero-{{ section.id }} .video-hero__video {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  .video-hero-{{ section.id }} .video-hero__video::-webkit-media-controls {
    display: none !important;
  }

  .video-hero-{{ section.id }} .video-hero__video::-webkit-media-controls-panel {
    display: none !important;
  }

  .video-hero-{{ section.id }} .video-hero__video::-webkit-media-controls-play-button {
    display: none !important;
  }

  .video-hero-{{ section.id }} .video-hero__video::-webkit-media-controls-start-playback-button {
    display: none !important;
  }

  .video-hero-{{ section.id }} .video-hero__video::-moz-media-controls {
    display: none !important;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .video-hero-{{ section.id }} {
      min-height: {{ section.settings.min_height_mobile }}vh;
    }

    .video-hero-{{ section.id }} {
      border-radius: 0 0 {{ section.settings.border_radius_mobile }}px {{ section.settings.border_radius_mobile }}px;
    }

    .video-hero-{{ section.id }} .video-hero__content {
      {% if section.settings.content_position_type == 'percentage' %}
        top: {{ section.settings.content_top_position_mobile }}%;
        {% if section.settings.content_top_position_mobile == 50 %}
          transform: translateY(-50%);
        {% else %}
          transform: translateY({{ section.settings.content_vertical_offset_mobile }}px);
        {% endif %}
      {% else %}
        top: auto;
        bottom: {{ section.settings.content_bottom_position_mobile }}px;
        transform: translateY({{ section.settings.content_vertical_offset_mobile }}px);
      {% endif %}
      left: {{ section.settings.content_left_margin_mobile }}px;
      width: {{ section.settings.content_width_mobile }}px;
      max-width: calc(100% - {{ section.settings.content_left_margin_mobile | times: 2 }}px);
      padding: {{ section.settings.content_padding_vertical_mobile }}px {{ section.settings.content_padding_horizontal_mobile }}px;
    }

    .video-hero-{{ section.id }} .video-hero__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .video-hero-{{ section.id }} .video-hero__subheading {
      font-size: {{ section.settings.subheading_font_size_mobile }}px;
    }

    .video-hero-{{ section.id }} .video-hero__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }

    .video-hero-{{ section.id }} .video-hero__button {
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
  }

  /* Animation */
  .video-hero-{{ section.id }} .video-hero__content {
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{% endstyle %}

<section class="video-hero-{{ section.id }}">
  {% comment %} Video Background {% endcomment %}
  <div class="video-hero__video-container">
    {% comment %} Desktop Video {% endcomment %}
    {% if section.settings.hero_video != blank %}
      <link rel="preload" as="video" href="{{ section.settings.hero_video.sources[1].url }}" type="video/mp4">
      <video 
        class="video-hero__video video-hero__video--desktop" 
        autoplay 
        muted 
        loop 
        playsinline 
        preload="auto"
        webkit-playsinline
        x5-playsinline
        data-video-desktop
      >
        <source src="{{ section.settings.hero_video.sources[1].url }}" type="video/mp4">
      </video>
    {% endif %}

    {% comment %} Mobile Video {% endcomment %}
    {% if section.settings.hero_video_mobile != blank %}
      <link rel="preload" as="video" href="{{ section.settings.hero_video_mobile.sources[1].url }}" type="video/mp4">
      <video 
        class="video-hero__video video-hero__video--mobile" 
        autoplay 
        muted 
        loop 
        playsinline 
        preload="auto"
        webkit-playsinline
        x5-playsinline
        data-video-mobile
      >
        <source src="{{ section.settings.hero_video_mobile.sources[1].url }}" type="video/mp4">
      </video>
    {% elsif section.settings.hero_video != blank %}
      {% comment %} Fallback to desktop video on mobile if no mobile video is set {% endcomment %}
      <link rel="preload" as="video" href="{{ section.settings.hero_video.sources[1].url }}" type="video/mp4">
      <video 
        class="video-hero__video video-hero__video--mobile" 
        autoplay 
        muted 
        loop 
        playsinline 
        preload="auto"
        webkit-playsinline
        x5-playsinline
        data-video-mobile
      >
        <source src="{{ section.settings.hero_video.sources[1].url }}" type="video/mp4">
      </video>
    {% endif %}

    {% comment %} Fallback Image {% endcomment %}
    {% if section.settings.fallback_image %}
      {{ section.settings.fallback_image | image_url: width: 1920 | image_tag: class: 'video-hero__video-fallback', loading: 'lazy', alt: section.settings.heading }}
    {% elsif section.settings.fallback_image_mobile %}
      {{ section.settings.fallback_image_mobile | image_url: width: 1920 | image_tag: class: 'video-hero__video-fallback video-hero__video-fallback--mobile', loading: 'lazy', alt: section.settings.heading }}
    {% endif %}
  </div>

  {% comment %} Overlay {% endcomment %}
  {% if section.settings.enable_overlay %}
    <div class="video-hero__overlay"></div>
  {% endif %}

  {% comment %} Content {% endcomment %}
  <div class="video-hero__content">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          {% if block.settings.heading != blank %}
            <h1 class="video-hero__heading" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h1>
          {% endif %}

        {% when 'subheading' %}
          {% if block.settings.subheading != blank %}
            <h2 class="video-hero__subheading" {{ block.shopify_attributes }}>
              {{ block.settings.subheading }}
            </h2>
          {% endif %}

        {% when 'text' %}
          {% if block.settings.text != blank %}
            <div class="video-hero__text" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          {% endif %}

        {% when 'button' %}
          {% if block.settings.button_text != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="video-hero__button" {{ block.shopify_attributes }}>
              {{ block.settings.button_text }}
            </a>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const videoContainer = document.querySelector('.video-hero-{{ section.id }} .video-hero__video-container');
    const desktopVideo = document.querySelector('.video-hero-{{ section.id }} .video-hero__video--desktop');
    const mobileVideo = document.querySelector('.video-hero-{{ section.id }} .video-hero__video--mobile');
    
    function handleVideoLoad(video) {
      if (video) {
        video.addEventListener('loadeddata', function() {
          videoContainer.classList.add('video-loaded');
        });

        video.addEventListener('error', function() {
          videoContainer.classList.add('video-error');
        });
      }
    }

    // Handle desktop video
    if (desktopVideo) {
      handleVideoLoad(desktopVideo);
    }

    // Handle mobile video
    if (mobileVideo) {
      handleVideoLoad(mobileVideo);
    }

    // Fallback: if video doesn't load within 5 seconds, show fallback image
    setTimeout(function() {
      if (!videoContainer.classList.contains('video-loaded')) {
        videoContainer.classList.add('video-error');
      }
    }, 5000);

    // Handle responsive video switching
    function handleResize() {
      const isMobile = window.innerWidth <= 749;
      if (desktopVideo && mobileVideo) {
        if (isMobile) {
          desktopVideo.pause();
          mobileVideo.play().catch(() => {});
        } else {
          mobileVideo.pause();
          desktopVideo.play().catch(() => {});
        }
      }
    }

    // Initial check
    handleResize();
    
    // Listen for resize events
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(handleResize, 250);
    });
  });
</script>


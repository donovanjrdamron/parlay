{% comment %}
  Split Editorial Section
  Clean 50/50 split-view with full-bleed image and text content
{% endcomment %}

<section class="split-editorial section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="se-container {% if section.settings.image_position == 'right' %}se-container--reversed{% endif %}">

    {% comment %} Image Side {% endcomment %}
    <div class="se-image-col">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                  {{ section.settings.image | image_url: width: 900 }} 900w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w"
          sizes="(max-width: 749px) 100vw, 50vw"
          alt="{{ section.settings.image.alt | default: section.settings.heading }}"
          loading="lazy"
          class="se-image"
        >
      {% else %}
        <div class="se-image-placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>

    {% comment %} Text Side {% endcomment %}
    <div class="se-text-col">
      <div class="se-text-inner">
        {% if section.settings.date_text != blank %}
          <span class="se-date">{{ section.settings.date_text }}</span>
        {% endif %}

        {% if section.settings.heading != blank %}
          <{{ section.settings.heading_tag }} class="se-heading">{{ section.settings.heading }}</{{ section.settings.heading_tag }}>
        {% endif %}

        {% if section.settings.body_text != blank %}
          <div class="se-body rte">{{ section.settings.body_text }}</div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a
            {% if section.settings.button_link != blank %}href="{{ section.settings.button_link }}"{% endif %}
            class="se-button"
          >
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>

  </div>
</section>

{%- style -%}
  /* ===========================
     Container & Layout
     =========================== */
  .section-{{ section.id }} {
    {% if section.settings.full_width %}
      max-width: 100%;
      padding: 0;
    {% else %}
      max-width: {{ settings.page_width }}px;
      margin: 0 auto;
      padding: 0 1.5rem;
    {% endif %}
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .section-{{ section.id }} .se-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: {{ section.settings.min_height_desktop }}px;
  }

  .section-{{ section.id }} .se-container--reversed {
    direction: rtl;
  }

  .section-{{ section.id }} .se-container--reversed > * {
    direction: ltr;
  }

  /* ===========================
     Image Column
     =========================== */
  .section-{{ section.id }} .se-image-col {
    position: relative;
    overflow: hidden;
  }

  .section-{{ section.id }} .se-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_focal_point }};
    display: block;
  }

  .section-{{ section.id }} .se-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e5e5e5;
  }

  .section-{{ section.id }} .se-image-placeholder svg {
    width: 60%;
    opacity: 0.4;
  }

  /* ===========================
     Text Column
     =========================== */
  .section-{{ section.id }} .se-text-col {
    {% if section.settings.text_gradient_enabled %}
      background: {{ section.settings.text_gradient }};
    {% else %}
      background-color: {{ section.settings.text_bg_color }};
    {% endif %}
    display: flex;
    align-items: {{ section.settings.vertical_align }};
    justify-content: {{ section.settings.horizontal_align }};
    padding: {{ section.settings.text_padding_vertical }}px {{ section.settings.text_padding_horizontal }}px;
  }

  .section-{{ section.id }} .se-text-inner {
    max-width: {{ section.settings.text_max_width }}px;
    width: 100%;
  }

  /* ===========================
     Date
     =========================== */
  .section-{{ section.id }} .se-date {
    display: block;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ section.settings.date_font_size }}px;
    font-weight: {{ section.settings.date_font_weight }};
    color: {{ section.settings.date_color }};
    letter-spacing: {{ section.settings.date_letter_spacing }}em;
    text-transform: {{ section.settings.date_text_transform }};
    margin-bottom: {{ section.settings.date_margin_bottom }}px;
  }

  /* ===========================
     Heading
     =========================== */
  .section-{{ section.id }} .se-heading {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    letter-spacing: -0.01em;
  }

  /* ===========================
     Body Text
     =========================== */
  .section-{{ section.id }} .se-body {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ section.settings.body_font_size_desktop }}px;
    font-weight: {{ section.settings.body_font_weight }};
    color: {{ section.settings.body_color }};
    line-height: {{ section.settings.body_line_height }};
    margin-bottom: {{ section.settings.body_margin_bottom }}px;
  }

  .section-{{ section.id }} .se-body p {
    margin: 0 0 1em 0;
  }

  .section-{{ section.id }} .se-body p:last-child {
    margin-bottom: 0;
  }

  /* ===========================
     Button
     =========================== */
  .section-{{ section.id }} .se-button {
    display: inline-block;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_bg_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    text-decoration: none;
    letter-spacing: 0.02em;
    margin-top: {{ section.settings.button_margin_top }}px;
    transition: opacity 0.2s ease;
    cursor: pointer;
  }

  .section-{{ section.id }} .se-button:hover {
    opacity: 0.85;
  }

  /* ===========================
     Mobile Responsive
     =========================== */
  @media screen and (max-width: 749px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }

    .section-{{ section.id }} .se-container {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .section-{{ section.id }} .se-container--reversed {
      direction: ltr;
    }

    .section-{{ section.id }} .se-image-col {
      {% if section.settings.mobile_image_position == 'below' %}
        order: 2;
      {% else %}
        order: 1;
      {% endif %}
      min-height: {{ section.settings.mobile_image_height }}px;
    }

    .section-{{ section.id }} .se-text-col {
      {% if section.settings.mobile_image_position == 'below' %}
        order: 1;
      {% else %}
        order: 2;
      {% endif %}
      padding: {{ section.settings.text_padding_vertical_mobile }}px {{ section.settings.text_padding_horizontal_mobile }}px;
    }

    .section-{{ section.id }} .se-heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .section-{{ section.id }} .se-body {
      font-size: {{ section.settings.body_font_size_mobile }}px;
    }
  }
{%- endstyle -%}


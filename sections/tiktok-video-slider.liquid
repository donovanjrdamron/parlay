    {% endif %}
    border: {{ section.settings.play_pause_border_width }}px solid {{ section.settings.play_pause_border_color }};
    border-radius: {{ section.settings.play_pause_border_radius }}px;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.2s ease;

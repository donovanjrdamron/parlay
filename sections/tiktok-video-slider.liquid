    margin-top: {{ section.settings.header_spacing }}px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sliders = document.querySelectorAll('.tiktok-video-slider [data-slider-viewport]');
    
    sliders.forEach(viewport => {
      if (viewport.dataset.initialized) return;
      viewport.dataset.initialized = 'true';

      const track = viewport.querySelector('[data-slider-track]');
      if (!track) return;

      let isDragging = false;
      let startPos = 0;
      let currentTranslate = 0;
      let prevTranslate = 0;
      let animationID = 0;
      let currentIndex = 0;

      // Mouse events
      viewport.addEventListener('mousedown', dragStart);
      viewport.addEventListener('mouseup', dragEnd);
      viewport.addEventListener('mouseleave', dragEnd);
      viewport.addEventListener('mousemove', drag);

      // Touch events
      viewport.addEventListener('touchstart', dragStart);
      viewport.addEventListener('touchend', dragEnd);
      viewport.addEventListener('touchmove', drag);

      // Prevent context menu on long press
      viewport.addEventListener('contextmenu', (e) => {
        if (isDragging) e.preventDefault();
      });

      function getPositionX(event) {
        return event.type.includes('mouse') ? event.pageX : event.touches[0].clientX;
      }

      function dragStart(event) {
        isDragging = true;
        startPos = getPositionX(event);
        animationID = requestAnimationFrame(animation);
        viewport.style.cursor = 'grabbing';
        track.style.transition = 'none';
      }

      function drag(event) {
        if (!isDragging) return;
        
        const currentPosition = getPositionX(event);
        currentTranslate = prevTranslate + currentPosition - startPos;
      }

      function dragEnd() {
        isDragging = false;
        cancelAnimationFrame(animationID);
        viewport.style.cursor = 'grab';
        track.style.transition = 'transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';

        const movedBy = currentTranslate - prevTranslate;

        // Snap to nearest slide if moved enough
        if (movedBy < -50) {
          currentIndex = Math.min(currentIndex + 1, track.children.length - 1);
        }

        if (movedBy > 50) {
          currentIndex = Math.max(currentIndex - 1, 0);
        }

        setPositionByIndex();
      }

      function animation() {
        setSliderPosition();
        if (isDragging) requestAnimationFrame(animation);
      }

      function setSliderPosition() {
        track.style.transform = `translateX(${currentTranslate}px)`;
      }

      function setPositionByIndex() {
        const slideWidth = track.children[0].offsetWidth;
        const gap = parseInt(getComputedStyle(track).gap) || 0;
        currentTranslate = -currentIndex * (slideWidth + gap);
        prevTranslate = currentTranslate;
        setSliderPosition();
      }

      // Set initial cursor
      viewport.style.cursor = 'grab';
    });

    // Play/Pause button functionality
    const videoWrappers = document.querySelectorAll('.tiktok-video-slider .tvs-video-wrapper');
    
    videoWrappers.forEach(wrapper => {
      const video = wrapper.querySelector('[data-video]');
      const playPauseBtn = wrapper.querySelector('[data-play-pause]');
      
      if (!video || !playPauseBtn) return;

      let hideTimeout;

      function showButton() {
        playPauseBtn.classList.remove('tvs-hidden');
        clearTimeout(hideTimeout);
        
        hideTimeout = setTimeout(() => {
          playPauseBtn.classList.add('tvs-hidden');
        }, 2000);
      }

      function togglePlayPause() {
        if (video.paused) {
          video.play();
          playPauseBtn.classList.add('tvs-playing');
        } else {
          video.pause();
          playPauseBtn.classList.remove('tvs-playing');
        }
        showButton();
      }

      // Button click
      playPauseBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        togglePlayPause();
      });

      // Video click
      video.addEventListener('click', () => {
        togglePlayPause();
      });

      // Show button on hover/interaction
      wrapper.addEventListener('mouseenter', showButton);
      wrapper.addEventListener('mousemove', showButton);
      wrapper.addEventListener('touchstart', showButton);

      // Update button state when video plays/pauses
      video.addEventListener('play', () => {
        playPauseBtn.classList.add('tvs-playing');
      });

      video.addEventListener('pause', () => {
        playPauseBtn.classList.remove('tvs-playing');
      });

      // Initial state
      if (!video.paused) {
        playPauseBtn.classList.add('tvs-playing');
      }
      
      // Hide button initially after 2 seconds if video is playing
      if (!video.paused) {
        hideTimeout = setTimeout(() => {
          playPauseBtn.classList.add('tvs-hidden');
        }, 2000);
      }
    });
  });
</script>


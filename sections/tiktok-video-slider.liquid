    background: rgba(15, 23, 42, 0.08);
    border-radius: 999px;
  }

  .section-{{ section.id }} .tvs-slider-viewport::-webkit-scrollbar-thumb {
    background: rgba(15, 23, 42, 0.3);
    border-radius: 999px;
  }


{% comment %}
  Video Slider Section
  Follows established section patterns with heading scaffold and functional slider
  Supports video uploads with customizable aspect ratios and responsive sizing
{% endcomment %}

<section class="tiktok-video-slider section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    <div class="tvs-content-wrapper">

      {% comment %} Heading {% endcomment %}
      {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="tvs-header-wrapper tvs-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="tvs-highlighted-text tvs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="tvs-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="tvs-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="tvs-highlighted-text tvs-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
            {% when 'inline_first' %}
              <{{ section.settings.heading_tag }} class="tvs-heading">
                {% if section.settings.highlighted_text != blank %}
                  <span class="tvs-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
            {% when 'inline_second' %}
              <{{ section.settings.heading_tag }} class="tvs-heading">
                {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                {% if section.settings.highlighted_text != blank %}
                  <span class="tvs-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
      {% endif %}

      {% comment %} Intro Text {% endcomment %}
      {% if section.settings.intro_text != blank %}
        <div class="tvs-intro-text tvs-align-{{ section.settings.heading_text_align }} rte">
          {{ section.settings.intro_text }}
        </div>
      {% endif %}

      {% comment %} Video Slider {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="tvs-slider" data-slider-container>
          <div class="tvs-slider-viewport" data-slider-viewport>
            <div class="tvs-slider-track" data-slider-track>
              {% for block in section.blocks %}
                {% if block.type == 'video' %}
                  <div class="tvs-slide" data-slider-slide {{ block.shopify_attributes }}>
                    <div class="tvs-video-card tvs-aspect-{{ section.settings.video_aspect_ratio }}">
                      <div class="tvs-video-wrapper">
                        {% if block.settings.video != blank %}
                          <video
                            class="tvs-video-element"
                            playsinline
                            {% if section.settings.video_autoplay %}autoplay{% endif %}
                            {% if section.settings.video_loop %}loop{% endif %}
                            {% if section.settings.video_muted %}muted{% endif %}
                            {% if section.settings.video_controls %}controls{% endif %}
                            preload="metadata"
                            data-video>
                            {% for source in block.settings.video.sources %}
                              <source src="{{ source.url }}" type="{{ source.mime_type }}">
                            {% endfor %}
                          </video>
                          {% if section.settings.show_play_pause_button %}
                            <button class="tvs-play-pause-btn tvs-btn-{{ section.settings.play_pause_position }}" data-play-pause>
                              <svg class="tvs-play-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 5V19L19 12L8 5Z" fill="currentColor"/>
                              </svg>
                              <svg class="tvs-pause-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 4H10V20H6V4ZM14 4H18V20H14V4Z" fill="currentColor"/>
                              </svg>
                            </button>
                          {% endif %}
                        {% else %}
                          <div class="tvs-video-placeholder">
                            <p>{{ 'Upload a video' }}</p>
                          </div>
                          {% if section.settings.show_play_pause_button %}
                            <button class="tvs-play-pause-btn tvs-btn-{{ section.settings.play_pause_position }}" data-play-pause disabled>
                              <svg class="tvs-play-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 5V19L19 12L8 5Z" fill="currentColor"/>
                              </svg>
                              <svg class="tvs-pause-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 4H10V20H6V4ZM14 4H18V20H14V4Z" fill="currentColor"/>
                              </svg>
                            </button>
                          {% endif %}
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Custom HTML Blocks {% endcomment %}
      {% for block in section.blocks %}
        {% if block.type == 'custom_html' %}
          <div class="tvs-custom-html-block" {{ block.shopify_attributes }}>
            {{ block.settings.html_content }}
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>


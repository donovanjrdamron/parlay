    aspect-ratio: 1 / 1;
  }

  .section-{{ section.id }} .tvs-aspect-portrait {
    aspect-ratio: 3 / 4;
  }

  .section-{{ section.id }} .tvs-aspect-landscape {
    aspect-ratio: 16 / 9;
  }

  .section-{{ section.id }} .tvs-aspect-vertical {
    aspect-ratio: 9 / 16;
  }

  .section-{{ section.id }} .tvs-video-element {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
  }

  .section-{{ section.id }} .tvs-play-pause-btn {
    position: absolute;
    z-index: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.play_pause_width }}px;
    height: {{ section.settings.play_pause_height }}px;
    {% if section.settings.enable_play_pause_bg %}

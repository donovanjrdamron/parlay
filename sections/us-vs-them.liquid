                    {{ block.settings.us_custom_svg }}
                  </div>
                {% elsif block.settings.us_value == 'google_icon' %}
                  <span class="material-icons uvt-google-icon uvt-google-icon-us-{{ block.id }}" style="font-size: {{ us_size }}px; color: {{ us_color }};">
                    {{ block.settings.us_google_icon }}
                  </span>
                {% elsif block.settings.us_value == 'text' %}
                  {{ block.settings.us_custom_text }}
                {% endif %}
              </div>
            {% endfor %}


                    {% when 'always' %}
                      <img src="{{ section.settings.us_image | image_url: width: 300 }}" alt="{{ section.settings.us_image.alt | escape }}" class="uvt-label-image uvt-label-image-us uvt-label-image-below" loading="lazy">
                    {% when 'mobile_only' %}
                      <img src="{{ section.settings.us_image | image_url: width: 300 }}" alt="{{ section.settings.us_image.alt | escape }}" class="uvt-label-image uvt-label-image-us uvt-label-image-below uvt-mobile-only" loading="lazy">
                    {% when 'desktop_only' %}

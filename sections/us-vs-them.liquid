{% comment %}
  Us vs Them Comparison Section
  Follows established section patterns with heading scaffold and comparison blocks
{% endcomment %}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<section class="us-vs-them section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    <div class="uvt-content-wrapper">

      {% comment %} Heading {% endcomment %}
      {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="uvt-header-wrapper uvt-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="uvt-highlighted-text uvt-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="uvt-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>

            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="uvt-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="uvt-highlighted-text uvt-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}

            {% when 'inline' %}
              <{{ section.settings.heading_tag }} class="uvt-heading">
                {{ section.settings.heading_before }}
                {% if section.settings.highlighted_text != blank %}
                  <span class="uvt-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>

            {% else %}
              <{{ section.settings.heading_tag }} class="uvt-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
      {% endif %}

      {% comment %} Intro Text {% endcomment %}
      {% if section.settings.intro_text != blank %}
        <div class="uvt-intro-text rte">
          {{ section.settings.intro_text }}
        </div>
      {% endif %}

      {% comment %} Prepare comparison blocks {% endcomment %}
      {% assign comparison_blocks = section.blocks | where: 'type', 'comparison_row' %}
      {% assign feature_count = comparison_blocks | size %}

      {% comment %} Ensure at least one feature for grid sizing {% endcomment %}
      {% assign desktop_feature_count = feature_count %}
      {% if desktop_feature_count == 0 %}
        {% assign desktop_feature_count = 1 %}
      {% endif %}

      {% comment %} Comparison Table {% endcomment %}
      <div class="uvt-comparison-wrapper">

        {% comment %} Desktop Side Image {% endcomment %}
        {% if section.settings.show_desktop_image %}
          <div class="uvt-desktop-image-wrapper{% if section.settings.hide_desktop_image_on_mobile %} uvt-hide-mobile{% endif %}">
            {% if section.settings.desktop_image != blank %}
              <img
                src="{{ section.settings.desktop_image | image_url: width: 600 }}"
                alt="{{ section.settings.desktop_image.alt | escape }}"
                loading="lazy"
                class="uvt-desktop-image"
              >
            {% else %}
              <div class="uvt-desktop-image-placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21 15 16 10 5 21"/>
                </svg>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% comment %} Desktop Layout (Hidden) {% endcomment %}
        <div class="uvt-comparison-desktop">
          <div class="uvt-grid-desktop">
            {%- comment -%} Row 1: Empty corner then feature headers {%- endcomment -%}
            <div class="uvt-cell uvt-cell-corner"></div>
            {% for block in comparison_blocks %}
              <div class="uvt-cell uvt-cell-feature-header">
                {{ block.settings.benefit_text }}
              </div>
            {% endfor %}

            {%- comment -%} Row 2: Our Product label + values {%- endcomment -%}
            <div class="uvt-cell uvt-cell-row-label uvt-cell-us-label uvt-cell-first-in-row">
              {% comment %} Show decorative image above if enabled (default true if not set) {% endcomment %}
              {% assign us_enabled = section.settings.us_image_enabled %}
              {% if us_enabled == nil %}
                {% assign us_enabled = true %}
              {% endif %}
              {% if us_enabled and section.settings.us_image_position == 'above' %}
                {% if section.settings.us_image != blank %}
                  {% case section.settings.us_image_visibility %}
                    {% when 'always' %}
                      <img src="{{ section.settings.us_image | image_url: width: 300 }}" alt="{{ section.settings.us_image.alt | escape }}" class="uvt-label-image uvt-label-image-us uvt-label-image-above" loading="lazy">
                    {% when 'mobile_only' %}
                      <img src="{{ section.settings.us_image | image_url: width: 300 }}" alt="{{ section.settings.us_image.alt | escape }}" class="uvt-label-image uvt-label-image-us uvt-label-image-above uvt-mobile-only" loading="lazy">
                    {% when 'desktop_only' %}
                      <img src="{{ section.settings.us_image | image_url: width: 300 }}" alt="{{ section.settings.us_image.alt | escape }}" class="uvt-label-image uvt-label-image-us uvt-label-image-above uvt-desktop-only" loading="lazy">
                  {% endcase %}
                {% else %}
                  <div class="uvt-label-image-placeholder uvt-label-image-placeholder-us uvt-label-image-above" style="display: flex !important; visibility: visible !important;">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21 15 16 10 5 21"/>
                    </svg>
                  </div>
                {% endif %}
              {% endif %}

              {% comment %} Show main logo or text label {% endcomment %}
              {% if section.settings.us_use_image_as_label and section.settings.us_main_image != blank %}
                <img src="{{ section.settings.us_main_image | image_url: width: 300 }}" alt="{{ section.settings.us_column_label | escape }}" class="uvt-label-main-image" loading="lazy">
              {% else %}
                <span class="uvt-label-text">{{ section.settings.us_column_label }}</span>
              {% endif %}

              {% comment %} Show decorative image below if enabled {% endcomment %}
              {% if us_enabled and section.settings.us_image_position == 'below' %}

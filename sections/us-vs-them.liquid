                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21 15 16 10 5 21"/>
                    </svg>
                  </div>
                {% endif %}
              {% endif %}
            </div>
            {% for block in comparison_blocks %}
              {%- liquid
                assign us_color = block.settings.us_icon_color | default: section.settings.us_icon_color
                assign us_size = block.settings.us_icon_size | default: section.settings.us_icon_size
              -%}
              <div class="uvt-cell uvt-cell-us uvt-cell-us-{{ block.id }}{% if forloop.last %} uvt-cell-last-in-row{% endif %}">
                {% if block.settings.us_value == 'check' %}
                  <svg class="uvt-icon uvt-icon-us-{{ block.id }}" viewBox="0 0 24 24" fill="none" style="width: {{ us_size }}px; height: {{ us_size }}px; color: {{ us_color }};">
                    <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% elsif block.settings.us_value == 'cross' %}

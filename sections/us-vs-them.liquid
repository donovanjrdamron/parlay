<script>
(function() {
  const sectionId = 'section-{{ section.id }}';
  const grid = document.querySelector(`.${sectionId.replace(/--/g, '--')} .uvt-grid-desktop`);
  
  if (!grid) return;

  function positionGradients() {
    const cells = grid.children;
    let headerHeight = 0;
    let usRowTop = 0;
    let usRowHeight = 0;
    let themRowTop = 0;
    let themRowHeight = 0;
    
    // Calculate row heights and positions
    const cellsArray = Array.from(cells);
    const firstRowCells = cellsArray.filter(cell => 
      cell.classList.contains('uvt-cell-corner') || 
      cell.classList.contains('uvt-cell-feature-header')
    );
    const secondRowCells = cellsArray.filter(cell => 
      cell.classList.contains('uvt-cell-us-label') || 
      cell.classList.contains('uvt-cell-us')
    );
    const thirdRowCells = cellsArray.filter(cell => 
      cell.classList.contains('uvt-cell-them-label') || 
      cell.classList.contains('uvt-cell-them')
    );
    
    if (firstRowCells.length > 0) {
      headerHeight = firstRowCells[0].offsetHeight;
    }
    
    if (secondRowCells.length > 0) {
      usRowTop = headerHeight;
      usRowHeight = secondRowCells[0].offsetHeight;
    }
    
    if (thirdRowCells.length > 0) {
      themRowTop = headerHeight + usRowHeight;
      themRowHeight = thirdRowCells[0].offsetHeight;
    }
    
    // Position ::before (Us row)
    const beforeStyle = document.querySelector('style[data-uvt-before]') || document.createElement('style');
    beforeStyle.setAttribute('data-uvt-before', '');
    beforeStyle.textContent = `.section-{{ section.id }} .uvt-grid-desktop::before { top: ${usRowTop}px; height: ${usRowHeight}px; }`;
    if (!beforeStyle.parentNode) document.head.appendChild(beforeStyle);
    
    // Position ::after (Them row)
    const afterStyle = document.querySelector('style[data-uvt-after]') || document.createElement('style');
    afterStyle.setAttribute('data-uvt-after', '');
    afterStyle.textContent = `.section-{{ section.id }} .uvt-grid-desktop::after { top: ${themRowTop}px; height: ${themRowHeight}px; }`;
    if (!afterStyle.parentNode) document.head.appendChild(afterStyle);
  }
  
  // Run on load and resize
  positionGradients();
  window.addEventListener('resize', positionGradients);
  
  // Run in Shopify theme editor
  if (window.Shopify && Shopify.designMode) {
    document.addEventListener('shopify:section:load', positionGradients);
    document.addEventListener('shopify:section:reorder', positionGradients);
  }
})();
</script>


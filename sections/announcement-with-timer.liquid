{% comment %}
  Announcement with Timer Section
  Displays an announcement bar with countdown timer
{% endcomment %}

<style>
/********** General Styles **********/
.section-{{ section.id }} .announcement-section-1 {
    {% if section.settings.gradient_enabled %}
      background: {{ section.settings.background_gradient }};
      background-size: 400% 400%;
      animation: primaryGradient-{{ section.id }} {{ section.settings.animation_speed }}s ease infinite;
    {% else %}
      background: {{ section.settings.background_color }};
    {% endif %}
    color: {{ section.settings.text_color }};
    text-align: center;
    padding: {{ section.settings.padding_vertical }}px 0;
}

.section-{{ section.id }} .announcement-wrapper {
    font-size: {{ section.settings.font_size_desktop }}px;
    font-weight: {{ section.settings.font_weight }};
    line-height: 1.2;
    letter-spacing: -0.01em;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.element_gap }}px;
    flex-wrap: wrap;
}

.section-{{ section.id }} .clock-down_text {
    {% if section.settings.show_text %}
      display: inline;
    {% else %}
      display: none;
    {% endif %}
}

.section-{{ section.id }} .holiday-clock {
    display: flex;
    justify-content: center;
    align-items: center;
    color: {{ section.settings.timer_text_color }};
    border-radius: 3px;
}

.section-{{ section.id }} .box-3 {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: {{ section.settings.timer_box_bg }};
    border-radius: {{ section.settings.timer_box_radius }}px;
    width: {{ section.settings.timer_box_width }}px;
    height: {{ section.settings.timer_box_height }}px;
    margin: 0 {{ section.settings.timer_box_spacing }}px;
    padding: 3px;
    font-size: 12px;
    line-height: 20px;
}

.section-{{ section.id }} .clock-number-2 {
    font-size: {{ section.settings.timer_number_size }}px;
    font-weight: 900;
    line-height: 1;
}

.section-{{ section.id }} .clock-label-2 {
    font-size: {{ section.settings.timer_label_size }}px;
    line-height: 1;
    text-transform: uppercase;
}

.section-{{ section.id }} .text-block-countdown {
    color: {{ section.settings.separator_color }};
    padding: 0 {{ section.settings.separator_spacing }}px;
    font-weight: 800;
}

/********** Keyframes **********/
{% if section.settings.gradient_enabled %}
@keyframes primaryGradient-{{ section.id }} {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
{% endif %}

/********** Media Queries **********/
@media (max-width: 749px) {
    .section-{{ section.id }} .announcement-wrapper {
        font-size: {{ section.settings.font_size_mobile }}px;
        gap: {{ section.settings.element_gap_mobile }}px;
    }

    .section-{{ section.id }} .clock-number-2 {
        font-size: {{ section.settings.timer_number_size_mobile }}px !important;
    }

    .section-{{ section.id }} .clock-label-2 {
        font-size: {{ section.settings.timer_label_size_mobile }}px !important;
    }

    .section-{{ section.id }} .box-3 {
        width: {{ section.settings.timer_box_width_mobile }}px;
        height: {{ section.settings.timer_box_height_mobile }}px;
        margin: 0 {{ section.settings.timer_box_spacing_mobile }}px;
    }

    .section-{{ section.id }} .text-block-countdown {
        padding: 0 {{ section.settings.separator_spacing_mobile }}px;
    }
}
</style>

<div class="section-{{ section.id }}">
  <div class='announcement-section-1'>
    <div class='container'>
      <div class='announcement-wrapper'>
        <span class='clock-down_text'>{{ section.settings.announcement_text }}</span>
        <div class='holiday-clock' id='js-clock-{{ section.id }}'>
          {% if section.settings.show_days %}
          <div class='box-3'>
            <div class='clock-number-2' id='js-clock-days-{{ section.id }}'>00</div>
            <div class='clock-label-2'>{{ section.settings.days_label }}</div>
          </div>
          <div class='text-block-countdown'>:</div>
          {% endif %}
          <div class='box-3'>
            <div class='clock-number-2' id='js-clock-hours-{{ section.id }}'>00</div>
            <div class='clock-label-2'>{{ section.settings.hours_label }}</div>
          </div>
          <div class='text-block-countdown'>:</div>
          <div class='box-3'>
            <div class='clock-number-2' id='js-clock-minutes-{{ section.id }}'>00</div>
            <div class='clock-label-2'>{{ section.settings.minutes_label }}</div>
          </div>
          <div class='text-block-countdown'>:</div>
          <div class='box-3'>
            <div class='clock-number-2' id='js-clock-seconds-{{ section.id }}'>00</div>
            <div class='clock-label-2'>{{ section.settings.seconds_label }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Countdown Timer Script with LocalStorage Caching and Auto-Reset
(function() {
    const sectionId = '{{ section.id }}';
    const showDays = {{ section.settings.show_days }};
    const endedMessage = '{{ section.settings.ended_message }}';
    const autoReset = {{ section.settings.auto_reset | default: true }};

    const storageKey = 'announcement-timer-' + sectionId;
    const settingsKey = 'announcement-timer-settings-' + sectionId;

    // Create a hash of settings to detect changes
    const currentSettings = '{{ section.settings.manual_days }}-{{ section.settings.manual_hours }}-{{ section.settings.manual_minutes }}-{{ section.settings.manual_seconds }}';

    let endTime;

    // Calculate end time from manual duration
    function calculateEndTime() {
        const now = new Date().getTime();
        const daysMs = {{ section.settings.manual_days | default: 0 }} * 24 * 60 * 60 * 1000;
        const hoursMs = {{ section.settings.manual_hours | default: 0 }} * 60 * 60 * 1000;
        const minutesMs = {{ section.settings.manual_minutes | default: 0 }} * 60 * 1000;
        const secondsMs = {{ section.settings.manual_seconds | default: 0 }} * 1000;

        return now + daysMs + hoursMs + minutesMs + secondsMs;
    }

    // Try to get cached end time from localStorage
    try {
        const cached = localStorage.getItem(storageKey);
        const cachedSettings = localStorage.getItem(settingsKey);

        // Check if settings have changed
        if (cachedSettings !== currentSettings) {
            // Settings changed - recalculate timer
            endTime = calculateEndTime();
            localStorage.setItem(storageKey, endTime.toString());
            localStorage.setItem(settingsKey, currentSettings);
        } else if (cached) {
            endTime = parseInt(cached, 10);
            // If cached time is in the past and auto-reset is enabled, recalculate
            if (endTime < new Date().getTime() && autoReset) {
                endTime = calculateEndTime();
                localStorage.setItem(storageKey, endTime.toString());
            }
        } else {
            // No cache, calculate new end time
            endTime = calculateEndTime();
            localStorage.setItem(storageKey, endTime.toString());
            localStorage.setItem(settingsKey, currentSettings);
        }
    } catch (e) {
        // LocalStorage not available, just calculate
        endTime = calculateEndTime();
    }

    function updateTimer() {
        const now = new Date().getTime();
        const timeLeft = endTime - now;

        if (timeLeft < 0) {
            // Timer ended
            if (autoReset) {
                // Auto-reset timer
                endTime = calculateEndTime();
                try {
                    localStorage.setItem(storageKey, endTime.toString());
                } catch (e) {
                    // Ignore localStorage errors
                }
                // Continue with new timer
                updateTimer();
                return;
            } else {
                // Show ended message
                document.getElementById('js-clock-' + sectionId).innerHTML = '<span>' + endedMessage + '</span>';
                return;
            }
        }

        const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        if (showDays) {
            const daysEl = document.getElementById('js-clock-days-' + sectionId);
            if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
        }

        const hoursEl = document.getElementById('js-clock-hours-' + sectionId);
        const minutesEl = document.getElementById('js-clock-minutes-' + sectionId);
        const secondsEl = document.getElementById('js-clock-seconds-' + sectionId);

        if (hoursEl) hoursEl.textContent = String(showDays ? hours : hours + (days * 24)).padStart(2, '0');
        if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
        if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
    }

    setInterval(updateTimer, 1000);
    updateTimer(); // Initial call to avoid delay
})();
</script>


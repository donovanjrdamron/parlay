<div class="product-section-wrapper section-{{ section.id }}-wrapper">
<section
  id="MainProduct-{{ section.id }}"
  class="page-width section-{{ section.id }}-padding"
  data-section="{{ section.id }}"
>
  {%- style -%}
    .section-{{ section.id }}-wrapper {
      width: 100%;
      {% if section.settings.enable_section_background %}
        {% if section.settings.use_section_gradient %}
          background: {{ section.settings.section_bg_gradient }};
        {% else %}
          background-color: {{ section.settings.section_bg_color }};
        {% endif %}
      {% endif %}
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.desktop_padding_top }}px;
        padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      }
    }

    /* Force remove box-shadow from quantity selector */
    #MainProduct-{{ section.id }} .cart-quantity,
    #MainProduct-{{ section.id }} quantity-input,
    #MainProduct-{{ section.id }} .quantity,
    #MainProduct-{{ section.id }} quantity-input.cart-quantity {
      border: none !important;
      outline: none !important;
      box-shadow: none !important;
      -webkit-box-shadow: none !important;
    }

    #MainProduct-{{ section.id }} .cart-quantity::before,
    #MainProduct-{{ section.id }} .cart-quantity::after,
    #MainProduct-{{ section.id }} quantity-input::before,
    #MainProduct-{{ section.id }} quantity-input::after,
    #MainProduct-{{ section.id }} .quantity::before,
    #MainProduct-{{ section.id }} .quantity::after {
      border: none !important;
      outline: none !important;
      box-shadow: none !important;
      -webkit-box-shadow: none !important;
      display: none !important;
    }

    #MediaGallery-{{ section.id }} {
      --desktop-thumbnails: {{ section.settings.desktop_thumbnails_count }};
      --mobile-thumbnails: {{ section.settings.mobile_thumbnails_count }};
    }
    @media screen and (max-width: 749px) {
      #MediaGallery-{{ section.id }} {
        --media-radius: {{ section.settings.mobile_media_corner_radius }}px;
        --grid-mobile-horizontal-spacing: {{ section.settings.mobile_spacing_pixels }}px;
        --mobile-scroll-padding: calc({{ section.settings.mobile_scroll_padding_percentage }}% + {{ section.settings.mobile_scroll_padding_pixels }}px);
        --slide-container-percentage-width: {{ section.settings.mobile_slides_container_width }}%;
        --slide-inner-percentage-width: {{ section.settings.mobile_slides_inner_width }}%;
      }

      /* Mobile - Apply margin settings to overlay elements */
      #MainProduct-{{ section.id }} .rating-stars--overlay-mobile,
      #MainProduct-{{ section.id }} .product__title--overlay-mobile,
      #MainProduct-{{ section.id }} .product-page-price--overlay-mobile {
        margin-top: var(--margin-top, 0) !important;
        margin-bottom: var(--margin-bottom, 0) !important;
      }

    }
  {%- endstyle -%}

  {% if section.settings.image_zoom == 'hover' %}
    <script id="EnableZoomOnHover-main" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
  {% endif %}
  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
  {%- if first_3d_model -%}
    {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}

  {% if section.settings.display_id %}
    <copy-button class='section-id-btn button' data-content="#shopify-section-{{ section.id }}" data-success="false">
      <span class="copy-text">Click to copy section ID</span>
      <span class="copy-success">ID copied successfully!</span>
    </copy-button>
  {% endif %}

  {%- liquid
    assign has_filtering = false
    assign filter_option_name = ''
    assign filter_option_index = nil

    if section.settings.enable_image_filtering and section.settings.image_filter_option_name != blank
      assign has_filtering = true
      assign filter_option_name = section.settings.image_filter_option_name | downcase

      for option in product.options_with_values
        assign option_name_lower = option.name | downcase
        if option_name_lower == filter_option_name
          assign filter_option_index = forloop.index
          break
        endif
      endfor
    endif

    assign hide_variants_enabled = false
    if section.settings.hide_variants and has_filtering != true
      assign hide_variants_enabled = true
    endif

    if hide_variants_enabled and variant_images.size == product.media.size
      assign single_media_visible = true
    endif

    assign media_count = product.media.size
    if hide_variants_enabled and media_count > 1 and variant_images.size > 0
      assign media_count = media_count | minus: variant_images.size | plus: 1
    endif

    if media_count == 1 or single_media_visible
      assign single_media_visible_mobile = true
    endif

    if media_count == 0 or single_media_visible_mobile or section.settings.mobile_thumbnails == 'show' and media_count < 3
      assign hide_mobile_slider = true
    endif
  -%}
  <div class="product product--{{ section.settings.media_size }} product--{{ section.settings.media_position }} product--{{ section.settings.gallery_layout }} product--mobile-{{ section.settings.mobile_thumbnails }} grid grid--1-col {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %}">
    <div class="grid__item product__media-wrapper{% if section.settings.media_position == 'right' %} medium-hide large-up-hide{% endif %}{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}">
      {% render 'product-media-gallery', variant_images: variant_images, has_filtering: has_filtering, filter_option_index: filter_option_index, section %}
    </div>
    <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}">
      <product-info
        id="ProductInfo-{{ section.id }}"
        data-section="{{ section.id }}"
        data-url="{{ product.url }}"
        class="product__info-container main-product__info-container"
      >
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'subscription_widget' -%}
              {%- render 'subscription-widget',
                block: block,
                product: product,
                product_form_id: product_form_id,
                section_id: section.id,
                show_pickup_availability: true,
                main_product: true,
                quantity_atc_append: quantity_atc_append,
                quantity_selector_html: quantity_selector_html,
                quantity_atc_append_heights: quantity_atc_append_heights,
                has_filtering: has_filtering
              -%}
            {%- when 'product_video_slider' -%}
              {% render 'product-video-slider', block: block %}
            {%- when 'title' -%}
              <style>
                #title-{{ block.id }} {
                  color: {{ block.settings.title_color }};
                  font-size: {{ block.settings.title_font_size_mobile }}px;
                  font-weight: {{ block.settings.title_font_weight }};
                  display: flex;
                  align-items: center;
                  flex-wrap: wrap;
                  gap: 8px;
                  {% if block.settings.title_alignment == 'left' %}
                    justify-content: flex-start;
                  {% elsif block.settings.title_alignment == 'center' %}
                    justify-content: center;
                  {% elsif block.settings.title_alignment == 'right' %}
                    justify-content: flex-end;
                  {% else %}
                    justify-content: flex-start;
                  {% endif %}
                  line-height: 1.2;
                  margin: 0;
                }

                @media screen and (min-width: 750px) {
                  #title-{{ block.id }} {
                    font-size: {{ block.settings.title_font_size_desktop }}px;
                  }
                }

                #title-{{ block.id }} .title-badge {
                  display: inline-flex;
                  align-items: center;
                  flex-shrink: 0;
                }
              </style>
              <div class="product__title{% if block.settings.overlay_on_image_mobile %} product__title--overlay-mobile{% endif %}" data-mobile-position="{{ block.settings.mobile_vertical_position | default: 'bottom' }}" data-mobile-offset="{{ block.settings.mobile_position_offset | default: 60 }}" {{ block.shopify_attributes }} style="--margin-top: {{ block.settings.margin_top | divided_by: 10.0 }}rem;--margin-bottom: {{ block.settings.margin_bottom | divided_by: 10.0 }}rem;">
                <h1 id="title-{{ block.id }}">
                  <span class="title-text">{% if block.settings.custom_title != blank %}{{ block.settings.custom_title }}{% else %}{{ product.title }}{% endif %}</span>
                  {% if block.settings.badge_html != blank %}
                    <span class="title-badge">{{ block.settings.badge_html }}</span>
                  {% endif %}
                </h1>
              </div>
            {%- when 'view_counter' -%}
              {%- if block.settings.show_view_counter -%}
                <div {{ block.shopify_attributes }} style="margin-top: {{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px;">
                  {%- render 'product-view-counter',
                    initial_view_count: block.settings.initial_view_count,
                    badge_bg_color: block.settings.badge_bg_color,
                    badge_text_color: block.settings.badge_text_color,
                    text_color: block.settings.text_color,
                    badge_text: block.settings.badge_text,
                    message_text: block.settings.message_text
                  -%}
                </div>
              {%- endif -%}
            {%- when 'icon_text_card' -%}
              <div {{ block.shopify_attributes }} style="margin-top: {{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px;">
                {%- liquid
                  assign title_lh = block.settings.title_line_height | divided_by: 10.0
                  assign paragraph_lh = block.settings.paragraph_line_height | divided_by: 10.0
                -%}
                {%- render 'icon-text-card',
                  card_id: block.id,
                  title: block.settings.title,
                  paragraph: block.settings.paragraph,
                  icon_type: block.settings.icon_type,
                  google_icon: block.settings.google_icon,
                  icon_style: block.settings.icon_style,
                  icon_svg: block.settings.icon_svg,
                  icon_color: block.settings.icon_color,
                  override_svg_color: block.settings.override_svg_color,
                  icon_size: block.settings.icon_size,
                  enable_animation: block.settings.enable_animation,
                  card_background: block.settings.card_background,
                  card_width: block.settings.card_width,
                  card_max_width: block.settings.card_max_width,
                  card_padding_vertical: block.settings.card_padding_vertical,
                  card_padding_horizontal: block.settings.card_padding_horizontal,
                  mobile_card_padding_vertical: block.settings.mobile_card_padding_vertical,
                  mobile_card_padding_horizontal: block.settings.mobile_card_padding_horizontal,
                  card_border_radius: block.settings.card_border_radius,
                  card_border_width: block.settings.card_border_width,
                  card_border_color: block.settings.card_border_color,
                  card_border_style: block.settings.card_border_style,
                  inline_icon_title: block.settings.inline_icon_title,
                  gap: block.settings.gap,
                  mobile_gap: block.settings.mobile_gap,
                  align_items: block.settings.align_items,
                  text_align: block.settings.text_align,
                  mobile_stack: block.settings.mobile_stack,
                  mobile_icon_size: block.settings.mobile_icon_size,
                  title_color: block.settings.title_color,
                  title_font_size: block.settings.title_font_size,
                  title_font_size_mobile: block.settings.title_font_size_mobile,
                  title_font_weight: block.settings.title_font_weight,
                  title_line_height: title_lh,
                  title_text_transform: block.settings.title_text_transform,
                  title_margin_bottom: block.settings.title_margin_bottom,
                  paragraph_color: block.settings.paragraph_color,
                  paragraph_font_size: block.settings.paragraph_font_size,
                  paragraph_font_size_mobile: block.settings.paragraph_font_size_mobile,
                  paragraph_font_weight: block.settings.paragraph_font_weight,
                  paragraph_line_height: paragraph_lh
                -%}
              </div>
            {%- when 'product_info_accordion' -%}
              {%- render 'product-info-accordion', block: block -%}
            {%- when 'product_image_banner' -%}
              {%- render 'product-image-banner', block: block -%}
            {%- when 'product_text_block' -%}
              {%- render 'product-text-block', block: block -%}
            {%- when 'frame_selector' -%}
              {%- render 'frame-selector', block: block -%}
            {% when 'rating_stars' %}
              {% render 'rating-stars-block', block: block, margins: true, block_attributes: true %}
            {%- when 'social_subheading' -%}
              {% render 'social-subheading', block: block %}
            {%- when 'price' -%}
              <style>
                #price-{{ section.id }} .price__container {
                  gap: {{ block.settings.price_gap }}px;
                }

                .product-page-price .price--on-sale .price__sale {
                  display: flex;
                  flex-direction: row;
                  flex-wrap: wrap;
                  align-items: center;
                  gap: {{ block.settings.price_gap }}px;
                }

                .product-page-price .price--on-sale .price__sale--price-second {
                  display: flex;
                  flex-direction: row;
                  flex-wrap: wrap;
                  align-items: center;
                  gap: {{ block.settings.price_gap }}px;
                }

                #price-{{ section.id }} .price-item--regular,
                #price-{{ section.id }} .price-item--sale {
                  color: {{ block.settings.price_color }} !important;
                  font-size: {{ block.settings.price_font_size_mobile }}px;
                  font-weight: {{ block.settings.price_font_weight }};
                  letter-spacing: 0 !important;
                }

                #price-{{ section.id }} .price__compare-price .price-item {
                  color: {{ block.settings.compare_price_color }} !important;
                  font-size: {{ block.settings.compare_price_font_size_mobile }}px;
                  font-weight: {{ block.settings.compare_price_font_weight }};
                  letter-spacing: 0 !important;
                }

                @media screen and (min-width: 750px) {
                  #price-{{ section.id }} .price-item--regular,
                  #price-{{ section.id }} .price-item--sale {
                    font-size: {{ block.settings.price_font_size_desktop }}px;
                  }

                  #price-{{ section.id }} .price__compare-price .price-item {
                    font-size: {{ block.settings.compare_price_font_size_desktop }}px;
                  }
                }

                #price-{{ section.id }} .price__badge-sale {
                  margin-left: {{ block.settings.badge_gap }}px;
                }

                {% unless block.settings.show_sale_badge %}
                  #price-{{ section.id }} .price__badge-sale {
                    display: none !important;
                  }
                {% endunless %}
              </style>
              <div class="no-js-hidden product-page-price{% if block.settings.overlay_on_image_mobile %} product-page-price--overlay-mobile{% endif %}" id="price-{{ section.id }}" data-mobile-position="{{ block.settings.mobile_vertical_position | default: 'bottom' }}" data-mobile-offset="{{ block.settings.mobile_position_offset | default: 15 }}" role="status" {{ block.shopify_attributes }} style="--margin-top: {{ block.settings.margin_top | divided_by: 10.0 }}rem;--margin-bottom: {{ block.settings.margin_bottom | divided_by: 10.0 }}rem;">
                {% liquid
                  assign price_second = false
                  if block.settings.layout == 'price_second'
                    assign price_second = true
                  endif
                %}
                {%- render 'price',
                  product: product,
                  block: block,
                  use_variant: true,
                  show_badges: true,
                  price_class: 'price--large',
                  price_second: price_second,
                  main_price: true
                -%}
              </div>
              <div {{ block.shopify_attributes }}>
                {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  {{ form | payment_terms }}
                {%- endform -%}
              </div>
            {%- when 'custom_liquid' -%}
              {{ block.settings.custom_liquid }}
            {%- when 'quantity_selector' -%}
              {% liquid
                assign quantity_atc_append =  block.settings.atc_append
                assign quantity_atc_append_heights =  block.settings.atc_append_heights
              %}
                {% capture quantity_selector_html %}
                  <div
                    id="Quantity-Form-{{ section.id }}"
                    class="product-form__input product-form__quantity{% if settings.inputs_shadow_vertical_offset != 0 and settings.inputs_shadow_vertical_offset < 0 %} product-form__quantity-top{% endif %}"
                    {{ block.shopify_attributes }}
                    style="--margin-top: {{ block.settings.margin_top | divided_by: 10.0 }}rem;--margin-bottom: {{ block.settings.margin_bottom | divided_by: 10.0 }}rem;"
                  >
                    <quantity-input
                      class="quantity cart-quantity{% if block.settings.quantity_round_btns %} cart-quantity--round-btns{% endif %}{% if block.settings.quantity_outline_btns %} cart-quantity--outline-btns{% endif %}"
                      data-section="{{ section.id }}"
                      style='
                        --font-size:{{ block.settings.quantity_font_size | divided_by: 10.0 }}rem;
                        --border-width:0px;
                        --border-color:transparent;
                        --corner-radius:{{ block.settings.quantity_corner_radius }}px;
                        --input-padding:{{ block.settings.quantity_input_padding_horizontal }}em;
                        --input-width:{{ block.settings.quantity_input_width }}em;
                        --separator-opacity:{{ block.settings.quantity_separators_opacity | divided_by: 100.0 }};
                        --padding-vertical:{{ block.settings.quantity_button_padding_vertical }}em;
                        --padding-horizontal:{{ block.settings.quantity_button_padding_horizontal }}em;
                        --icon-size:{{ block.settings.quantity_btns_icon_size | divided_by: 100.0 }}em;
                        --quantity-input-bg:{{ block.settings.quantity_input_background }};
                        --quantity-button-bg:{{ block.settings.quantity_buttons_background }};
                        font-size: {{ block.settings.quantity_font_size | divided_by: 10.0 }}rem;
                        border-radius: {{ block.settings.quantity_corner_radius }}px;
                        border: none !important;
                      '
                    >
                      <button class="quantity__button quantity__button--minus no-js-hidden" name="minus" type="button" style="background-color: {{ block.settings.quantity_buttons_background }}; color: {{ block.settings.quantity_buttons_icon_color }}; border: {{ block.settings.quantity_buttons_border_width }}px solid {{ block.settings.quantity_buttons_border_color }}; padding: {{ block.settings.quantity_button_padding_vertical }}em {{ block.settings.quantity_button_padding_horizontal }}em; border-radius: {% if block.settings.quantity_round_btns %}{{ block.settings.quantity_corner_radius }}px{% else %}{{ block.settings.quantity_corner_radius }}px 0 0 {{ block.settings.quantity_corner_radius }}px{% endif %};">
                        <span class="visually-hidden">
                        {{- 'products.product.quantity.decrease' | t: product: product.title | escape -}}
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill='currentColor'>
                          <path d="M432 256c0 17.7-14.3 32-32 32L48 288c-17.7 0-32-14.3-32-32s14.3-32 32-32l352 0c17.7 0 32 14.3 32 32z"/>
                        </svg>
                      </button>
                      <input
                        class="quantity__input"
                        type="number"
                        name="quantity"
                        id="Quantity-{{ section.id }}"
                        data-cart-quantity="{{ cart_qty }}"
                        data-min="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                        min="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                        {% if product.selected_or_first_available_variant.quantity_rule.max != null %}
                        data-max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                        max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                        {% endif %}
                        step="{{ product.selected_or_first_available_variant.quantity_rule.increment }}"
                        value="{{ product.selected_or_first_available_variant.quantity_rule.min }}"
                        form="{{ product_form_id }}"
                        style="background-color: {{ block.settings.quantity_input_background }}; padding: 0 {{ block.settings.quantity_input_padding_horizontal }}em; width: {{ block.settings.quantity_input_width }}em;"
                      />
                      <button class="quantity__button quantity__button--plus no-js-hidden" name="plus" type="button" style="background-color: {{ block.settings.quantity_buttons_background }}; color: {{ block.settings.quantity_buttons_icon_color }}; border: {{ block.settings.quantity_buttons_border_width }}px solid {{ block.settings.quantity_buttons_border_color }}; padding: {{ block.settings.quantity_button_padding_vertical }}em {{ block.settings.quantity_button_padding_horizontal }}em; border-radius: {% if block.settings.quantity_round_btns %}{{ block.settings.quantity_corner_radius }}px{% else %}0 {{ block.settings.quantity_corner_radius }}px {{ block.settings.quantity_corner_radius }}px 0{% endif %};">
                        <span class="visually-hidden">
                        {{- 'products.product.quantity.increase' | t: product: product.title | escape -}}
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill='currentColor'>
                          <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/>
                        </svg>
                      </button>
                    </quantity-input>
                    <div class="quantity__rules caption no-js-hidden">
                      {%- if product.selected_or_first_available_variant.quantity_rule.increment > 1 -%}
                        <span class="divider">
                          {{-
                            'products.product.quantity.multiples_of'
                            | t: quantity: product.selected_or_first_available_variant.quantity_rule.increment
                          -}}
                        </span>
                      {%- endif -%}
                      {%- if product.selected_or_first_available_variant.quantity_rule.min > 1 -%}
                        <span class="divider">
                          {{-
                            'products.product.quantity.minimum_of'
                            | t: quantity: product.selected_or_first_available_variant.quantity_rule.min
                          -}}
                        </span>
                      {%- endif -%}
                      {%- if product.selected_or_first_available_variant.quantity_rule.max != null -%}
                        <span class="divider">
                          {{-
                            'products.product.quantity.maximum_of'
                            | t: quantity: product.selected_or_first_available_variant.quantity_rule.max
                          -}}
                        </span>
                      {%- endif -%}
                    </div>
                  </div>
              {% endcapture %}
              {% if quantity_atc_append == 'none' %}
                {{ quantity_selector_html }}
              {% endif %}
            {%- when 'sticky_atc' -%}
              {% style %}
                #sticky-atc-{{ section.id }} {
                  position: fixed;
                  bottom: 0;
                  left: 0;
                  width: 100%;
                  margin: 0;
                  padding: 1rem 0 calc(1.5rem + env(safe-area-inset-bottom, 0px));
                  z-index: 999;
                  box-shadow: 0 -1px 10px rgba(0, 0, 0, 0.2);
                  {% if block.settings.backdrop_blur > 0 %}
                    -webkit-backdrop-filter: blur({{ block.settings.backdrop_blur }}px);
                    backdrop-filter: blur({{ block.settings.backdrop_blur }}px);
                  {% endif %}
                  /* Smooth transition to prevent jitter on fast scroll */
                  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                  /* Force GPU acceleration for smoother animation */
                  will-change: transform;
                  -webkit-transform: translate3d(0, 100%, 0);
                  transform: translate3d(0, 100%, 0);
                }

                /* Desktop padding */
                @media screen and (min-width: 750px) {
                  #sticky-atc-{{ section.id }} {
                    padding: 1rem 0;
                  }
                }

                /* Background layer with opacity */
                #sticky-atc-{{ section.id }}::before {
                  content: '';
                  position: absolute;
                  top: 0;
                  left: 0;
                  right: 0;
                  bottom: 0;
                  z-index: -1;
                  {% if block.settings.enable_background_gradient %}
                    background: {{ block.settings.background_gradient }};
                  {% else %}
                    background-color: {{ block.settings.background_color }};
                  {% endif %}
                  opacity: {{ block.settings.background_opacity | divided_by: 100.0 }};
                }
                @media screen and (min-width: 750px) {
                  #sticky-atc-{{ section.id }} .button {
                    font-size: {{ block.settings.button_font_size_desktop }}px !important;
                  }

  <script>
    // Move overlay elements above product media on mobile only (runs immediately)
    (function() {
      function repositionMobileElements() {
        const isMobile = window.innerWidth < 750;

        if (isMobile) {
          // Find the product grid container
          const productGrid = document.querySelector('#MainProduct-{{ section.id }} .product');
          if (!productGrid) return;

          // Find the product media wrapper (where we want to insert before)
          const mediaWrapper = productGrid.querySelector('.product__media-wrapper');
          if (!mediaWrapper) return;

          // Check if container already exists
          let mobileContainer = productGrid.querySelector('.mobile-overlay-container');

          if (!mobileContainer) {
            // Create a container div with grid__item class
            mobileContainer = document.createElement('div');
            mobileContainer.className = 'mobile-overlay-container grid__item';
            mobileContainer.setAttribute('data-mobile-container', 'true');

            // Insert container before media wrapper
            productGrid.insertBefore(mobileContainer, mediaWrapper);
          }

          // Find all elements that should be moved on mobile
          const overlayElements = productGrid.querySelectorAll('.rating-stars--overlay-mobile, .product__title--overlay-mobile, .product-page-price--overlay-mobile');

          // Move each element into the container (margins preserved automatically via inline styles)
          overlayElements.forEach(function(el) {
            if (el && !el.hasAttribute('data-mobile-moved')) {
              mobileContainer.appendChild(el);
              el.setAttribute('data-mobile-moved', 'true');
            }
          });
        }
      }

      // Run immediately (before page load to prevent flicker)
      repositionMobileElements();

      // Also run on DOMContentLoaded as backup
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', repositionMobileElements);
      }

      // Run on resize
      let resizeTimer;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(repositionMobileElements, 250);
      });
    })();
  </script>


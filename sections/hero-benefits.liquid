{{ '//fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200' | stylesheet_tag }}

<style>
/* Remove blue highlight on tap/click for all elements */
.hero-section *,
.hero-section *:focus,
.hero-section *:active {
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
}

.hero-section-wrapper {
    width: 100%;
    {% if section.settings.enable_section_background %}
      {% if section.settings.use_section_gradient %}
        background: {{ section.settings.section_bg_gradient }};
      {% else %}
        background-color: {{ section.settings.section_bg_color }};
      {% endif %}
    {% endif %}
}

.hero-section {
    width: 100%;
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: {{ section.settings.section_padding_top_mobile }}px 20px {{ section.settings.section_padding_bottom_mobile }}px;
    box-sizing: border-box;
}

@media (min-width: 750px) {
    .hero-section {
        padding: {{ section.settings.section_padding_top_desktop }}px {{ settings.spacing_grid_horizontal }}px {{ section.settings.section_padding_bottom_desktop }}px;
    }
}

.hero-content-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.hero_content_gap_mobile }}px;
    box-sizing: border-box;
}

.hero-image-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    min-width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
}

.hero-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    min-width: 100%;
    height: 100%;
    pointer-events: none;
    flex-shrink: 0;
}

.section-{{ section.id }} .hero-main-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: {{ section.settings.mobile_background_size }};
    max-height: 65vh;
    pointer-events: auto;
    border-radius: {{ section.settings.hero_image_border_radius }}px;
    {% if section.settings.hero_image_border_width > 0 %}
        border: {{ section.settings.hero_image_border_width }}px solid {{ section.settings.hero_image_border_color }};
    {% endif %}
    {% if section.settings.enable_image_mask_fade %}
        -webkit-mask-image: linear-gradient(to bottom,
            rgba(0,0,0,1) 0%,
            rgba(0,0,0,1) {{ 100 | minus: section.settings.image_mask_fade_height }}%,
            rgba(0,0,0,0) 100%);
        mask-image: linear-gradient(to bottom,
            rgba(0,0,0,1) 0%,
            rgba(0,0,0,1) {{ 100 | minus: section.settings.image_mask_fade_height }}%,
            rgba(0,0,0,0) 100%);
    {% endif %}
}

.hero-main-image.desktop-only {
    display: none;
}

.hero-main-image.mobile-only {
    display: block;
}

.hero-image-placeholder {
    width: 100%;
    aspect-ratio: 1 / 1;
    background: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
}

.hero-image-placeholder .placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
}

/* Desktop and larger screens */
@media (min-width: 768px) {
    .hero-content-wrapper {
        flex-direction: row;
        gap: {{ section.settings.hero_content_gap_desktop }}px;
        align-items: stretch;
    }

    .hero-image-container {
        width: {{ section.settings.desktop_image_width }}%;
        min-width: 0;
        flex-shrink: 0;
        {% if section.settings.hide_image_on_desktop %}
          display: none;
        {% endif %}
    }

    .content-display {
        flex: 1;
        min-width: 300px;
    }

    .section-{{ section.id }} .hero-main-image {
        width: 100%;
        object-fit: {{ section.settings.desktop_background_size }};
    }

    .hero-image-placeholder {
        width: 100%;
    }

    .hero-main-image.desktop-only {
        display: block;
    }

    .hero-main-image.mobile-only {
        display: none;
    }

    .section-{{ section.id }} .benefit-icons-grid {
        gap: {{ section.settings.icon_vertical_spacing_desktop }}px {{ section.settings.icon_horizontal_spacing_desktop }}px;
    }

    .benefit-icon-item:nth-child(odd) {
        margin-right: {{ section.settings.icon_offset_desktop }}%!important;
    }

    .benefit-icon-item:nth-child(even) {
        margin-left: {{ section.settings.icon_offset_desktop }}%!important;
    }
}

.benefit-icon-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    align-items: center;
    max-width: 120px;
    text-align: center;
    color: #1a3b3b;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    gap: {{ section.settings.icon_label_gap }}px;
}

.benefit-icon-item p {
    margin: 0;
    font-size: {{ section.settings.icon_label_font_size }}px;
    font-weight: {{ section.settings.icon_label_font_weight }};
    color: {{ section.settings.icon_label_inactive_color }};
    transition: all 0.3s ease;
}

.benefit-icon-item:has(.benefit-icon-image.active) p {
    color: {{ section.settings.icon_label_active_color }};
    font-weight: {{ section.settings.icon_label_active_font_weight }};
}

.section-{{ section.id }} .benefit-icons-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    justify-items: center;
    position: absolute;
    width: 100%;
    gap: {{ section.settings.icon_vertical_spacing_mobile }}px {{ section.settings.icon_horizontal_spacing_mobile }}px;
    z-index: 1;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.benefit-icon-item:nth-child(even) {
    margin-left: {{ section.settings.icon_offset_mobile }}%;
}

.benefit-icon-item:nth-child(odd) {
    margin-right: {{ section.settings.icon_offset_mobile }}%;
}

.hero-header {
    flex-direction: column;
    font-size: 32px;
    color: #1a3b3b;
    text-align: center;
    display: flex;
    width: 100%;
    justify-content: center;
    line-height: 38px;
    text-transform: uppercase;
    margin-bottom: 0;
    font-weight: 500;
}

.content-display {
    color: {{ section.settings.content_display_text_color }};
    padding-top: {{ section.settings.content_display_padding_vertical_desktop }}px;
    padding-bottom: {{ section.settings.content_display_padding_vertical_desktop }}px;
    padding-left: {{ section.settings.content_display_padding_horizontal_desktop }}px;
    padding-right: {{ section.settings.content_display_padding_horizontal_desktop }}px;
    text-align: {{ section.settings.content_display_text_align }};
    transition: all 0.5s ease;
    background: {{ section.settings.content_display_background }};
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: {{ section.settings.content_display_gap }}px;
    {% if section.settings.content_display_border_radius > 0 %}
        border-radius: {{ section.settings.content_display_border_radius }}px;
    {% endif %}
    {% if section.settings.content_display_border_width > 0 %}
        border: {{ section.settings.content_display_border_width }}px solid {{ section.settings.content_display_border_color }};
    {% endif %}
}

#content-title {
    margin: 0;
    transition: all 0.3s ease;
}

@media (min-width: 750px) {
    #content-title {
        font-size: {{ section.settings.content_title_font_size_desktop }}px !important;
    }
}

.content-header {
    {% if section.settings.hide_content_header %}
        display: none;
    {% else %}
        display: flex;
        align-items: center;
        justify-content: {% if section.settings.content_display_header_align == 'left' %}flex-start{% elsif section.settings.content_display_header_align == 'right' %}flex-end{% else %}center{% endif %};
        gap: 15px;
    {% endif %}
    order: 2;
}

#content-text {
    order: 4;
}

.review-box {
    order: 6;
}

.block-image-wrapper {
    width: 100%;
    display: block;
    transition: all 0.3s ease;
    order: 5;
}

.block-image {
    width: 100%;
    {% if section.blocks.first.settings.block_image_aspect_ratio == 'custom' %}
        height: {{ section.blocks.first.settings.block_image_height_mobile }}px;
    {% else %}
        height: auto;
    {% endif %}
    display: block;
    object-fit: cover;
    transition: all 0.3s ease;
}

@media (min-width: 750px) {
    .block-image {
        {% if section.blocks.first.settings.block_image_aspect_ratio == 'custom' %}
            height: {{ section.blocks.first.settings.block_image_height_desktop }}px;
        {% endif %}
    }
}

.content-icon {
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.content_icon_width }}px;
        height: {{ section.settings.content_icon_height }}px;
    {% endif %}
    transition: all 0.3s ease;
    object-fit: cover;
    flex-shrink: 0;
}

.section-{{ section.id }} .content-icon {
    {% if section.settings.content_icon_show_border %}
        border: {{ section.settings.icon_border_width }}px solid {{ section.settings.content_icon_border_color }};
    {% else %}
        border: none;
    {% endif %}
    {% if section.settings.icon_circular %}
        border-radius: 50%;
    {% else %}
        border-radius: {{ section.settings.icon_border_radius }}px;
    {% endif %}
    padding: {{ section.settings.icon_padding }}px;
    {% if section.settings.content_icon_show_background %}
        background: {{ section.settings.content_icon_background_color }};
    {% else %}
        background: transparent;
    {% endif %}
    box-sizing: content-box;
    {% if section.settings.hide_content_icon %}
        display: none;
    {% endif %}
}

/* Content Icon - Google Material Icon */
.section-{{ section.id }} .material-symbols-outlined.content-icon {
    font-size: {{ section.settings.google_icon_size }}px;
    {% if section.settings.hide_content_icon %}
        display: none;
    {% else %}
        display: flex;
    {% endif %}
    align-items: center;
    justify-content: center;
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.content_icon_width }}px;
        height: {{ section.settings.content_icon_height }}px;
    {% endif %}
    color: {{ section.settings.content_icon_color }};
    font-variation-settings:
        'FILL' 0,
        'wght' 400,
        'GRAD' 0,
        'opsz' {{ section.settings.google_icon_size }};
    flex-shrink: 0;
    box-sizing: content-box;
    max-width: none;
    overflow: visible;
}

/* Content Icon - Custom SVG */
.section-{{ section.id }} .content-icon-svg {
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.content_icon_width }}px;
        height: {{ section.settings.content_icon_height }}px;
    {% endif %}
    {% if section.settings.hide_content_icon %}
        display: none;
    {% else %}
        display: flex;
    {% endif %}
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-sizing: content-box;
}

.section-{{ section.id }} .content-icon-svg svg {
    width: 100%;
    height: 100%;
    max-width: 50px;
    max-height: 50px;
    fill: {{ section.settings.content_icon_color }};
    color: {{ section.settings.content_icon_color }};
}

.section-{{ section.id }} .content-icon-svg svg path,
.section-{{ section.id }} .content-icon-svg svg circle,
.section-{{ section.id }} .content-icon-svg svg rect,
.section-{{ section.id }} .content-icon-svg svg polygon {
    fill: inherit;
}

.content-icon-placeholder {
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.content_icon_width }}px;
        height: {{ section.settings.content_icon_height }}px;
    {% endif %}
    {% if section.settings.content_icon_show_background %}
        background: {{ section.settings.content_icon_background_color }};
    {% else %}
        background: #f3f4f6;
    {% endif %}
    {% if section.settings.icon_circular %}
        border-radius: 50%;
    {% else %}
        border-radius: {{ section.settings.icon_border_radius }}px;
    {% endif %}
    {% if section.settings.content_icon_show_border %}
        border: {{ section.settings.icon_border_width }}px solid {{ section.settings.content_icon_border_color }};
    {% else %}
        border: none;
    {% endif %}
    padding: {{ section.settings.icon_padding }}px;
    {% if section.settings.hide_content_icon %}
        display: none;
    {% else %}
        display: flex;
    {% endif %}
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-sizing: content-box;
}

.content-icon-placeholder .placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
}

.content-display h3 {
    margin: 0;
    font-size: 24px;
    color: white;
}

.content-display p {
    font-size: 16px;
    line-height: 1.6;
}

.review-box {
    background: {{ section.settings.review_box_background }};
    border: {{ section.settings.review_box_border_width }}px solid {{ section.settings.review_box_border_color }};
    border-radius: {{ section.settings.review_box_border_radius }}px;
    padding: {{ section.settings.review_box_padding_top }}px {{ section.settings.review_box_padding_right }}px {{ section.settings.review_box_padding_bottom }}px {{ section.settings.review_box_padding_left }}px;
    margin-top: {{ section.settings.review_box_margin_top }}px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    flex-direction: column-reverse;
    display: flex;
    text-align: {{ section.settings.review_box_text_align }};
}

.review-header {
    display: flex;
    align-items: center;
    gap: 15px;
}

.profile-pic {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    object-fit: cover;
}

.reviewer-info {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 10px;
}

.reviewer-name {
    font-size: {{ section.settings.reviewer_name_font_size }}px;
    color: {{ section.settings.reviewer_name_color }}!important;
    border-right: 1px solid transparent;
    border-image: linear-gradient(to bottom, transparent 0%, transparent 20%, {{ section.settings.reviewer_name_color }} 20%, {{ section.settings.reviewer_name_color }} 80%, transparent 80%, transparent 100%) 1;
    padding: 0px 10px 0px 0px;
    margin: 0;
}

.hero-benefit-star-rating {
    display: flex;
    gap: 2px;
}

.hero-benefit-star {
    color: {{ section.settings.star_icon_color }};
    font-size: {{ section.settings.star_icon_size }}px;
}

.review-text {
    font-size: {{ section.settings.review_text_font_size }}px!important;
    margin-bottom: 10px;
    line-height: 1.5;
    margin: 0;
    color: {{ section.settings.review_text_color }} !important;
    text-align: center;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
}

.timer-bar {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 6px;
    background: {{ section.settings.timer_bar_color }};
    width: 0%;
    z-index: 10;
    transition: none;
}

.timer-bar.animate {
    transition: width {{ section.settings.timer_duration }}s linear;
    width: 100% !important;
}

.benefit-icon-image {
    transition: all 0.3s ease;
    opacity: {{ section.settings.icon_inactive_opacity | divided_by: 100.0 }};
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.icon_width }}px;
        height: {{ section.settings.icon_height }}px;
    {% endif %}
    object-fit: cover;
    flex-shrink: 0;
}

.section-{{ section.id }} .benefit-icon-image {
    {% if section.settings.icon_show_border %}
        border: {{ section.settings.icon_border_width }}px solid {{ section.settings.icon_border_color }};
    {% else %}
        border: none;
    {% endif %}
    {% if section.settings.icon_circular %}
        border-radius: 50%;
    {% else %}
        border-radius: {{ section.settings.icon_border_radius }}px;
    {% endif %}
    padding: {{ section.settings.icon_padding }}px;
    {% if section.settings.icon_show_background %}
        background: {{ section.settings.icon_background_color }};
    {% else %}
        background: transparent;
    {% endif %}
    box-sizing: content-box;
}

.benefit-icon-image.active {
    opacity: {{ section.settings.icon_active_opacity | divided_by: 100.0 }};
    transform: scale({{ section.settings.icon_scale }});
}

.section-{{ section.id }} .benefit-icon-image.active {
    {% if section.settings.icon_show_border %}
        border-color: {{ section.settings.icon_border_color_active }};
    {% endif %}
    {% if section.settings.icon_show_background %}
        background: {{ section.settings.icon_background_color_active }};
    {% endif %}
}

.section-{{ section.id }} .benefit-icon-placeholder {
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.icon_width }}px;
        height: {{ section.settings.icon_height }}px;
    {% endif %}
    {% if section.settings.icon_show_background %}
        background: {{ section.settings.icon_background_color }};
    {% else %}
        background: #f3f4f6;
    {% endif %}
    {% if section.settings.icon_circular %}
        border-radius: 50%;
    {% else %}
        border-radius: {{ section.settings.icon_border_radius }}px;
    {% endif %}
    {% if section.settings.icon_show_border %}
        border: {{ section.settings.icon_border_width }}px solid {{ section.settings.icon_border_color }};
    {% else %}
        border: none;
    {% endif %}
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.icon_padding }}px;
    flex-shrink: 0;
    box-sizing: content-box;
}

.section-{{ section.id }} .benefit-icon-placeholder.active {
    {% if section.settings.icon_show_border %}
        border-color: {{ section.settings.icon_border_color_active }};
    {% endif %}
    {% if section.settings.icon_show_background %}
        background: {{ section.settings.icon_background_color_active }};
    {% endif %}
}

.benefit-icon-placeholder .placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
}

/* Google Material Icon */
.section-{{ section.id }} .material-symbols-outlined.benefit-icon-image {
    font-size: {{ section.settings.google_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.icon_width }}px;
        height: {{ section.settings.icon_height }}px;
    {% endif %}
    color: {{ section.settings.google_icon_color_inactive }};
    font-variation-settings:
        'FILL' 0,
        'wght' 400,
        'GRAD' 0,
        'opsz' {{ section.settings.google_icon_size }};
    flex-shrink: 0;
    box-sizing: content-box;
    max-width: none;
    overflow: visible;
}

.section-{{ section.id }} .material-symbols-outlined.benefit-icon-image.active {
    color: {{ section.settings.google_icon_color_active }};
    {% if section.settings.icon_show_background %}
        background: {{ section.settings.icon_background_color_active }};
    {% endif %}
}

/* Custom SVG Container */
.section-{{ section.id }} .benefit-icon-svg {
    {% if section.settings.icon_circular %}
        width: {{ section.settings.icon_circle_size }}px;
        height: {{ section.settings.icon_circle_size }}px;
    {% else %}
        width: {{ section.settings.icon_width }}px;
        height: {{ section.settings.icon_height }}px;
    {% endif %}
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-sizing: content-box;
}

.section-{{ section.id }} .benefit-icon-svg svg {
    width: 100%;
    height: 100%;
    max-width: 64px;
    max-height: 64px;
    fill: {{ section.settings.svg_icon_color_inactive }};
    color: {{ section.settings.svg_icon_color_inactive }};
}

.section-{{ section.id }} .benefit-icon-svg.active {
    {% if section.settings.icon_show_background %}
        background: {{ section.settings.icon_background_color_active }};
    {% endif %}
}

.section-{{ section.id }} .benefit-icon-svg.active svg {
    fill: {{ section.settings.svg_icon_color_active }};
    color: {{ section.settings.svg_icon_color_active }};
}

.section-{{ section.id }} .benefit-icon-svg svg path,
.section-{{ section.id }} .benefit-icon-svg svg circle,
.section-{{ section.id }} .benefit-icon-svg svg rect,
.section-{{ section.id }} .benefit-icon-svg svg polygon {
    fill: inherit;
}

@media (max-width: 549px) {
    .content-display {
        padding-top: {{ section.settings.content_display_padding_vertical_mobile }}px;
        padding-bottom: {{ section.settings.content_display_padding_vertical_mobile }}px;
        padding-left: {{ section.settings.content_display_padding_horizontal_mobile }}px;
        padding-right: {{ section.settings.content_display_padding_horizontal_mobile }}px;
        max-width: 100%;
    }

    .content-header {
        gap: 10px;
    }

    .content-icon {
        {% if section.settings.icon_circular %}
            width: {{ section.settings.icon_circle_size }}px;
            height: {{ section.settings.icon_circle_size }}px;
        {% else %}
            width: {{ section.settings.content_icon_width }}px;
            height: {{ section.settings.content_icon_height }}px;
        {% endif %}
        object-fit: cover;
    }

    .content-display h3 {
        font-size: 20px;
    }

    .content-display p {
        font-size: 14px;
    }

    .review-box {
        /* Inherits padding from main .review-box styles above */
    }

    .review-header {
        gap: 12px;
    }

    .profile-pic {
        width: 40px;
        height: 40px;
    }

    .reviewer-name {
        font-size: {{ section.settings.reviewer_name_font_size }}px;
        color: {{ section.settings.reviewer_name_color }};
    }

    .hero-benefit-star {
        font-size: {{ section.settings.star_icon_size }}px;
        color: {{ section.settings.star_icon_color }};
    }

    .review-text {
        font-size: {{ section.settings.review_text_font_size }}px;
        font-weight: {{ section.settings.review_text_font_weight }};
        color: {{ section.settings.review_text_color }};
        margin-bottom: 10px;
        text-align: center;
    }
}

/* Heading Styles from Customer Review Slider */
.section-{{ section.id }} .hero-header-wrapper {
    text-align: {{ section.settings.heading_text_align }};
}

.section-{{ section.id }} .hero-heading {
    letter-spacing: {{ settings.heading_letter_spacing | divided_by: 1000.0 }}em;
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: {{ section.settings.heading_color }};
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.heading_font_size_desktop }}px;
      font-weight: {{ settings.heading_font_weight }};
      text-transform: {{ settings.heading_text_transform }};
    {% else %}
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      font-weight: {{ section.settings.heading_font_weight }};
    {% endif %}
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    line-height: 1.2;
}

.section-{{ section.id }} .hero-highlighted-text {
    text-transform: {{ settings.highlighted_text_transform }};
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ settings.highlighted_text_solid_color }};
      {% endif %}
    {% else %}
      {% if section.settings.highlighted_gradient_enabled %}
        background: {{ section.settings.highlighted_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ section.settings.highlighted_color }};
      {% endif %}
    {% endif %}
    {% if settings.enable_global_typography %}
      font-size: {{ settings.highlighted_text_font_size_desktop }}px;
      font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% else %}
      font-size: {{ section.settings.highlighted_font_size_desktop }}px;
      font-weight: {{ section.settings.highlighted_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
    {% endif %}
}

.section-{{ section.id }} .hero-highlighted-separate {
    display: inline-block;
    margin-bottom: {{ section.settings.highlighted_spacing }}px;
}

.section-{{ section.id }} .hero-intro-text {
    {% if section.settings.use_theme_colors %}
      color: {{ settings.body_color }};
    {% else %}
      color: {{ section.settings.intro_text_color }};
    {% endif %}
    line-height: 1.6;
    margin-bottom: {{ section.settings.intro_spacing }}px;
    text-align: {{ section.settings.intro_text_align }};
}

.section-{{ section.id }} .hero-align-left { text-align: left; }
.section-{{ section.id }} .hero-align-center { text-align: center; }
.section-{{ section.id }} .hero-align-right { text-align: right; }

@media screen and (max-width: 749px) {
    .section-{{ section.id }} .hero-heading {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.heading_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.heading_font_size_mobile }}px;
      {% endif %}
    }

    .section-{{ section.id }} .hero-highlighted-text {
      {% if settings.enable_global_typography %}
        font-size: {{ settings.highlighted_text_font_size_mobile }}px;
      {% else %}
        font-size: {{ section.settings.highlighted_font_size_mobile }}px;
      {% endif %}
    }
}
</style>

<div class="hero-section-wrapper section-{{ section.id }}-wrapper">
<section class="hero-section section-{{ section.id }}" data-section-id="{{ section.id }}">
    {% comment %} Heading {% endcomment %}
    {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="hero-header hero-header-wrapper hero-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="hero-highlighted-text hero-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="hero-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="hero-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="hero-highlighted-text hero-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
            {% when 'inline_first' %}
              <{{ section.settings.heading_tag }} class="hero-heading">
                {% if section.settings.highlighted_text != blank %}
                  <span class="hero-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
            {% when 'inline_second' %}
              <{{ section.settings.heading_tag }} class="hero-heading">
                {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                {% if section.settings.highlighted_text != blank %}
                  <span class="hero-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
    {% endif %}

    {% comment %} Intro Text {% endcomment %}
    {% if section.settings.intro_text != blank %}
        <div class="hero-intro-text hero-align-{{ section.settings.intro_text_align }} rte">
          {{ section.settings.intro_text }}
        </div>
    {% endif %}

    {% comment %} Hero Content Wrapper for Desktop Side-by-Side Layout {% endcomment %}
    <div class="hero-content-wrapper">
        {% comment %} Hero Image Container with Icons {% endcomment %}
        <div class="hero-image-container">
            {% comment %} Image Wrapper - keeps icons position stable {% endcomment %}
            <div class="hero-image-wrapper">
                {% comment %} Main Hero Images {% endcomment %}
                {% if section.settings.mobile_background_image != blank %}
                    <img class="hero-main-image mobile-only"
                         src="{{ section.settings.mobile_background_image | image_url }}"
                         alt="Hero image"
                         loading="lazy">
                {% else %}
                    <div class="hero-main-image mobile-only hero-image-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {% endif %}

                {% if section.settings.desktop_background_image != blank %}
                    <img class="hero-main-image desktop-only"
                         src="{{ section.settings.desktop_background_image | image_url }}"
                         alt="Hero image"
                         loading="lazy">
                {% else %}
                    <div class="hero-main-image desktop-only hero-image-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {% endif %}
            </div>

            {% comment %} Benefit Icons {% endcomment %}
            <div class="benefit-icons-grid">
                {% for block in section.blocks %}
                    {% if block.type == 'benefit_item' %}
                        <div class="benefit-icon-item" {{ block.shopify_attributes }}>
                            {% case block.settings.icon_type %}
                                {% when 'image' %}
                                    {% if block.settings.icon != blank %}
                                        <img class="benefit-icon-image {% if forloop.first %}active{% else %}inactive{% endif %}"
                                             src="{{ block.settings.icon | image_url }}"
                                             alt="{{ block.settings.label }}"
                                             width="80"
                                             height="80"
                                             loading="lazy"
                                             data-index="{{ forloop.index0 }}">
                                    {% else %}
                                        <div class="benefit-icon-image benefit-icon-placeholder {% if forloop.first %}active{% else %}inactive{% endif %}"
                                             data-index="{{ forloop.index0 }}">
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        </div>
                                    {% endif %}
                                {% when 'svg' %}
                                    <div class="benefit-icon-image benefit-icon-svg {% if forloop.first %}active{% else %}inactive{% endif %}"
                                         data-index="{{ forloop.index0 }}">
                                        {{ block.settings.icon_svg }}
                                    </div>
                                {% when 'google' %}
                                    <span class="benefit-icon-image material-symbols-outlined {% if forloop.first %}active{% else %}inactive{% endif %}"
                                          data-index="{{ forloop.index0 }}">
                                        {{ block.settings.icon_google_name }}
                                    </span>
                            {% endcase %}
                            <p>{{ block.settings.label }}</p>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        {% comment %} Content Display Section {% endcomment %}
        <div class="content-display">
            <div class="timer-bar" id="timer-bar"> </div>

            <div class="content-header">
                {% case section.blocks.first.settings.icon_type %}
                    {% when 'image' %}
                        {% if section.blocks.first.settings.icon != blank %}
                            <img id="content-icon" class="content-icon"
                                 src="{{ section.blocks.first.settings.icon | image_url }}"
                                 alt="Content icon">
                        {% else %}
                            <div id="content-icon" class="content-icon content-icon-placeholder">
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                        {% endif %}
                    {% when 'svg' %}
                        <div id="content-icon" class="content-icon content-icon-svg">
                            {{ section.blocks.first.settings.icon_svg }}
                        </div>
                    {% when 'google' %}
                        <span id="content-icon" class="content-icon material-symbols-outlined">
                            {{ section.blocks.first.settings.icon_google_name }}
                        </span>
                {% endcase %}
                <h3 id="content-title" style="
                    color: {{ section.settings.content_title_color }};
                    text-align: {{ section.settings.content_title_align }};
                    font-weight: {{ section.settings.content_title_font_weight }};
                    text-transform: {{ section.settings.content_title_text_transform }};
                    font-size: {{ section.settings.content_title_font_size_mobile }}px;">
                    {{ section.blocks.first.settings.label }}
                </h3>
            </div>

            <p id="content-text"> {{ section.blocks.first.settings.description }} </p>

            {% if section.blocks.first.settings.block_image != blank %}
                <div class="block-image-wrapper" id="block-image-wrapper" style="
                    {% if section.blocks.first.settings.block_image_position == 'above_title' %}
                        order: 1 !important; margin-bottom: 0; margin-top: 0;
                    {% elsif section.blocks.first.settings.block_image_position == 'under_title' %}
                        order: 3 !important; margin-top: 0; margin-bottom: 0;
                    {% elsif section.blocks.first.settings.block_image_position == 'above_review' %}
                        order: 5 !important; margin-top: 0; margin-bottom: 0;
                    {% elsif section.blocks.first.settings.block_image_position == 'under_review' %}
                        order: 7 !important; margin-top: 20px; margin-bottom: 0;
                    {% endif %}">
                    <img id="block-image"
                         src="{{ section.blocks.first.settings.block_image | image_url }}"
                         alt="{{ section.blocks.first.settings.label }}"
                         class="block-image"
                         style="aspect-ratio: {{ section.blocks.first.settings.block_image_aspect_ratio }}; border-radius: {{ section.blocks.first.settings.block_image_border_radius }}px; border: {{ section.blocks.first.settings.block_image_border_width }}px solid {{ section.blocks.first.settings.block_image_border_color }};">
                </div>
            {% endif %}

            <div class="review-box" id="review-box" style="{% if section.settings.hide_all_review_boxes or section.blocks.first.settings.hide_review_box %}display: none;{% endif %}">
                <p class="review-text" id="review-text" style="display: block !important; visibility: visible !important; opacity: 1 !important;"> {{ section.blocks.first.settings.review_text }} </p>
                <div class="review-header">
                    <div class="reviewer-info">
                        <div class="hero-benefit-star-rating" id="hero-benefit-star-rating">
                            {% for i in (1..5) %}
                                <span class="hero-benefit-star">â˜…</span>
                            {% endfor %}
                        </div>
                        <h4 class="reviewer-name" id="reviewer-name"> {{ section.blocks.first.settings.reviewer_name }} </h4>
                        <svg id="review-profile-pic" style="width: 16px; height: 16px; flex-shrink: 0;" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2L15.09 5.26L19.18 5.27L20.04 9.28L23.5 11.5L20.04 13.72L19.18 17.73L15.09 17.74L12 21L8.91 17.74L4.82 17.73L3.96 13.72L0.5 11.5L3.96 9.28L4.82 5.27L8.91 5.26L12 2Z" fill="{{ section.settings.verified_badge_color }}"/>
                            <path d="M10.5 13.5L8.5 11.5L7.5 12.5L10.5 15.5L16.5 9.5L15.5 8.5L10.5 13.5Z" fill="{{ section.settings.review_box_background }}"/>
                        </svg>
                        <font style="font-size: {{ section.settings.verified_badge_font_size }}px; color: {{ section.settings.verified_text_color }};">Verified</font>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</div>

<!-- Hidden content data -->
<div class="content-data" style="display: none;">
    {% for block in section.blocks %}
        {% if block.type == 'benefit_item' %}
            <div data-index="{{ forloop.index0 }}"
                 data-icon-type="{{ block.settings.icon_type }}"
                 data-icon="{{ block.settings.icon | image_url }}"
                 data-icon-svg="{{ block.settings.icon_svg | escape }}"
                 data-icon-google="{{ block.settings.icon_google_name }}"
                 data-reviewer-name="{{ block.settings.reviewer_name | escape }}"
                 data-reviewer-pic="{{ block.settings.reviewer_pic | image_url }}"
                 data-stars="{{ block.settings.star_rating }}"
                 data-review="{{ block.settings.review_text | escape }}"
                 data-hide-review-box="{{ block.settings.hide_review_box }}"
                 data-block-image="{% if block.settings.block_image != blank %}{{ block.settings.block_image | image_url }}{% endif %}"
                 data-block-image-aspect="{{ block.settings.block_image_aspect_ratio }}"
                 data-block-image-border-radius="{{ block.settings.block_image_border_radius }}"
                 data-block-image-border-width="{{ block.settings.block_image_border_width }}"
                 data-block-image-border-color="{{ block.settings.block_image_border_color }}"
                 data-block-image-height-mobile="{{ block.settings.block_image_height_mobile }}"
                 data-block-image-height-desktop="{{ block.settings.block_image_height_desktop }}"
                 data-block-image-position="{{ block.settings.block_image_position }}">
                <h3>{{ block.settings.label }}</h3>
                <p>{{ block.settings.description }}</p>
            </div>
        {% endif %}
    {% endfor %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const hotpoints = document.querySelectorAll('.benefit-icon-image');
    const contentTitle = document.getElementById('content-title');
    const contentText = document.getElementById('content-text');
    const timerBar = document.getElementById('timer-bar');
    const contentData = document.querySelectorAll('.content-data div[data-index]');

    // Review elements
    const reviewerName = document.getElementById('reviewer-name');
    const reviewerPic = document.getElementById('review-profile-pic');
    const starRating = document.getElementById('hero-benefit-star-rating');
    const reviewText = document.getElementById('review-text');

    let currentIndex = 0;
    let autoTimer = null;
    let isUserInteracting = false;

    // Timer settings from section
    const isTimerDisabled = {{ section.settings.disable_timer }};
    const timerDuration = {{ section.settings.timer_duration }} * 1000; // Convert to milliseconds

    function setActiveHotpoint(index) {
        // Clear any existing timer
        if (autoTimer) {
            clearTimeout(autoTimer);
            autoTimer = null;
        }

        // Reset timer bar - force reset by removing class and setting width to 0
        timerBar.classList.remove('animate');
        timerBar.style.width = '0%';

        // Force reflow to ensure the reset happens
        void timerBar.offsetWidth;

        // Update hotpoint states
        hotpoints.forEach((hotpoint, i) => {
            if (i === index) {
                hotpoint.classList.remove('inactive');
                hotpoint.classList.add('active');
            } else {
                hotpoint.classList.remove('active');
                hotpoint.classList.add('inactive');
            }
        });

        // Update content and review from HTML data
        const selectedContent = document.querySelector(`.content-data div[data-index="${index}"]`);

        if (selectedContent) {
            const title = selectedContent.querySelector('h3').textContent;
            const text = selectedContent.querySelector('p').textContent;
            const iconType = selectedContent.getAttribute('data-icon-type');
            const iconSrc = selectedContent.getAttribute('data-icon');
            const iconSvg = selectedContent.getAttribute('data-icon-svg');
            const iconGoogle = selectedContent.getAttribute('data-icon-google');

            // Update main content
            contentTitle.textContent = title;
            contentText.textContent = text;

            // Apply content title styling from section settings
            contentTitle.style.color = '{{ section.settings.content_title_color }}';
            contentTitle.style.textAlign = '{{ section.settings.content_title_align }}';
            contentTitle.style.fontWeight = '{{ section.settings.content_title_font_weight }}';
            contentTitle.style.textTransform = '{{ section.settings.content_title_text_transform }}';

            // Apply responsive font size
            const isMobile = window.innerWidth < 750;
            const fontSize = isMobile ? '{{ section.settings.content_title_font_size_mobile }}' : '{{ section.settings.content_title_font_size_desktop }}';
            contentTitle.style.fontSize = fontSize + 'px';

            // Update icon based on icon type - always get fresh reference
            const contentHeader = document.querySelector('.content-header');
            let oldIcon = document.getElementById('content-icon');

            if (!oldIcon) return; // Safety check

            let newIcon;

            switch(iconType) {
                case 'image':
                    if (oldIcon.tagName === 'IMG') {
                        oldIcon.src = iconSrc;
                    } else {
                        newIcon = document.createElement('img');
                        newIcon.id = 'content-icon';
                        newIcon.className = 'content-icon';
                        newIcon.src = iconSrc;
                        newIcon.alt = 'Content icon';
                        oldIcon.replaceWith(newIcon);
                    }
                    break;
                case 'svg':
                    if (oldIcon.classList && oldIcon.classList.contains('content-icon-svg')) {
                        oldIcon.innerHTML = iconSvg;
                    } else {
                        newIcon = document.createElement('div');
                        newIcon.id = 'content-icon';
                        newIcon.className = 'content-icon content-icon-svg';
                        newIcon.innerHTML = iconSvg;
                        oldIcon.replaceWith(newIcon);
                    }
                    break;
                case 'google':
                    if (oldIcon.classList && oldIcon.classList.contains('material-symbols-outlined')) {
                        oldIcon.textContent = iconGoogle;
                    } else {
                        newIcon = document.createElement('span');
                        newIcon.id = 'content-icon';
                        newIcon.className = 'content-icon material-symbols-outlined';
                        newIcon.textContent = iconGoogle;
                        oldIcon.replaceWith(newIcon);
                    }
                    break;
            }

            // Update review content
            const name = selectedContent.getAttribute('data-reviewer-name');
            const pic = selectedContent.getAttribute('data-reviewer-pic');
            const stars = parseInt(selectedContent.getAttribute('data-stars'));
            const review = selectedContent.getAttribute('data-review');
            const hideReviewBox = selectedContent.getAttribute('data-hide-review-box') === 'true';

            // Show/hide review box based on block setting
            const reviewBox = document.getElementById('review-box');
            if (reviewBox) {
                if (hideReviewBox) {
                    reviewBox.style.display = 'none';
                } else {
                    reviewBox.style.display = 'block';
                }
            }

            if (reviewerName) {
                reviewerName.textContent = name;
            }

            // Update reviewer pic - handle both img and div placeholder
            if (reviewerPic && reviewerPic.tagName === 'IMG') {
                reviewerPic.src = pic;
            }

            if (reviewText) {
                // Always update the review text
                reviewText.textContent = review || '';
                reviewText.style.display = 'block';
                reviewText.style.visibility = 'visible';
                reviewText.style.opacity = '1';
            }

            // Update block image
            let blockImageWrapper = document.getElementById('block-image-wrapper');
            const blockImageSrc = selectedContent.getAttribute('data-block-image');
            const blockImageAspect = selectedContent.getAttribute('data-block-image-aspect');
            const blockImageBorderRadius = selectedContent.getAttribute('data-block-image-border-radius');
            const blockImageBorderWidth = selectedContent.getAttribute('data-block-image-border-width');
            const blockImageBorderColor = selectedContent.getAttribute('data-block-image-border-color');
            const blockImageHeightMobile = selectedContent.getAttribute('data-block-image-height-mobile');
            const blockImageHeightDesktop = selectedContent.getAttribute('data-block-image-height-desktop');
            const blockImagePosition = selectedContent.getAttribute('data-block-image-position');

            if (blockImageSrc && blockImageSrc !== '' && blockImageSrc !== 'null' && !blockImageSrc.includes('no-image')) {
                if (!blockImageWrapper) {
                    // Create wrapper if it doesn't exist
                    const wrapper = document.createElement('div');
                    wrapper.id = 'block-image-wrapper';
                    wrapper.className = 'block-image-wrapper';
                    const img = document.createElement('img');
                    img.id = 'block-image';
                    img.className = 'block-image';
                    wrapper.appendChild(img);
                    document.querySelector('.content-display').appendChild(wrapper);
                    blockImageWrapper = wrapper; // Update reference
                }

                // Get fresh reference to image
                const blockImage = document.getElementById('block-image');
                if (blockImage) {
                    blockImage.src = blockImageSrc;
                    blockImage.style.borderRadius = blockImageBorderRadius + 'px';
                    blockImage.style.border = blockImageBorderWidth + 'px solid ' + blockImageBorderColor;

                    // Apply aspect ratio or custom height
                    if (blockImageAspect === 'custom') {
                        // Use custom height settings
                        const isMobile = window.innerWidth < 750;
                        const imageHeight = isMobile ? blockImageHeightMobile : blockImageHeightDesktop;
                        blockImage.style.height = imageHeight + 'px';
                        blockImage.style.aspectRatio = 'auto';
                    } else {
                        // Use aspect ratio
                        blockImage.style.aspectRatio = blockImageAspect || '16/9';
                        blockImage.style.height = 'auto';
                    }
                }
                if (blockImageWrapper) {
                    blockImageWrapper.style.display = 'block';

                    // Apply position based on block setting
                    if (blockImagePosition === 'above_title') {
                        blockImageWrapper.style.setProperty('order', '1', 'important');
                        blockImageWrapper.style.marginBottom = '0';
                        blockImageWrapper.style.marginTop = '0';
                    } else if (blockImagePosition === 'under_title') {
                        blockImageWrapper.style.setProperty('order', '3', 'important');
                        blockImageWrapper.style.marginTop = '0';
                        blockImageWrapper.style.marginBottom = '0';
                    } else if (blockImagePosition === 'above_review') {
                        blockImageWrapper.style.setProperty('order', '5', 'important');
                        blockImageWrapper.style.marginTop = '0';
                        blockImageWrapper.style.marginBottom = '0';
                    } else if (blockImagePosition === 'under_review') {
                        blockImageWrapper.style.setProperty('order', '7', 'important');
                        blockImageWrapper.style.marginTop = '20px';
                        blockImageWrapper.style.marginBottom = '0';
                    }
                }
            } else {
                // Hide image if no image is set
                if (blockImageWrapper) {
                    blockImageWrapper.style.display = 'none';
                }
            }

            // Update star rating
            starRating.innerHTML = '';
            for (let i = 0; i < 5; i++) {
                const star = document.createElement('span');
                star.className = 'hero-benefit-star';
                star.textContent = i < stars ? 'â˜…' : 'â˜†';
                starRating.appendChild(star);
            }
        }

        currentIndex = index;

        // Start timer bar animation after a small delay (only if timer is enabled)
        if (!isTimerDisabled) {
            setTimeout(() => {
                timerBar.classList.add('animate');
            }, 50);
        }

        // Set timer for next hotpoint (only if user isn't actively clicking and timer is enabled)
        if (!isUserInteracting && !isTimerDisabled) {
            autoTimer = setTimeout(() => {
                const nextIndex = (currentIndex + 1) % hotpoints.length;
                setActiveHotpoint(nextIndex);
            }, timerDuration);
        }
    }

    // Add click listeners to hotpoints
    hotpoints.forEach((hotpoint, index) => {
        hotpoint.addEventListener('click', function() {
            isUserInteracting = true;
            setActiveHotpoint(index);

            // Reset user interaction flag after a delay (only restart auto-cycling if timer is enabled)
            if (!isTimerDisabled) {
                setTimeout(() => {
                    isUserInteracting = false;
                    // Restart auto-cycling
                    autoTimer = setTimeout(() => {
                        const nextIndex = (currentIndex + 1) % hotpoints.length;
                        setActiveHotpoint(nextIndex);
                    }, timerDuration);
                }, 2000);
            }
        });
    });

    // Initialize
    setActiveHotpoint(0);

    // Handle window resize to update responsive styles
    let resizeTimeout;
    window.addEventListener('resize', function() {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(function() {
            const isMobile = window.innerWidth < 750;

            // Update content title font size
            if (contentTitle) {
                const fontSize = isMobile ? '{{ section.settings.content_title_font_size_mobile }}' : '{{ section.settings.content_title_font_size_desktop }}';
                contentTitle.style.fontSize = fontSize + 'px';
            }


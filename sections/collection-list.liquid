{% comment %}
  Collection List Section
  Displays collections in a grid layout with fade mask and collection names
{% endcomment %}

<section class="collection-list section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">
    <div class="cl-content-wrapper">

      {% comment %} Heading {% endcomment %}
      {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
        <div class="cl-header-wrapper cl-align-{{ section.settings.heading_text_align }}">
          {% case section.settings.highlight_position %}
            {% when 'above' %}
              {% if section.settings.highlighted_text != blank %}
                <span class="cl-highlighted-text cl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              <{{ section.settings.heading_tag }} class="cl-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
            {% when 'below' %}
              <{{ section.settings.heading_tag }} class="cl-heading">
                {{ section.settings.heading_before }}
                {{ section.settings.heading_after }}
              </{{ section.settings.heading_tag }}>
              {% if section.settings.highlighted_text != blank %}
                <span class="cl-highlighted-text cl-highlighted-separate">{{ section.settings.highlighted_text }}</span>
              {% endif %}
            {% when 'inline_first' %}
              <{{ section.settings.heading_tag }} class="cl-heading">
                {% if section.settings.highlighted_text != blank %}
                  <span class="cl-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
            {% when 'inline_second' %}
              <{{ section.settings.heading_tag }} class="cl-heading">
                {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
                {% if section.settings.highlighted_text != blank %}
                  <span class="cl-highlighted-text">{{ section.settings.highlighted_text }}</span>
                {% endif %}
                {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
              </{{ section.settings.heading_tag }}>
          {% endcase %}
        </div>
      {% endif %}

      {% comment %} Subheading {% endcomment %}
      {% if section.settings.subheading != blank %}
        <div class="cl-subheading cl-align-{{ section.settings.heading_text_align }}">
          {{ section.settings.subheading }}
        </div>
      {% endif %}

      {% comment %} Collection Grid or Slider {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="cl-layout-wrapper cl-layout-mobile-{{ section.settings.layout_mobile }} cl-layout-desktop-{{ section.settings.layout_desktop }}">
          <div class="cl-slider" data-slider-container>
            <div class="cl-slider-viewport" data-slider-viewport>
              <div class="cl-slider-track" data-slider-track>

          {% for block in section.blocks %}
            {% if block.type == 'collection' %}
              {% assign collection = collections[block.settings.collection] %}
              {% assign collection_image = block.settings.collection_image %}

              {% comment %} Use custom image if provided, otherwise use collection featured image {% endcomment %}
              {% if collection_image == blank and collection and collection.featured_image %}
                {% assign collection_image = collection.featured_image %}
              {% endif %}

              {% assign collection_title = block.settings.collection_title_override %}
              {% if collection_title == blank and collection %}
                {% assign collection_title = collection.title %}
              {% endif %}

              <div class="cl-item" data-slider-slide {{ block.shopify_attributes }}>
                <a href="{{ collection.url | default: '#' }}" class="cl-card">
                  <div class="cl-image-wrapper">
                    {% if collection_image != blank %}
                      <img
                        srcset="
                          {%- if collection_image.width >= 165 -%}{{ collection_image | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if collection_image.width >= 360 -%}{{ collection_image | image_url: width: 360 }} 360w,{%- endif -%}
                          {%- if collection_image.width >= 533 -%}{{ collection_image | image_url: width: 533 }} 533w,{%- endif -%}
                          {%- if collection_image.width >= 720 -%}{{ collection_image | image_url: width: 720 }} 720w,{%- endif -%}
                          {%- if collection_image.width >= 940 -%}{{ collection_image | image_url: width: 940 }} 940w,{%- endif -%}
                          {%- if collection_image.width >= 1066 -%}{{ collection_image | image_url: width: 1066 }} 1066w,{%- endif -%}
                          {{ collection_image | image_url }} {{ collection_image.width }}w
                        "
                        src="{{ collection_image | image_url: width: 533 }}"
                        sizes="(min-width: 750px) calc((100vw - 10rem) / 2), calc(100vw - 3rem)"
                        alt="{{ collection_image.alt | escape }}"
                        loading="lazy"
                        width="{{ collection_image.width }}"
                        height="{{ collection_image.height }}"
                        class="cl-image"
                      >
                    {% else %}
                      <div class="cl-image-placeholder">
                        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {% endif %}

                    {% if section.settings.text_position == 'overlay' %}
                      {% comment %} Fade Mask Bottom {% endcomment %}
                      {% if section.settings.enable_fade_mask %}
                        <div class="cl-fade-mask"></div>
                      {% endif %}

                      {% comment %} Collection Name and Arrow (Overlay) {% endcomment %}
                      <div class="cl-info cl-info-overlay">
                        <div class="cl-overlay-content">
                          <div class="cl-name-arrow-wrapper">
                            <span class="cl-collection-name">{{ collection_title }}</span>
                            <svg class="cl-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                          </div>
                          {% if block.settings.collection_description != blank %}
                            <p class="cl-collection-description">{{ block.settings.collection_description }}</p>
                          {% endif %}
                        </div>
                      </div>
                    {% endif %}
                  </div>

                  {% if section.settings.text_position == 'below' %}
                    {% comment %} Collection Name and Arrow (Below Card) {% endcomment %}
                    <div class="cl-info cl-info-below">
                      <div class="cl-name-arrow-wrapper">
                        <span class="cl-collection-name">{{ collection_title }}</span>
                        <svg class="cl-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </div>
                      {% if block.settings.collection_description != blank %}
                        <p class="cl-collection-description">{{ block.settings.collection_description }}</p>
                      {% endif %}
                    </div>
                  {% endif %}
                </a>
              </div>
            {% endif %}
          {% endfor %}

              </div>
            </div>
          </div>
        </div>
      {% endif %}

    </div>
  </div>
</section>

<style>
  .collection-list.section-{{ section.id }} {
    {% if section.settings.use_theme_colors %}
      background: {{ settings.section_background_color }};
    {% else %}
      {% if section.settings.use_section_gradient %}
        background: {{ section.settings.section_gradient_background }};
      {% else %}
        background-color: {{ section.settings.section_background_color }};
      {% endif %}
    {% endif %}
  }

  .collection-list.section-{{ section.id }} .cl-heading,
  .collection-list.section-{{ section.id }} .cl-subheading {
    {% if section.settings.use_theme_colors %}
      color: {{ settings.heading_color }};
    {% else %}
      color: {{ section.settings.section_text_color }};
    {% endif %}
  }

  .collection-list.section-{{ section.id }} .container {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .container {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  /* Heading Styles */
  .collection-list.section-{{ section.id }} .cl-header-wrapper {
    margin-bottom: 1.6rem;
  }

  .collection-list.section-{{ section.id }} .cl-heading {
    font-family: var(--font-heading-family);
    font-size: 3.2rem;
    font-weight: var(--font-heading-weight);
    line-height: 1.2;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-heading {
      font-size: 4.8rem;
    }
  }

  .collection-list.section-{{ section.id }} .cl-highlighted-text {
    {% if section.settings.use_theme_colors %}
      {% if settings.highlighted_text_gradient_enabled %}
        background: {{ settings.highlighted_text_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ settings.highlighted_text_solid_color }};
      {% endif %}
    {% else %}
      {% if section.settings.use_highlight_gradient %}
        background: {{ section.settings.highlight_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block;
      {% else %}
        color: {{ section.settings.highlight_color }};
      {% endif %}
    {% endif %}
  }

  .collection-list.section-{{ section.id }} .cl-highlighted-separate {
    display: block;
    margin-bottom: 0.8rem;
  }

  .collection-list.section-{{ section.id }} .cl-subheading {
    font-size: 1.6rem;
    line-height: 1.5;
    margin-top: 1.2rem;
    margin-bottom: 3.2rem;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-subheading {
      font-size: 1.8rem;
      margin-bottom: 4.8rem;
    }
  }

  /* Alignment */
  .collection-list.section-{{ section.id }} .cl-align-left {
    text-align: left;
  }

  .collection-list.section-{{ section.id }} .cl-align-center {
    text-align: center;
  }

  .collection-list.section-{{ section.id }} .cl-align-right {
    text-align: right;
  }

  /* Layout Wrapper - Default as slider structure */
  .collection-list.section-{{ section.id }} .cl-layout-wrapper {
    /* Default structure is slider for both */
  }

  /* Mobile Grid Layout */
  .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-slider {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    gap: {{ section.settings.grid_gap_mobile }}px;
    {% if section.settings.equal_height_cards %}
      align-items: stretch;
    {% endif %}
  }

  .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-slider-viewport,
  .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-slider-track {
    display: contents;
  }

  /* Desktop Grid Layout */
  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-slider {
      display: grid !important;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr) !important;
      gap: {{ section.settings.grid_gap_desktop }}px !important;
      {% if section.settings.equal_height_cards %}
        align-items: stretch;
      {% endif %}
    }

    .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-slider-viewport,
    .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-slider-track {
      display: contents !important;
    }
  }

  /* Equal Height Cards for Grid Mode */
  {% if section.settings.equal_height_cards %}
    .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-item {
      display: flex;
      flex-direction: column;
    }

    .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-card {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-image-wrapper {
      flex-shrink: 0;
    }

    .collection-list.section-{{ section.id }} .cl-layout-mobile-grid .cl-info-below {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }

    @media screen and (min-width: 750px) {
      .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-item {
        display: flex;
        flex-direction: column;
      }

      .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-card {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-image-wrapper {
        flex-shrink: 0;
      }

      .collection-list.section-{{ section.id }} .cl-layout-desktop-grid .cl-info-below {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }
    }
  {% endif %}

  /* Collection Card */
  .collection-list.section-{{ section.id }} .cl-card {
    display: block;
    text-decoration: none;
    color: inherit;
    position: relative;
    border-radius: {{ section.settings.card_border_radius }}px;
    {% if section.settings.card_border_width > 0 %}
      border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    {% endif %}
  }

  .collection-list.section-{{ section.id }} .cl-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
    border-radius: {{ section.settings.card_border_radius }}px;
    {% if section.settings.image_aspect_ratio == 'square' %}
      aspect-ratio: 1 / 1;
    {% elsif section.settings.image_aspect_ratio == 'portrait' %}
      aspect-ratio: 3 / 4;
    {% elsif section.settings.image_aspect_ratio == 'landscape' %}
      aspect-ratio: 4 / 3;
    {% elsif section.settings.image_aspect_ratio == 'wide' %}
      aspect-ratio: 16 / 9;
    {% elsif section.settings.image_aspect_ratio == 'custom' %}
      padding-bottom: {{ section.settings.custom_aspect_ratio_mobile }}%;
    {% endif %}
    display: flex;
  }

  {% if section.settings.image_aspect_ratio == 'custom' %}
    @media screen and (min-width: 750px) {
      .collection-list.section-{{ section.id }} .cl-image-wrapper {
        padding-bottom: {{ section.settings.custom_aspect_ratio_desktop }}%;
      }
    }
  {% endif %}

  .collection-list.section-{{ section.id }} .cl-image,
  .collection-list.section-{{ section.id }} .cl-image-placeholder {
    {% if section.settings.image_aspect_ratio == 'custom' %}
      position: absolute;
      top: 0;
      left: 0;
    {% else %}
      position: relative;
      z-index: 0;
    {% endif %}
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-list.section-{{ section.id }} .cl-card:hover .cl-image {
    transform: scale(1.05);
  }

  .collection-list.section-{{ section.id }} .cl-image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-list.section-{{ section.id }} .cl-image-placeholder svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  /* Fade Mask */
  .collection-list.section-{{ section.id }} .cl-fade-mask {
    position: absolute !important;
    bottom: 0;
    left: 0;
    right: 0;
    top: {{ 100 | minus: section.settings.fade_height_mobile }}%;
    background: linear-gradient(to top, {{ section.settings.fade_color }} 0%, transparent 100%);
    pointer-events: none;
    z-index: 1;
    content: '';
    display: block;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-fade-mask {
      top: {{ 100 | minus: section.settings.fade_height_desktop }}%;
    }
  }

  /* Ensure image wrapper creates stacking context for absolute children */
  .collection-list.section-{{ section.id }} .cl-image-wrapper {
    transform: translateZ(0);
  }

  /* Collection Info - Overlay */
  .collection-list.section-{{ section.id }} .cl-info-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ section.settings.info_padding_mobile }}px;
    z-index: 2;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-info-overlay {
      padding: {{ section.settings.info_padding_desktop }}px;
    }
  }

  .collection-list.section-{{ section.id }} .cl-overlay-content {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .collection-list.section-{{ section.id }} .cl-info-overlay .cl-name-arrow-wrapper {
    display: flex;
    align-items: center;
    gap: 10px;
  }


  /* Collection Info - Below Card */
  .collection-list.section-{{ section.id }} .cl-info-below {
    padding-top: {{ section.settings.info_padding_mobile }}px;
    padding-left: {{ section.settings.info_padding_mobile }}px;
    padding-right: {{ section.settings.info_padding_mobile }}px;
    padding-bottom: {{ section.settings.info_padding_mobile }}px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-info-below {
      padding-top: {{ section.settings.info_padding_desktop }}px;
      padding-left: {{ section.settings.info_padding_desktop }}px;
      padding-right: {{ section.settings.info_padding_desktop }}px;
      padding-bottom: {{ section.settings.info_padding_desktop }}px;
    }
  }

  .collection-list.section-{{ section.id }} .cl-info-below .cl-name-arrow-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    gap: 10px;
  }

  /* Collection Name Styling */
  .collection-list.section-{{ section.id }} .cl-collection-name {
    font-size: {{ section.settings.collection_name_size_mobile }}px;
    font-weight: {{ section.settings.collection_name_weight }};
    line-height: 1.2;
  }

  /* Collection Name Color for Overlay */
  .collection-list.section-{{ section.id }} .cl-info-overlay .cl-collection-name {
    color: {{ section.settings.collection_name_color }};
  }

  /* Collection Name and Arrow Color for Below Position */
  .collection-list.section-{{ section.id }} .cl-info-below .cl-collection-name,
  .collection-list.section-{{ section.id }} .cl-info-below .cl-arrow {
    color: {{ section.settings.collection_name_color }};
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-collection-name {
      font-size: {{ section.settings.collection_name_size_desktop }}px;
    }
  }

  /* Collection Description */
  .collection-list.section-{{ section.id }} .cl-collection-description {
    font-size: {{ section.settings.description_size_mobile }}px;
    line-height: {{ section.settings.description_line_height_mobile }};
    font-weight: {{ section.settings.description_font_weight }};
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-collection-description {
      font-size: {{ section.settings.description_size_desktop }}px;
      line-height: {{ section.settings.description_line_height_desktop }};
    }
  }

  .collection-list.section-{{ section.id }} .cl-info-overlay .cl-arrow {
    color: {{ section.settings.arrow_color }};
    width: {{ section.settings.arrow_size_mobile }}px;
    height: {{ section.settings.arrow_size_mobile }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .collection-list.section-{{ section.id }} .cl-info-below .cl-arrow {
    width: {{ section.settings.arrow_size_mobile }}px;
    height: {{ section.settings.arrow_size_mobile }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-arrow {
      width: {{ section.settings.arrow_size_desktop }}px;
      height: {{ section.settings.arrow_size_desktop }}px;
    }
  }

  .collection-list.section-{{ section.id }} .cl-card:hover .cl-arrow {
    transform: translateX(4px);
  }

  /* Slider Styles */
  .collection-list.section-{{ section.id }} .cl-slider {
    position: relative;
  }

  /* Mobile Slider Specific Styles */
  .collection-list.section-{{ section.id }} .cl-layout-mobile-slider .cl-slider-viewport {
    overflow-x: auto;
    overflow-y: visible;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 1rem;
  }

  .collection-list.section-{{ section.id }} .cl-layout-mobile-slider .cl-slider-viewport::-webkit-scrollbar {
    height: 6px;
  }

  .collection-list.section-{{ section.id }} .cl-layout-mobile-slider .cl-slider-viewport::-webkit-scrollbar-track {
    background: rgba(15, 23, 42, 0.08);
    border-radius: 999px;
  }

  .collection-list.section-{{ section.id }} .cl-layout-mobile-slider .cl-slider-viewport::-webkit-scrollbar-thumb {
    background: rgba(15, 23, 42, 0.3);
    border-radius: 999px;
  }

  .collection-list.section-{{ section.id }} .cl-layout-mobile-slider .cl-slider-track {
    display: flex;
    gap: {{ section.settings.grid_gap_mobile }}px;
    min-width: 100%;
  }

  .collection-list.section-{{ section.id }} .cl-layout-mobile-slider .cl-item {
    flex: 0 0 calc({{ section.settings.slide_width_mobile }}% - {{ section.settings.grid_gap_mobile }}px);
    min-width: calc({{ section.settings.slide_width_mobile }}% - {{ section.settings.grid_gap_mobile }}px);
    scroll-snap-align: start;
    box-sizing: border-box;
  }

  /* Desktop Slider Specific Styles */
  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-slider-viewport {
      overflow-x: auto;
      overflow-y: visible;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 1rem;
    }

    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-slider-viewport::-webkit-scrollbar {
      height: 6px;
    }

    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-slider-viewport::-webkit-scrollbar-track {
      background: rgba(15, 23, 42, 0.08);
      border-radius: 999px;
    }

    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-slider-viewport::-webkit-scrollbar-thumb {
      background: rgba(15, 23, 42, 0.3);
      border-radius: 999px;
    }

    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-slider-track {
      display: flex;
      gap: {{ section.settings.grid_gap_desktop }}px;
      min-width: 100%;
    }

    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-item {
      flex: 0 0 calc({{ section.settings.slide_width_tablet }}% - {{ section.settings.grid_gap_desktop }}px);
      min-width: calc({{ section.settings.slide_width_tablet }}% - {{ section.settings.grid_gap_desktop }}px);
      scroll-snap-align: start;
      box-sizing: border-box;
    }
  }

  @media screen and (min-width: 1024px) {
    .collection-list.section-{{ section.id }} .cl-layout-desktop-slider .cl-item {
      flex: 0 0 calc({{ section.settings.slide_width_desktop }}% - {{ section.settings.grid_gap_desktop }}px);
      min-width: calc({{ section.settings.slide_width_desktop }}% - {{ section.settings.grid_gap_desktop }}px);
    }
  }

  /* Page Width Connection */
  .collection-list.section-{{ section.id }} .page-width {
    max-width: var(--page-width);
    margin-left: auto;
    margin-right: auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .collection-list.section-{{ section.id }} .page-width {
      padding-left: 5rem;
      padding-right: 5rem;
    }
  }

  assign footer_text_color = section.settings.footer_text_color
  assign footer_heading_color = section.settings.footer_heading_color
  assign footer_border_color = section.settings.footer_border_color
  assign footer_menu_color = section.settings.footer_menu_color
  assign footer_menu_hover_color = section.settings.footer_menu_hover_color
  assign footer_divider_color = section.settings.footer_divider_color
  assign localization_label_color = section.settings.localization_label_color
  assign footer_heading_size = section.settings.footer_heading_size
  assign footer_text_size = section.settings.footer_text_size
  assign copyright_text_size = section.settings.copyright_text_size
  assign localization_label_size = section.settings.localization_label_size
-%}

<style>
  .ecl-footer-wrapper {
    --ecl-footer-bg: {{ footer_bg_color }};
    --ecl-footer-text: {{ footer_text_color }};
    --ecl-footer-heading: {{ footer_heading_color }};
    --ecl-footer-border: {{ footer_border_color }};
    --ecl-footer-menu: {{ footer_menu_color }};
    --ecl-footer-menu-hover: {{ footer_menu_hover_color }};
    --ecl-footer-divider: {{ footer_divider_color }};
    --ecl-localization-label: {{ localization_label_color }};
    --ecl-heading-size: {{ footer_heading_size }}px;
    --ecl-text-size: {{ footer_text_size }}px;
    --ecl-copyright-size: {{ copyright_text_size }}px;
    --ecl-localization-size: {{ localization_label_size }}px;
  }

  .ecl-footer-wrapper {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .ecl-footer-wrapper {
      margin-top: {{ section.settings.margin_top }}px;
    }
  }

  .ecl-page-fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: eclFadeInUp 0.8s ease-out forwards;
  }

  @keyframes eclFadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ecl-page-fade-in:nth-child(2) { animation-delay: 0.1s; }
  .ecl-page-fade-in:nth-child(3) { animation-delay: 0.2s; }
  .ecl-page-fade-in:nth-child(4) { animation-delay: 0.3s; }

  /* Footer Main Styles */
  .ecl-footer-main {
    background-color: var(--ecl-footer-bg);
    color: var(--ecl-footer-text);
    padding: 60px 20px 20px;
  }

  .ecl-footer-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ecl-footer-content {
    display: grid;
    gap: 40px;
    margin-bottom: 40px;
    grid-template-columns: repeat(12, 1fr);
  }

  @media screen and (max-width: 749px) {
    .ecl-footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }
  }

  /* Desktop Column Widths */
  @media screen and (min-width: 750px) {
    .ecl-footer-column--desktop-1 { grid-column: span 1; }
    .ecl-footer-column--desktop-2 { grid-column: span 2; }
    .ecl-footer-column--desktop-3 { grid-column: span 3; }
    .ecl-footer-column--desktop-4 { grid-column: span 4; }
    .ecl-footer-column--desktop-5 { grid-column: span 5; }
    .ecl-footer-column--desktop-6 { grid-column: span 6; }
    .ecl-footer-column--desktop-7 { grid-column: span 7; }
    .ecl-footer-column--desktop-8 { grid-column: span 8; }
    .ecl-footer-column--desktop-9 { grid-column: span 9; }
    .ecl-footer-column--desktop-10 { grid-column: span 10; }
    .ecl-footer-column--desktop-11 { grid-column: span 11; }
    .ecl-footer-column--desktop-12 { grid-column: span 12; }
  }

  /* Mobile Column Widths */
  @media screen and (max-width: 749px) {
    .ecl-footer-column--mobile-1 { grid-column: span 1; }
    .ecl-footer-column--mobile-2 { grid-column: span 2; }
  }

  /* Brand Column */
  .ecl-footer-brand {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ecl-footer-logo {
    font-size: 24px;
    font-weight: 700;
    color: var(--ecl-footer-heading);
  }

  .ecl-footer-logo-image {
    display: block;
  }

  .ecl-footer-logo-description,
  .ecl-footer-description {
    font-size: var(--ecl-text-size);
    line-height: 1.6;
    color: var(--ecl-footer-text);
    margin: 0;
  }

  /* Footer Columns */
  .ecl-footer-column h3 {
    font-size: var(--ecl-heading-size);
    font-weight: 600;
    color: var(--ecl-footer-heading);
    margin: 0 0 20px 0;
  }

  .ecl-footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ecl-footer-column li {
    margin-bottom: 12px;
  }

  .ecl-footer-column a {
    color: var(--ecl-footer-menu);
    text-decoration: none;
    font-size: var(--ecl-text-size);
    transition: color 0.2s ease;
  }

  .ecl-footer-column a:hover {
    color: var(--ecl-footer-menu-hover);
  }

  .ecl-footer-text {
    font-size: var(--ecl-text-size);
    line-height: 1.6;
    color: var(--ecl-footer-text);
  }

  /* Social Section */
  .ecl-footer-social-section {
    padding: 30px 0;
    border-top: 1px solid var(--ecl-footer-divider);
    border-bottom: 1px solid var(--ecl-footer-divider);
    margin-bottom: 30px;
    text-align: center;
  }

  .ecl-footer-social-heading {
    font-size: var(--ecl-heading-size);
    font-weight: 600;
    color: var(--ecl-footer-heading);
    margin: 0 0 20px 0;
  }

  /* Footer Bottom */
  .ecl-footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    padding-top: 30px;
    border-top: 1px solid var(--ecl-footer-divider);
  }

  @media screen and (max-width: 749px) {
    .ecl-footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }

  .ecl-footer-copyright {
    font-size: var(--ecl-copyright-size);
    color: var(--ecl-footer-text);
  }

  .ecl-footer-payment-icons {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ecl-footer-payment-icon {
    height: 24px;
    width: auto;
  }

  /* Localization */
  .ecl-footer__localization {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  .ecl-footer__localization h2 {
    font-size: var(--ecl-localization-size);
    color: var(--ecl-localization-label);
    margin: 0 0 8px 0;
  }

  @media screen and (max-width: 749px) {
    .ecl-footer__localization {
      justify-content: center;
      width: 100%;
    }
  }
</style>

<div class="ecl-footer-wrapper ecl-page-fade-in">
  <footer class="ecl-footer-main">
    <div class="ecl-footer-container">
      <div class="ecl-footer-content">

        {%- if section.settings.show_brand_column -%}
          <div class="ecl-footer-brand ecl-footer-column--desktop-3 ecl-footer-column--mobile-2">
            {%- if section.settings.logo != blank -%}
              <img src="{{ section.settings.logo | image_url: width: 400 }}"
                   alt="{{ shop.name }}"
                   class="ecl-footer-logo-image"
                   width="{{ section.settings.logo_width }}"
                   height="auto"
                   loading="lazy">
            {%- else -%}
              <div class="ecl-footer-logo">{{ section.settings.brand_name | default: shop.name }}</div>
            {%- endif -%}
            {%- if section.settings.logo_description != blank -%}
              <p class="ecl-footer-logo-description">{{ section.settings.logo_description }}</p>
            {%- endif -%}
            {%- if section.settings.brand_description != blank -%}
              <p class="ecl-footer-description">{{ section.settings.brand_description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
              <div class="ecl-footer-column ecl-footer-column--desktop-{{ block.settings.width_desktop | default: 3 }} ecl-footer-column--mobile-{{ block.settings.width_mobile | default: 2 }}" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3>{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul>
                    {%- for link in linklists[block.settings.menu].links -%}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>

            {%- when 'custom_links' -%}
              <div class="ecl-footer-column ecl-footer-column--desktop-{{ block.settings.width_desktop | default: 3 }} ecl-footer-column--mobile-{{ block.settings.width_mobile | default: 2 }}" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3>{{ block.settings.heading }}</h3>
                {%- endif -%}
                <ul>
                  {%- if block.settings.link_1_text != blank and block.settings.link_1_url != blank -%}
                    <li><a href="{{ block.settings.link_1_url }}">{{ block.settings.link_1_text }}</a></li>
                  {%- endif -%}
                  {%- if block.settings.link_2_text != blank and block.settings.link_2_url != blank -%}
                    <li><a href="{{ block.settings.link_2_url }}">{{ block.settings.link_2_text }}</a></li>
                  {%- endif -%}
                  {%- if block.settings.link_3_text != blank and block.settings.link_3_url != blank -%}
                    <li><a href="{{ block.settings.link_3_url }}">{{ block.settings.link_3_text }}</a></li>
                  {%- endif -%}
                  {%- if block.settings.link_4_text != blank and block.settings.link_4_url != blank -%}
                    <li><a href="{{ block.settings.link_4_url }}">{{ block.settings.link_4_text }}</a></li>
                  {%- endif -%}
                  {%- if block.settings.link_5_text != blank and block.settings.link_5_url != blank -%}
                    <li><a href="{{ block.settings.link_5_url }}">{{ block.settings.link_5_text }}</a></li>
                  {%- endif -%}
                  {%- if block.settings.link_6_text != blank and block.settings.link_6_url != blank -%}
                    <li><a href="{{ block.settings.link_6_url }}">{{ block.settings.link_6_text }}</a></li>
                  {%- endif -%}
                </ul>
              </div>

            {%- when 'social_column' -%}
              {%- comment -%} Social column will be rendered outside the grid {%- endcomment -%}

            {%- when 'text_column' -%}
              <div class="ecl-footer-column ecl-footer-column--desktop-{{ block.settings.width_desktop | default: 3 }} ecl-footer-column--mobile-{{ block.settings.width_mobile | default: 2 }}" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3>{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="ecl-footer-text">{{ block.settings.text }}</div>
                {%- endif -%}
              </div>

          {%- endcase -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_social -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'social_column' -%}
            <div class="ecl-footer-social-section" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="ecl-footer-social-heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- render 'social-icons', class: 'footer__list-social' -%}
            </div>
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}

      {%- if section.settings.show_footer_bottom -%}
        <div class="ecl-footer-bottom">
          {%- if section.settings.show_copyright -%}
            <div class="ecl-footer-copyright">
              {%- if section.settings.copyright_text != blank -%}
                {{ section.settings.copyright_text }}
              {%- else -%}
                Â© {{ 'now' | date: '%Y' }} {{ shop.name }}
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if section.settings.show_payment_icons -%}
            <div class="ecl-footer-payment-icons">
              {%- for type in shop.enabled_payment_types -%}
                {{ type | payment_type_svg_tag: class: 'ecl-footer-payment-icon' }}
              {%- endfor -%}
            </div>
          {%- endif -%}

          {%- if section.settings.show_localization -%}
            <div class="ecl-footer__localization isolate">
              {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                <localization-form>
                  {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
                    <div>
                      <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                      <div class="disclosure">
                        <button
                          type="button"
                          class="disclosure__button localization-form__select localization-selector link link--text caption-large"
                          aria-expanded="false"
                          aria-controls="FooterCountryList"
                          aria-describedby="FooterCountryLabel"
                        >
                          {{ localization.country.name }} ({{ localization.country.currency.iso_code }} {{ localization.country.currency.symbol }})
                          {% render 'icon-caret' %}
                        </button>
                        <div class="disclosure__list-wrapper" hidden>
                          <ul id="FooterCountryList" role="list" class="disclosure__list list-unstyled">
                            {%- for country in localization.available_countries -%}
                              <li class="disclosure__item" tabindex="-1">
                                <a
                                  class="link link--text disclosure__link caption-large{% if country.iso_code == localization.country.iso_code %} disclosure__link--active{% endif %} focus-inset"
                                  href="#"
                                  {% if country.iso_code == localization.country.iso_code %}aria-current="true"{% endif %}
                                  data-value="{{ country.iso_code }}"
                                >
                                  {{ country.name }} <span class="localization-form__currency">({{ country.currency.iso_code }} {{ country.currency.symbol }})</span>
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </div>
                      <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}

              {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                <localization-form>
                  {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
                    <div>
                      <h2 class="caption-large text-body" id="FooterLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                      <div class="disclosure">
                        <button
                          type="button"
                          class="disclosure__button localization-form__select localization-selector link link--text caption-large"
                          aria-expanded="false"
                          aria-controls="FooterLanguageList"
                          aria-describedby="FooterLanguageLabel"
                        >
                          {{ localization.language.endonym_name | capitalize }}
                          {% render 'icon-caret' %}
                        </button>
                        <div class="disclosure__list-wrapper" hidden>
                          <ul id="FooterLanguageList" role="list" class="disclosure__list list-unstyled">
                            {%- for language in localization.available_languages -%}
                              <li class="disclosure__item" tabindex="-1">
                                <a
                                  class="link link--text disclosure__link caption-large{% if language.iso_code == localization.language.iso_code %} disclosure__link--active{% endif %} focus-inset"
                                  href="#"
                                  hreflang="{{ language.iso_code }}"
                                  lang="{{ language.iso_code }}"
                                  {% if language.iso_code == localization.language.iso_code %}aria-current="true"{% endif %}
                                  data-value="{{ language.iso_code }}"
                                >
                                  {{ language.endonym_name | capitalize }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </div>
                      <input type="hidden" name="locale_code" value="{{ localization.language.iso_code }}">
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </footer>
</div>

{% javascript %}
  class LocalizationForm extends HTMLElement {
    constructor() {
      super();
      this.elements = {
        input: this.querySelector('input[name="locale_code"], input[name="country_code"]'),
        button: this.querySelector('button'),
        panel: this.querySelector('.disclosure__list-wrapper'),
      };
      this.elements.button.addEventListener('click', this.openSelector.bind(this));
      this.elements.button.addEventListener('focusout', this.closeSelector.bind(this));
      this.addEventListener('keyup', this.onContainerKeyUp.bind(this));
      this.querySelectorAll('a').forEach(item => item.addEventListener('click', this.onItemClick.bind(this)));
    }

    hidePanel() {
      this.elements.button.setAttribute('aria-expanded', 'false');
      this.elements.panel.setAttribute('hidden', true);
    }

    onContainerKeyUp(event) {
      if (event.code.toUpperCase() !== 'ESCAPE') return;
      this.hidePanel();
      this.elements.button.focus();
    }

    onItemClick(event) {
      event.preventDefault();
      const form = this.querySelector('form');
      this.elements.input.value = event.currentTarget.dataset.value;
      if (form) form.submit();
    }

    openSelector() {
      this.elements.button.focus();
      this.elements.panel.toggleAttribute('hidden');
      this.elements.button.setAttribute('aria-expanded', (this.elements.button.getAttribute('aria-expanded') === 'false').toString());
    }

    closeSelector(event) {
      const shouldClose = event.relatedTarget && event.relatedTarget.nodeName === 'BUTTON';
      if (event.relatedTarget === null || shouldClose) {
        this.hidePanel();
      }
    }
  }

  customElements.define('localization-form', LocalizationForm);
{% endjavascript %}


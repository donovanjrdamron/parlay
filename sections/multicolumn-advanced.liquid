{% comment %}
  Multicolumn Advanced Section
  A flexible multicolumn grid section with comprehensive customization
{% endcomment %}

<section class="multicolumn-advanced section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container page-width">

    {% comment %} Custom HTML - Above Heading {% endcomment %}
    {% if section.settings.custom_html_above_heading != blank %}
      <div class="mca-custom-html-above-heading">
        {{ section.settings.custom_html_above_heading }}
      </div>
    {% endif %}

    {% comment %} Section Heading {% endcomment %}
    {% if section.settings.heading_before != blank or section.settings.highlighted_text != blank or section.settings.heading_after != blank %}
      <div class="mca-header-wrapper mca-align-{{ section.settings.heading_text_align }}">
        {% case section.settings.highlight_position %}
          {% when 'above' %}
            {% if section.settings.highlighted_text != blank %}
              <span class="mca-highlighted-text mca-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {% endif %}
            <{{ section.settings.heading_tag }} class="mca-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
          {% when 'below' %}
            <{{ section.settings.heading_tag }} class="mca-heading {{ section.settings.heading_tag }}">
              {{ section.settings.heading_before }}
              {{ section.settings.heading_after }}
            </{{ section.settings.heading_tag }}>
            {% if section.settings.highlighted_text != blank %}
              <span class="mca-highlighted-text mca-highlighted-separate">{{ section.settings.highlighted_text }}</span>
            {% endif %}
          {% when 'inline_first' %}
            <{{ section.settings.heading_tag }} class="mca-heading {{ section.settings.heading_tag }}">
              {% if section.settings.highlighted_text != blank %}
                <span class="mca-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              {% if section.settings.heading_before != blank %}{{ " " }}{{ section.settings.heading_before }}{% endif %}
              {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
            </{{ section.settings.heading_tag }}>
          {% when 'inline_second' %}
            <{{ section.settings.heading_tag }} class="mca-heading {{ section.settings.heading_tag }}">
              {% if section.settings.heading_before != blank %}{{ section.settings.heading_before }}{{ " " }}{% endif %}
              {% if section.settings.highlighted_text != blank %}
                <span class="mca-highlighted-text">{{ section.settings.highlighted_text }}</span>
              {% endif %}
              {% if section.settings.heading_after != blank %}{{ " " }}{{ section.settings.heading_after }}{% endif %}
            </{{ section.settings.heading_tag }}>
        {% endcase %}
      </div>
    {% endif %}

    {% comment %} Custom HTML - Below Heading {% endcomment %}
    {% if section.settings.custom_html_below_heading != blank %}
      <div class="mca-custom-html-below-heading">
        {{ section.settings.custom_html_below_heading }}
      </div>
    {% endif %}

    {% comment %} Subheading {% endcomment %}
    {% if section.settings.subheading != blank %}
      <div class="mca-subheading-wrapper">
        <p class="mca-subheading">{{ section.settings.subheading }}</p>
      </div>
    {% endif %}

    {% comment %} Custom HTML - Below Subtext {% endcomment %}
    {% if section.settings.custom_html_below_subtext != blank %}
      <div class="mca-custom-html-below-subtext">
        {{ section.settings.custom_html_below_subtext }}
      </div>
    {% endif %}

    {% comment %} Column Grid {% endcomment %}
    {% if section.blocks.size > 0 %}
      <div class="mca-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'column' -%}
          <div class="mca-column" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>

            {% comment %} Column Image/Video {% endcomment %}
            <div class="mca-column-media">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 800 }} 800w"
                  sizes="(max-width: 768px) 100vw, {{ 100 | divided_by: section.settings.columns_desktop }}vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  loading="lazy"
                  class="mca-column-image"
                >
              {% else %}
                <div class="mca-image-placeholder">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>

            {% comment %} Column Content {% endcomment %}
            <div class="mca-column-content">
              {% comment %} Title with Number Badge {% endcomment %}
              {% if block.settings.title != blank %}
                <div class="mca-title-wrapper">
                  {% if block.settings.enable_number %}
                    {%- liquid
                      assign has_custom_svg = false
                      assign has_google_icon = false
                      assign display_color = block.settings.icon_color

                      if block.settings.custom_svg != blank
                        assign has_custom_svg = true
                        if block.settings.custom_svg_color != blank
                          assign display_color = block.settings.custom_svg_color
                        endif
                      elsif block.settings.google_icon != blank
                        assign has_google_icon = true
                      endif
                    -%}
                    <div class="mca-number-badge" style="{% if has_custom_svg or has_google_icon %}font-size: {{ block.settings.icon_size }}px; color: {{ display_color }};{% else %}color: {{ block.settings.icon_color }};{% endif %}">
                      {% if has_custom_svg %}
                        <div class="mca-custom-svg" style="width: {{ block.settings.icon_size }}px; height: {{ block.settings.icon_size }}px; display: inline-flex; align-items: center; justify-content: center; color: {{ display_color }};">
                          {{ block.settings.custom_svg }}
                        </div>
                      {% elsif has_google_icon %}
                        <span class="material-icons" style="font-size: {{ block.settings.icon_size }}px; color: {{ display_color }};">{{ block.settings.google_icon }}</span>
                      {% else %}
                        {{ block.settings.number_value }}
                      {% endif %}
                    </div>
                  {% endif %}
                  <h3 class="mca-column-title">{{ block.settings.title }}</h3>
                </div>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="mca-column-text rte">{{ block.settings.text }}</div>
              {% endif %}

              {% comment %} Custom HTML {% endcomment %}
              {% if block.settings.custom_html != blank %}
                <div class="mca-custom-html">
                  {{ block.settings.custom_html }}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank %}
                <a 
                  href="{% if block.settings.button_url != blank %}{{ block.settings.button_url }}{% else %}#{% endif %}" 
                  class="mca-column-button"
                >
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>

          </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {% endif %}

    {% comment %} Custom HTML - Below Columns {% endcomment %}
    {% if section.settings.custom_html_below_columns != blank %}
      <div class="mca-custom-html-below-columns">
        {{ section.settings.custom_html_below_columns }}
      </div>
    {% endif %}

    {% comment %} Render button blocks outside column grid {% endcomment %}
    {%- for block in section.blocks -%}
      {%- if block.type == 'button' -%}
        {%- if block.settings.button_text != blank -%}
          <div class="mca-button-wrapper" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
            <a
              href="{% if block.settings.scroll_to_section != blank %}#{% elsif block.settings.button_link != blank %}{{ block.settings.button_link }}{% else %}#{% endif %}"
              class="mca-button {% if block.settings.use_custom_styles %}mca-button--custom-styles{% endif %}{% if block.settings.scroll_to_section != blank %} scroll-to-section{% endif %}"
              {% if block.settings.scroll_to_section != blank %}data-scroll-target="{{ block.settings.scroll_to_section }}"{% endif %}
            >
              {%- if block.settings.icon_position == 'left' -%}
                {%- if block.settings.button_custom_icon != blank -%}
                  <span class="mca-button-icon mca-button-icon--left mca-button-icon--custom">
                    {{ block.settings.button_custom_icon }}
                  </span>
                {%- elsif block.settings.button_icon != blank -%}
                  <span class="material-symbols-outlined mca-button-icon mca-button-icon--left{% if block.settings.button_icon_filled %} material-symbols-filled{% endif %}">
                    {{ block.settings.button_icon }}
                  </span>
                {%- endif -%}
              {%- endif -%}

              <span class="mca-button-text">{{- block.settings.button_text -}}</span>

              {%- if block.settings.icon_position == 'right' -%}
                {%- if block.settings.button_custom_icon != blank -%}
                  <span class="mca-button-icon mca-button-icon--right mca-button-icon--custom">
                    {{ block.settings.button_custom_icon }}
                  </span>
                {%- elsif block.settings.button_icon != blank -%}
                  <span class="material-symbols-outlined mca-button-icon mca-button-icon--right{% if block.settings.button_icon_filled %} material-symbols-filled{% endif %}">
                    {{ block.settings.button_icon }}
                  </span>
                {%- endif -%}
              {%- endif -%}
            </a>
          </div>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

  </div>
</section>

<style>
/* ===========================
   Section Background & Spacing
   =========================== */
.section-{{ section.id }} {
  {% if section.settings.use_theme_colors %}
    background: {{ settings.background_color }};
  {% else %}
    {% if section.settings.gradient_enabled %}
      background: {{ section.settings.gradient_background }};
    {% else %}
      background: {{ section.settings.background_color }};
    {% endif %}
  {% endif %}
  padding-top: {{ section.settings.padding_top_mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }
}

/* ===========================
   Container & Page Width
   =========================== */
.section-{{ section.id }} .page-width {
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 1.5rem;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }} .page-width {
    padding: 0 5rem;
  }
}

/* ===========================
   Header Wrapper
   =========================== */
.section-{{ section.id }} .mca-header-wrapper {
  margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
}

.section-{{ section.id }} .mca-header-wrapper.mca-align-left {
  text-align: left;
}

.section-{{ section.id }} .mca-header-wrapper.mca-align-center {
  text-align: center;
}

.section-{{ section.id }} .mca-header-wrapper.mca-align-right {
  text-align: right;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-header-wrapper {
    margin-bottom: {{ section.settings.heading_spacing_desktop }}px;
  }
}

/* ===========================
   Heading
   =========================== */
.section-{{ section.id }} .mca-heading {
  font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
  letter-spacing: {{ settings.heading_letter_spacing | divided_by: 1000.0 }}em;
  {% if section.settings.use_theme_colors %}
    color: {{ settings.heading_color }};
  {% else %}
    color: {{ section.settings.heading_color }};
  {% endif %}
  {% if settings.enable_global_typography %}
    font-size: {{ settings.heading_font_size_desktop }}px;
    font-weight: {{ settings.heading_font_weight }};
  {% else %}
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
  {% endif %}
  line-height: {{ section.settings.heading_line_height }};
  margin: 0;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-heading {
    {% unless settings.enable_global_typography %}
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    {% endunless %}
  }
}

/* ===========================
   Highlighted Text
   =========================== */
.section-{{ section.id }} .mca-highlighted-text {
  display: inline-block;
  font-family: {{ settings.highlighted_text_font.family }}, {{ settings.highlighted_text_font.fallback_families }};
  text-transform: {{ settings.highlighted_text_transform }};
  {% if section.settings.use_theme_colors %}
    {% if settings.highlighted_text_gradient_enabled %}
      background: {{ settings.highlighted_text_gradient }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% else %}
      color: {{ settings.highlighted_text_solid_color }};
    {% endif %}
  {% else %}
    {% if section.settings.highlighted_gradient_enabled %}
      background: {{ section.settings.highlighted_gradient }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% else %}
      color: {{ section.settings.highlighted_color }};
    {% endif %}
  {% endif %}
  {% if settings.enable_global_typography %}
    font-size: {{ settings.highlighted_text_font_size_desktop }}px;
    font-weight: {{ settings.highlighted_text_font_weight }};
      letter-spacing: {{ settings.highlighted_text_letter_spacing | divided_by: 1000.0 }}em;
      font-style: {{ settings.highlighted_text_font_style }};
  {% else %}
    font-size: {{ section.settings.highlight_font_size_desktop }}px;
    font-weight: {{ section.settings.highlight_font_weight }};
  {% endif %}
}

.section-{{ section.id }} .mca-highlighted-separate {
  display: block;
  margin-top: {{ section.settings.highlight_margin_top }}px;
  margin-bottom: {{ section.settings.highlight_margin_bottom }}px;
}

/* ===========================
   Mobile Responsive Typography
   =========================== */
@media screen and (max-width: 768px) {
  .section-{{ section.id }} .mca-heading {
    {% if settings.enable_global_typography %}
      font-size: {{ settings.heading_font_size_mobile }}px;
    {% else %}
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    {% endif %}
  }

  .section-{{ section.id }} .mca-highlighted-text {
    {% if settings.enable_global_typography %}
      font-size: {{ settings.highlighted_text_font_size_mobile }}px;
    {% else %}
      font-size: {{ section.settings.highlight_font_size_mobile }}px;
    {% endif %}
  }
}

/* ===========================
   Subheading
   =========================== */
.section-{{ section.id }} .mca-subheading-wrapper {
  text-align: {{ section.settings.heading_text_align }};
  margin-bottom: {{ section.settings.subheading_spacing_mobile }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-subheading-wrapper {
    margin-bottom: {{ section.settings.subheading_spacing_desktop }}px;
  }
}

.section-{{ section.id }} .mca-subheading {
  {% if section.settings.use_theme_colors %}
    color: {{ settings.text_color }};
  {% else %}
    color: {{ section.settings.subheading_color }};
  {% endif %}
  font-size: {{ section.settings.subheading_font_size_mobile }}px;
  font-weight: {{ section.settings.subheading_font_weight }};
  line-height: 1.6;
  margin: 0;
  max-width: {{ section.settings.subheading_max_width }}px;
  margin-left: auto;
  margin-right: auto;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-subheading {
    font-size: {{ section.settings.subheading_font_size_desktop }}px;
  }
}

/* ===========================
   Custom HTML Blocks
   =========================== */
.section-{{ section.id }} .mca-custom-html-above-heading {
  margin-bottom: {{ section.settings.custom_html_above_heading_spacing }}px;
  text-align: {{ section.settings.heading_text_align }};
}

.section-{{ section.id }} .mca-custom-html-below-heading {
  margin-bottom: {{ section.settings.custom_html_below_heading_spacing }}px;
  text-align: {{ section.settings.heading_text_align }};
}

.section-{{ section.id }} .mca-custom-html-below-subtext {
  margin-bottom: {{ section.settings.custom_html_below_subtext_spacing }}px;
  text-align: {{ section.settings.heading_text_align }};
}

.section-{{ section.id }} .mca-custom-html-below-columns {
  margin-top: {{ section.settings.custom_html_below_columns_spacing }}px;
  text-align: {{ section.settings.heading_text_align }};
}

/* ===========================
   Column Grid
   =========================== */
.section-{{ section.id }} .mca-grid {
  display: grid;
  grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
  gap: {{ section.settings.gap_mobile }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-grid {
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.gap_desktop }}px;
  }
}

/* ===========================
   Column Base
   =========================== */
.section-{{ section.id }} .mca-column {
  display: flex;
  flex-direction: column;
  text-align: {{ section.settings.column_content_alignment }};
}

/* ===========================
   Column Media
   =========================== */
.section-{{ section.id }} .mca-column-media {
  margin-bottom: {{ section.settings.image_spacing_mobile }}px;
  overflow: hidden;
  border-radius: {{ section.settings.image_border_radius }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-column-media {
    margin-bottom: {{ section.settings.image_spacing_desktop }}px;
  }
}

.section-{{ section.id }} .mca-column-image {
  width: 100%;
  height: auto;
  {% if section.settings.image_aspect_ratio != 'auto' %}
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    object-fit: cover;
  {% endif %}
  display: block;
}

.section-{{ section.id }} .mca-image-placeholder {
  width: 100%;
  {% if section.settings.image_aspect_ratio != 'auto' %}
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
  {% else %}
    min-height: 300px;
  {% endif %}
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-{{ section.id }} .mca-image-placeholder svg {
  width: 50%;
  height: 50%;
  opacity: 0.3;
}

/* ===========================
   Column Content
   =========================== */
.section-{{ section.id }} .mca-column-content {
  {% if section.settings.column_background_enabled %}
    background: {{ section.settings.column_background_color }};
    padding: {{ section.settings.column_padding_mobile }}px;
    border-radius: {{ section.settings.column_border_radius }}px;
  {% endif %}
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  {% if section.settings.column_content_alignment == 'center' %}
    align-items: center;
  {% elsif section.settings.column_content_alignment == 'right' %}
    align-items: flex-end;
  {% else %}
    align-items: flex-start;
  {% endif %}
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-column-content {
    {% if section.settings.column_background_enabled %}
      padding: {{ section.settings.column_padding_desktop }}px;
    {% endif %}
  }
}

/* ===========================
   Title Wrapper (for inline number + title)
   =========================== */
.section-{{ section.id }} .mca-title-wrapper {
  display: flex;
  align-items: center;
  gap: {{ section.settings.number_spacing }}px;
  margin-bottom: {{ section.settings.title_spacing_mobile }}px;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-title-wrapper {
    margin-bottom: {{ section.settings.title_spacing_desktop }}px;
  }
}

/* ===========================
   Number Badge
   =========================== */
.section-{{ section.id }} .mca-number-badge {
  width: {{ section.settings.number_size }}px;
  height: {{ section.settings.number_size }}px;
  background: {{ section.settings.number_background }};
  color: {{ section.settings.number_text_color }};
  border-radius: {{ section.settings.number_border_radius }}%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: {{ section.settings.number_font_size_mobile }}px;
  font-weight: {{ section.settings.number_font_weight }};
  border: {{ section.settings.number_border_width }}px solid {{ section.settings.number_border_color }};
  flex-shrink: 0;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-number-badge {
    font-size: {{ section.settings.number_font_size_desktop }}px;
  }
}

/* Custom SVG & Google Icons */
.section-{{ section.id }} .mca-custom-svg svg {
  width: 100%;
  height: 100%;
}

{% for block in section.blocks %}
  {% if block.type == 'column' %}
    .section-{{ section.id }} .mca-column[data-block-id="{{ block.id }}"] .mca-custom-svg svg {
      {% if block.settings.icon_fill_enabled %}
        fill: {{ block.settings.icon_fill_color }};
      {% else %}
        fill: none;
      {% endif %}
      {% if block.settings.icon_outline_enabled %}
        stroke: {{ block.settings.icon_outline_color }};
        stroke-width: {{ block.settings.icon_outline_width }}px;
      {% else %}
        stroke: none;
      {% endif %}
    }
  {% endif %}
{% endfor %}

.section-{{ section.id }} .mca-number-badge .material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-feature-settings: 'liga';
  -webkit-font-smoothing: antialiased;
}

/* ===========================
   Column Title
   =========================== */
.section-{{ section.id }} .mca-column-title {
  color: {{ section.settings.column_title_color }};
  font-size: {{ section.settings.column_title_size_mobile }}px;
  font-weight: {{ section.settings.column_title_weight }};
  line-height: 1.3;
  margin: 0;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-column-title {
    font-size: {{ section.settings.column_title_size_desktop }}px;
  }
}

/* ===========================
   Column Text
   =========================== */
.section-{{ section.id }} .mca-column-text {
  color: {{ section.settings.column_text_color }};
  font-size: {{ section.settings.column_text_size_mobile }}px;
  font-weight: {{ section.settings.column_text_weight }};
  line-height: 1.6;
  margin: 0 0 {{ section.settings.text_spacing_mobile }}px 0;
}

@media screen and (min-width: 769px) {
  .section-{{ section.id }} .mca-column-text {
    font-size: {{ section.settings.column_text_size_desktop }}px;
    margin-bottom: {{ section.settings.text_spacing_desktop }}px;
  }
}

.section-{{ section.id }} .mca-column-text p:last-child {
  margin-bottom: 0;
}

/* ===========================
   Custom HTML
   =========================== */
.section-{{ section.id }} .mca-custom-html {
  margin-top: {{ section.settings.custom_html_spacing }}px;
}

/* ===========================
   Column Button
   =========================== */
.section-{{ section.id }} .mca-column-button {
  display: inline-block;
  padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
  background: {{ section.settings.button_background_color }};
  color: {{ section.settings.button_text_color }};
  font-size: {{ section.settings.button_font_size }}px;
  font-weight: {{ section.settings.button_font_weight }};
  border: {{ section.settings.button_border_width }}px {{ section.settings.button_border_style }} {{ section.settings.button_border_color }};
  border-radius: {{ section.settings.button_border_radius }}px;
  text-decoration: none;
  transition: all 0.3s ease;
  margin-top: auto;
}

.section-{{ section.id }} .mca-column-button:hover {
  background: {{ section.settings.button_background_hover }};
  transform: translateY(-2px);
}

/* ===========================
   Per-Column Styling
   =========================== */
{% for block in section.blocks %}
  .section-{{ section.id }} .mca-column[data-block-id="{{ block.id }}"] .mca-column-content {
    {% if block.settings.enable_custom_background %}
      background: {{ block.settings.custom_background_color }};
      padding: {{ section.settings.column_padding_mobile }}px;
      border-radius: {{ section.settings.column_border_radius }}px;

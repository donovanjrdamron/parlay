{{ 'component-rte.css' | asset_url | stylesheet_tag }}

<div class="icon-text-card-section section-{{ section.id }}-padding">
  <div class="page-width">
    {%- render 'icon-text-card',
      card_id: section.id,

      title: section.settings.title,
      paragraph: section.settings.paragraph,
      icon_type: section.settings.icon_type,
      icon_image: section.settings.icon_image,
      icon_svg: section.settings.icon_svg,

      card_background: section.settings.card_background,
      card_width: section.settings.card_width,
      card_max_width: section.settings.card_max_width,
      card_padding_top: section.settings.card_padding_top,
      card_padding_bottom: section.settings.card_padding_bottom,
      card_padding_left: section.settings.card_padding_left,
      card_padding_right: section.settings.card_padding_right,
      card_border_radius: section.settings.card_border_radius,
      card_border_width: section.settings.card_border_width,
      card_border_color: section.settings.card_border_color,
      card_shadow: section.settings.card_shadow,
      card_shadow_x: section.settings.card_shadow_x,
      card_shadow_y: section.settings.card_shadow_y,
      card_shadow_blur: section.settings.card_shadow_blur,
      card_shadow_color: section.settings.card_shadow_color,

      icon_size: section.settings.icon_size,
      icon_background: section.settings.icon_background,
      icon_border_radius: section.settings.icon_border_radius,
      icon_border_width: section.settings.icon_border_width,
      icon_border_color: section.settings.icon_border_color,
      icon_padding: section.settings.icon_padding,

      enable_animation: section.settings.enable_animation,

      gap: section.settings.gap,
      align_items: section.settings.align_items,
      text_align: section.settings.text_align,

      title_color: section.settings.title_color,
      title_font_size: section.settings.title_font_size,
      title_font_size_mobile: section.settings.title_font_size_mobile,
      title_font_weight: section.settings.title_font_weight,
      title_line_height: section.settings.title_line_height,
      title_text_transform: section.settings.title_text_transform,
      title_margin_bottom: section.settings.title_margin_bottom,

      paragraph_color: section.settings.paragraph_color,
      paragraph_font_size: section.settings.paragraph_font_size,
      paragraph_font_size_mobile: section.settings.paragraph_font_size_mobile,
      paragraph_font_weight: section.settings.paragraph_font_weight,
      paragraph_line_height: section.settings.paragraph_line_height,

      mobile_stack: section.settings.mobile_stack,
      mobile_icon_size: section.settings.mobile_icon_size,
      mobile_gap: section.settings.mobile_gap,
      mobile_card_padding: section.settings.mobile_card_padding
    -%}
  </div>
</div>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


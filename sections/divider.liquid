{{ 'section-divider.css' | asset_url | stylesheet_tag }}

<style>
  #divider-{{ section.id }} {
    --divider-line-color: {{ section.settings.line_color }};
    --divider-line-thickness: {{ section.settings.line_thickness }}px;
    --divider-text-color: {{ section.settings.text_color | default: settings.body_color }};
    --divider-highlight-text-color: {{ settings.button_background_color }};
    --divider-highlight-bg-color: {{ settings.body_color }};
  }

  #divider-{{ section.id }} .divider-container {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.text_position }};
    padding: {{ section.settings.spacing_top }}px 0 {{ section.settings.spacing_bottom }}px 0;
  }

  {% if section.settings.show_line %}
  #divider-{{ section.id }} .divider-line {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: var(--divider-line-thickness);
    background-color: var(--divider-line-color);
    transform: translateY(-50%);
    {% if section.settings.line_style == 'dashed' %}
    background: repeating-linear-gradient(
      to right,
      var(--divider-line-color) 0,
      var(--divider-line-color) 10px,
      transparent 10px,
      transparent 20px
    );
    {% elsif section.settings.line_style == 'dotted' %}
    background: repeating-linear-gradient(
      to right,
      var(--divider-line-color) 0,
      var(--divider-line-color) 4px,
      transparent 4px,
      transparent 12px
    );
    {% endif %}
  }
  {% endif %}

  #divider-{{ section.id }} .divider-text {
    position: relative;
    z-index: 1;
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.text_padding_vertical }}px {{ section.settings.text_padding_horizontal }}px;
    color: var(--divider-text-color);
    font-size: {{ section.settings.text_size_mobile }}px;
    font-weight: {{ section.settings.text_weight }};
    {% if section.settings.text_transform != 'none' %}
    text-transform: {{ section.settings.text_transform }};
    {% endif %}
    letter-spacing: {{ section.settings.letter_spacing }}px;
    {% if section.settings.enable_border %}
    border: {{ section.settings.border_width }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
    border-radius: {{ section.settings.text_border_radius }}px;
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    #divider-{{ section.id }} .divider-text {
      font-size: {{ section.settings.text_size_desktop }}px;
    }
  }

  {% if section.settings.enable_highlight %}
  #divider-{{ section.id }} .divider-text .highlight {
    color: var(--divider-highlight-text-color);
    background-color: var(--divider-highlight-bg-color);
    padding: {{ section.settings.highlight_padding_vertical }}px {{ section.settings.highlight_padding_horizontal }}px;
    {% if section.settings.highlight_position == 'underline' %}
    background: linear-gradient(to top, var(--divider-highlight-bg-color) 0%, var(--divider-highlight-bg-color) 30%, transparent 30%);
    {% elsif section.settings.highlight_position == 'full' %}
    display: inline-block;
    {% endif %}
    border-radius: {{ section.settings.highlight_border_radius }}px;
  }
  {% endif %}
</style>

<div id="divider-{{ section.id }}" class="divider-section">
  <div class="divider-container page-width">
    {% if section.settings.show_line %}
      <div class="divider-line"></div>
    {% endif %}
    {% if section.settings.text != blank %}
      <div class="divider-text">
        {% if section.settings.enable_highlight %}
          {% assign text_parts = section.settings.text | split: section.settings.highlight_delimiter %}
          {% for part in text_parts %}
            {% assign mod = forloop.index | modulo: 2 %}
            {% if mod == 0 %}
              <span class="highlight">{{ part }}</span>
            {% else %}
              {{ part }}
            {% endif %}
          {% endfor %}
        {% else %}
          {{ section.settings.text }}
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>


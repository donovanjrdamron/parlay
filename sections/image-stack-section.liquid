      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "subheading_font_weight",
      "label": "Subheading Font Weight",
      "min": 100,
      "max": 900,
      "step": 100,

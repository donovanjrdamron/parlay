        { "value": "inline_first", "label": "Inline (First)" },
        { "value": "inline_second", "label": "Inline (Second)" },
        { "value": "above", "label": "Above Heading" },
        { "value": "below", "label": "Below Heading" }
      ],
      "default": "inline_second"
    },
    {
      "type": "select",

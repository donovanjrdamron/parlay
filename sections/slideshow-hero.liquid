{% style %}
  .slideshow-hero-{{ section.id }} {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.min_height }}vh;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ section.settings.min_height }}vh;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__slides {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ section.settings.min_height }}vh;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    min-height: {{ section.settings.min_height }}vh;
    opacity: 0;
    visibility: hidden;
    transition: opacity {{ section.settings.transition_duration }}ms ease-in-out, visibility {{ section.settings.transition_duration }}ms ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__slide.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__media-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__video-fallback {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    z-index: 1;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__media-container.video-error .slideshow-hero__video-fallback {
    opacity: 1;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__media-container.video-error .slideshow-hero__video {
    opacity: 0;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: {{ section.settings.content_max_width }}px;
    padding: {{ section.settings.content_padding_vertical }}px {{ section.settings.content_padding_horizontal }}px;
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__heading {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    color: {{ section.settings.heading_color }};
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
    font-weight: {{ section.settings.subheading_font_weight }};
    line-height: {{ section.settings.subheading_line_height }};
    margin: 0 0 {{ section.settings.subheading_margin_bottom }}px 0;
    color: {{ section.settings.subheading_color }};
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__text {
    font-size: {{ section.settings.text_font_size }}px;
    line-height: {{ section.settings.text_line_height }};
    margin: 0 0 {{ section.settings.text_margin_bottom }}px 0;
    color: {{ section.settings.text_color }};
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    transition: all 0.3s ease;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__button:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  /* Navigation */
  .slideshow-hero-{{ section.id }} .slideshow-hero__navigation {
    position: absolute;
    bottom: {{ section.settings.navigation_bottom }}px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
    display: flex;
    gap: {{ section.settings.navigation_gap }}px;
    align-items: center;
    justify-content: center;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__nav-button {
    width: {{ section.settings.navigation_size }}px;
    height: {{ section.settings.navigation_size }}px;
    border-radius: 50%;
    background-color: {{ section.settings.navigation_color }};
    border: 2px solid {{ section.settings.navigation_border_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.5;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__nav-button.active {
    opacity: 1;
    background-color: {{ section.settings.navigation_active_color }};
    border-color: {{ section.settings.navigation_active_border_color }};
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__nav-button:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  /* Arrow Navigation */
  {% if section.settings.show_arrows %}
    .slideshow-hero-{{ section.id }} .slideshow-hero__arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 4;
      width: {{ section.settings.arrow_size }}px;
      height: {{ section.settings.arrow_size }}px;
      background-color: {{ section.settings.arrow_background_color }};
      border: 2px solid {{ section.settings.arrow_border_color }};
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      opacity: {{ section.settings.arrow_opacity | divided_by: 100.0 }};
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__arrow:hover {
      opacity: 1;
      transform: translateY(-50%) scale(1.1);
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__arrow--prev {
      left: {{ section.settings.arrow_position }}px;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__arrow--next {
      right: {{ section.settings.arrow_position }}px;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__arrow svg {
      width: 50%;
      height: 50%;
      fill: {{ section.settings.arrow_color }};
    }
  {% endif %}

  /* Hide video controls */
  .slideshow-hero-{{ section.id }} .slideshow-hero__video {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__video::-webkit-media-controls {
    display: none !important;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__video::-webkit-media-controls-panel {
    display: none !important;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__video::-webkit-media-controls-play-button {
    display: none !important;
  }

  .slideshow-hero-{{ section.id }} .slideshow-hero__video::-webkit-media-controls-start-playback-button {
    display: none !important;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .slideshow-hero-{{ section.id }} {
      min-height: {{ section.settings.min_height_mobile }}vh;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__slide {
      min-height: {{ section.settings.min_height_mobile }}vh;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__content {
      padding: {{ section.settings.content_padding_vertical_mobile }}px {{ section.settings.content_padding_horizontal_mobile }}px;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__subheading {
      font-size: {{ section.settings.subheading_font_size_mobile }}px;
    }

    .slideshow-hero-{{ section.id }} .slideshow-hero__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }

    {% if section.settings.show_arrows %}
      .slideshow-hero-{{ section.id }} .slideshow-hero__arrow {
        width: {{ section.settings.arrow_size_mobile }}px;
        height: {{ section.settings.arrow_size_mobile }}px;
      }

      .slideshow-hero-{{ section.id }} .slideshow-hero__arrow--prev {
        left: {{ section.settings.arrow_position_mobile }}px;
      }

      .slideshow-hero-{{ section.id }} .slideshow-hero__arrow--next {
        right: {{ section.settings.arrow_position_mobile }}px;
      }
    {% endif %}
  }

  /* Animation */
  .slideshow-hero-{{ section.id }} .slideshow-hero__content {
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

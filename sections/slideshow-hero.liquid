<section class="slideshow-hero-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="slideshow-hero__container">
    <div class="slideshow-hero__slides" data-slideshow-slides>
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div class="slideshow-hero__slide {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            {% comment %} Media Background {% endcomment %}
            <div class="slideshow-hero__media-container" data-media-container>
              {% if block.settings.video != blank %}
                <link rel="preload" as="video" href="{{ block.settings.video.sources[1].url }}" type="video/mp4">
                <video 
                  class="slideshow-hero__video" 
                  autoplay 
                  muted 
                  loop 
                  playsinline 
                  preload="auto"
                  webkit-playsinline
                  x5-playsinline
                  data-video
                >
                  <source src="{{ block.settings.video.sources[1].url }}" type="video/mp4">
                </video>
                {% if block.settings.fallback_image %}
                  {{ block.settings.fallback_image | image_url: width: 1920 | image_tag: class: 'slideshow-hero__video-fallback', loading: 'lazy', alt: block.settings.heading }}
                {% endif %}
              {% elsif block.settings.image %}
                {{ block.settings.image | image_url: width: 1920 | image_tag: class: 'slideshow-hero__image', loading: 'lazy', alt: block.settings.heading }}
              {% endif %}
            </div>

            {% comment %} Overlay {% endcomment %}
            {% if section.settings.enable_overlay %}
              <div class="slideshow-hero__overlay"></div>
            {% endif %}

            {% comment %} Content {% endcomment %}
            <div class="slideshow-hero__content">
              {% if block.settings.heading != blank %}
                <h1 class="slideshow-hero__heading">
                  {{ block.settings.heading }}
                </h1>
              {% endif %}

              {% if block.settings.subheading != blank %}
                <h2 class="slideshow-hero__subheading">
                  {{ block.settings.subheading }}
                </h2>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="slideshow-hero__text">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="slideshow-hero__button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% comment %} Navigation Dots {% endcomment %}
    {% if section.blocks.size > 1 and section.settings.show_navigation %}
      <div class="slideshow-hero__navigation">
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            <button 
              class="slideshow-hero__nav-button {% if forloop.first %}active{% endif %}" 
              data-slide-button="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {% comment %} Arrow Navigation {% endcomment %}
    {% if section.blocks.size > 1 and section.settings.show_arrows %}
      <button class="slideshow-hero__arrow slideshow-hero__arrow--prev" data-arrow="prev" aria-label="Previous slide">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="slideshow-hero__arrow slideshow-hero__arrow--next" data-arrow="next" aria-label="Next slide">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  </div>
</section>

<script>
  (function() {
    const section = document.querySelector('.slideshow-hero-{{ section.id }}');
    if (!section) return;

    const slides = section.querySelectorAll('[data-slide-index]');
    const navButtons = section.querySelectorAll('[data-slide-button]');
    const prevArrow = section.querySelector('[data-arrow="prev"]');
    const nextArrow = section.querySelector('[data-arrow="next"]');
    let currentSlide = 0;
    let autoplayInterval = null;
    const autoplayDelay = {{ section.settings.autoplay_delay | default: 5000 }};

    function showSlide(index) {
      // Hide all slides
      slides.forEach(slide => {
        slide.classList.remove('active');
      });

      // Show selected slide
      if (slides[index]) {
        slides[index].classList.add('active');
        currentSlide = index;

        // Update navigation buttons
        navButtons.forEach((btn, i) => {
          btn.classList.toggle('active', i === index);
        });

        // Play video if it exists
        const video = slides[index].querySelector('[data-video]');
        if (video) {
          video.play().catch(() => {});
        }

        // Pause videos in other slides
        slides.forEach((slide, i) => {
          if (i !== index) {
            const otherVideo = slide.querySelector('[data-video]');
            if (otherVideo) {
              otherVideo.pause();
            }
          }
        });
      }
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }

    // Navigation button clicks
    navButtons.forEach((btn, index) => {
      btn.addEventListener('click', () => {
        showSlide(index);
        resetAutoplay();
      });
    });

    // Arrow navigation
    if (prevArrow) {
      prevArrow.addEventListener('click', () => {
        prevSlide();
        resetAutoplay();
      });
    }

    if (nextArrow) {
      nextArrow.addEventListener('click', () => {
        nextSlide();
        resetAutoplay();
      });
    }

    // Autoplay
    function startAutoplay() {
      {% if section.settings.enable_autoplay %}
        if (slides.length > 1) {
          autoplayInterval = setInterval(nextSlide, autoplayDelay);
        }
      {% endif %}
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function resetAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    // Pause autoplay on hover
    {% if section.settings.pause_on_hover %}
      section.addEventListener('mouseenter', stopAutoplay);
      section.addEventListener('mouseleave', startAutoplay);
    {% endif %}

    // Keyboard navigation
    section.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevSlide();
        resetAutoplay();
      } else if (e.key === 'ArrowRight') {
        nextSlide();
        resetAutoplay();
      }
    });

    // Video error handling
    section.querySelectorAll('[data-video]').forEach(video => {
      const container = video.closest('[data-media-container]');
      
      video.addEventListener('loadeddata', function() {
        if (container) container.classList.add('video-loaded');
      });

      video.addEventListener('error', function() {
        if (container) container.classList.add('video-error');
      });

      // Fallback: if video doesn't load within 5 seconds, show fallback image
      setTimeout(function() {
        if (container && !container.classList.contains('video-loaded')) {
          container.classList.add('video-error');
        }
      }, 5000);
    });

    // Initialize
    showSlide(0);
    startAutoplay();

    // Make section focusable for keyboard navigation
    section.setAttribute('tabindex', '0');
  })();
</script>


<article class="ai-advertorial-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-advertorial-container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <header class="ai-advertorial-header-{{ ai_gen_id }}">
        {% if block.settings.category != blank %}
          <div class="ai-advertorial-category-{{ ai_gen_id }}">
            {{ block.settings.category }}
          </div>
        {% endif %}

        {% if block.settings.headline != blank %}
          <h1 class="ai-advertorial-headline-{{ ai_gen_id }}">
            {{ block.settings.headline }}
          </h1>
        {% endif %}

        {% if block.settings.byline != blank %}
          <div class="ai-advertorial-byline-{{ ai_gen_id }}">
            {{ block.settings.byline }}
          </div>
        {% endif %}

        {% if block.settings.date != blank %}
          <div class="ai-advertorial-date-{{ ai_gen_id }}">
            {{ block.settings.date }}
          </div>
        {% endif %}
      </header>
    {% endif %}

    {% if block.settings.show_hero %}
      <div class="ai-advertorial-hero-{{ ai_gen_id }}">
        <div class="ai-advertorial-hero-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.hero_image != blank %}
            <img
              src="{{ block.settings.hero_image | image_url: width: 1400 }}"
              alt="{{ block.settings.hero_image.alt | escape }}"
              class="ai-advertorial-hero-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.hero_image.width }}"
              height="{{ block.settings.hero_image.height }}"
            >
          {% else %}
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          {% endif %}
        </div>

        {% if block.settings.hero_caption != blank %}
          <div class="ai-advertorial-caption-{{ ai_gen_id }}">
            {{ block.settings.hero_caption }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.intro_text != blank %}
      <div class="ai-advertorial-intro-{{ ai_gen_id }}">
        {{ block.settings.intro_text }}
      </div>
    {% endif %}

    <div class="ai-advertorial-body-{{ ai_gen_id }}">
      {% if block.settings.show_section_1 %}
        <section class="ai-advertorial-section-{{ ai_gen_id }}">
          {% if block.settings.section_1_heading != blank %}
            <h2 class="ai-advertorial-subheading-{{ ai_gen_id }}">
              {{ block.settings.section_1_heading }}
            </h2>
          {% endif %}

          {% if block.settings.section_1_text != blank %}
            <div class="ai-advertorial-text-{{ ai_gen_id }}">
              {{ block.settings.section_1_text }}
            </div>
          {% endif %}
        </section>
      {% endif %}

      {% if block.settings.show_pullquote %}
        <blockquote class="ai-advertorial-pullquote-{{ ai_gen_id }}">
          {{ block.settings.pullquote_text }}
        </blockquote>
      {% endif %}

      {% if block.settings.show_section_2 %}
        <section class="ai-advertorial-section-{{ ai_gen_id }}">
          {% if block.settings.section_2_heading != blank %}
            <h2 class="ai-advertorial-subheading-{{ ai_gen_id }}">
              {{ block.settings.section_2_heading }}
            </h2>
          {% endif %}

          {% if block.settings.section_2_text != blank %}
            <div class="ai-advertorial-text-{{ ai_gen_id }}">
              {{ block.settings.section_2_text }}
            </div>
          {% endif %}
        </section>
      {% endif %}

      {% if block.settings.show_image_block %}
        <figure class="ai-advertorial-image-block-{{ ai_gen_id }}">
          <div class="ai-advertorial-image-block-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_block != blank %}
              <img
                src="{{ block.settings.image_block | image_url: width: 1200 }}"
                alt="{{ block.settings.image_block.alt | escape }}"
                class="ai-advertorial-image-block-img-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_block.width }}"
                height="{{ block.settings.image_block.height }}"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>

          {% if block.settings.image_block_caption != blank %}
            <figcaption class="ai-advertorial-caption-{{ ai_gen_id }}">
              {{ block.settings.image_block_caption }}
            </figcaption>
          {% endif %}
        </figure>
      {% endif %}

      {% if block.settings.show_section_3 %}
        <section class="ai-advertorial-section-{{ ai_gen_id }}">
          {% if block.settings.section_3_heading != blank %}
            <h2 class="ai-advertorial-subheading-{{ ai_gen_id }}">
              {{ block.settings.section_3_heading }}
            </h2>
          {% endif %}

          {% if block.settings.section_3_text != blank %}
            <div class="ai-advertorial-text-{{ ai_gen_id }}">
              {{ block.settings.section_3_text }}
            </div>
          {% endif %}
        </section>
      {% endif %}
    </div>

    {% if block.settings.show_cta %}
      <div class="ai-advertorial-cta-box-{{ ai_gen_id }}">
        {% if block.settings.cta_heading != blank %}
          <h3 class="ai-advertorial-cta-heading-{{ ai_gen_id }}">
            {{ block.settings.cta_heading }}
          </h3>
        {% endif %}

        {% if block.settings.cta_text != blank %}
          <div class="ai-advertorial-cta-text-{{ ai_gen_id }}">
            {{ block.settings.cta_text }}
          </div>
        {% endif %}

        <a
          href="{{ block.settings.cta_link }}"
          class="ai-advertorial-button-{{ ai_gen_id }}"
        >
          {{ block.settings.cta_button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</article>


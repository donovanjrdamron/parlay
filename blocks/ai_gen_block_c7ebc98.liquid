    {
      "type": "range",
      "id": "bottom_line_width",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Bottom line width",
      "default": 1
    },
    {
      "type": "color",
      "id": "bottom_line_color",
      "label": "Bottom line color",
      "default": "#e0e0e0"
    },
    {
      "type": "header",
      "content": "Section heading"
    },
    {
      "type": "checkbox",
      "id": "show_section_heading",
      "label": "Show section heading",
      "default": false
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading text"
    },
    {
      "type": "range",
      "id": "section_heading_size_desktop",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size - Desktop",
      "default": 32
    },
    {
      "type": "range",
      "id": "section_heading_size_mobile",

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-hero-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top_mobile }}px 16px {{ block.settings.section_padding_bottom_mobile }}px;
    background-color: {{ block.settings.section_bg_color }};
    {% if block.settings.show_bottom_line %}
      border-bottom: {{ block.settings.bottom_line_width }}px solid {{ block.settings.bottom_line_color }};
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top_desktop }}px 40px {{ block.settings.section_padding_bottom_desktop }}px;
    }
  }

  .ai-collection-hero-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_max_width }}px;
    margin: 0 auto;
  }

  .ai-collection-hero-section-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_heading_size_mobile }}px;
    line-height: 1.2;
    margin: 0 0 {{ block.settings.section_heading_spacing_mobile }}px;
    color: {{ block.settings.section_heading_color }};
    font-weight: {{ block.settings.section_heading_weight }};
    text-align: {{ block.settings.section_heading_alignment }};
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-section-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_heading_size_desktop }}px;
      margin-bottom: {{ block.settings.section_heading_spacing_desktop }}px;
    }
  }

  .ai-collection-hero-container-{{ ai_gen_id }} {
    background-color: {{ block.settings.container_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.container_padding_mobile }}px;
    display: flex;
    flex-direction: column;
    gap: 28px;
    width: {{ block.settings.container_width_mobile }}%;
    height: {{ block.settings.container_height_mobile }}px;
    margin: 0 auto;
    {% if block.settings.show_container_border %}
      border: {{ block.settings.container_border_width }}px solid {{ block.settings.container_border_color }};
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-container-{{ ai_gen_id }} {
      padding: {{ block.settings.container_padding_desktop }}px;
      flex-direction: row;
      align-items: center;
      gap: {{ block.settings.column_gap }}px;
      width: {{ block.settings.container_width_desktop }}%;
      height: {{ block.settings.container_height_desktop }}px;
    }
  }

  .ai-collection-hero-rating-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: {{ block.settings.rating_padding_vertical }}px {{ block.settings.rating_padding_horizontal }}px;
    background-color: {{ block.settings.rating_bg_color }};
    border-radius: {{ block.settings.rating_border_radius }}px;
    width: fit-content;
    margin-bottom: {{ block.settings.rating_spacing }}px;
    {% if block.settings.show_rating_border %}
      border: {{ block.settings.rating_border_width }}px solid {{ block.settings.rating_border_color }};
    {% endif %}
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-collection-hero-rating-{{ ai_gen_id }} {
      margin-left: auto;
      margin-right: auto;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-collection-hero-rating-{{ ai_gen_id }} {
      margin-left: auto;
    }
  {% endif %}

  .ai-collection-hero-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 3px;
  }

  .ai-collection-hero-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-collection-hero-rating-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.rating_text_size }}px;
    color: {{ block.settings.rating_text_color }};
    font-weight: {{ block.settings.rating_text_weight }};
    line-height: 1;
  }

  .ai-collection-hero-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap_mobile }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-content-{{ ai_gen_id }} {
      gap: {{ block.settings.content_gap_desktop }}px;
    }
  }

  .ai-collection-hero-badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    border-radius: 100px;
    font-size: 11px;
    font-weight: {{ block.settings.badge_text_weight }};
    letter-spacing: 0.03em;
    text-transform: uppercase;
    width: fit-content;
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-collection-hero-badge-{{ ai_gen_id }} {
      margin: 0 auto;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-collection-hero-badge-{{ ai_gen_id }} {
      margin-left: auto;
    }
  {% endif %}

  .ai-collection-hero-badge-icon-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    flex-shrink: 0;
  }

  .ai-collection-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_mobile }}px;
    line-height: 1.15;
    margin: 0;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.heading_weight }};
    letter-spacing: -0.025em;
    white-space: pre-line;
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  .ai-collection-hero-body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    opacity: 0.75;
    max-width: {{ block.settings.body_max_width }}px;
    font-weight: {{ block.settings.body_weight }};
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-collection-hero-body-{{ ai_gen_id }} {
      margin: 0 auto;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-collection-hero-body-{{ ai_gen_id }} {
      margin-left: auto;
    }
  {% endif %}

  .ai-collection-hero-image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.image_alignment }};
    padding: {{ block.settings.image_padding_top_mobile }}px {{ block.settings.image_padding_horizontal_mobile }}px {{ block.settings.image_padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-image-wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.image_padding_top_desktop }}px {{ block.settings.image_padding_horizontal_desktop }}px {{ block.settings.image_padding_bottom_desktop }}px;
    }
  }

  .ai-collection-hero-image-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
    {% if block.settings.show_image_border %}
      border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    {% endif %}
  }

  .ai-collection-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    aspect-ratio: 1;
    background-color: #f0f0f0;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    {% if block.settings.show_image_border %}
      border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    {% endif %}
  }

  .ai-collection-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.25;
  }

  .ai-collection-hero-features-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_max_width }}px;
    margin: {{ block.settings.features_spacing_top_mobile }}px auto {{ block.settings.features_spacing_bottom_mobile }}px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.features_gap_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-collection-hero-features-{{ ai_gen_id }} {
      margin-top: {{ block.settings.features_spacing_top_desktop }}px;
      margin-bottom: {{ block.settings.features_spacing_bottom_desktop }}px;
      grid-template-columns: repeat(4, 1fr);
      gap: {{ block.settings.features_gap_desktop }}px;
    }
  }

  .ai-collection-hero-feature-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    text-align: center;
  }

  .ai-collection-hero-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.feature_icon_width }}px;
    height: {{ block.settings.feature_icon_height }}px;
    stroke: {{ block.settings.feature_icon_color }};
    stroke-width: 1.5;
    fill: none;
    object-fit: contain;
  }

  .ai-collection-hero-feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.feature_text_color }};
    line-height: 1.4;
    opacity: 0.8;
    font-weight: {{ block.settings.feature_text_weight }};
  }
{% endstyle %}

<div class="ai-collection-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-hero-wrapper-{{ ai_gen_id }}">
    {% if block.settings.show_section_heading and block.settings.section_heading != blank %}
      <h2 class="ai-collection-hero-section-heading-{{ ai_gen_id }}">{{ block.settings.section_heading }}</h2>
    {% endif %}

    <div class="ai-collection-hero-container-{{ ai_gen_id }}">
      <div class="ai-collection-hero-content-{{ ai_gen_id }}">
        {% if block.settings.show_rating %}
          <div class="ai-collection-hero-rating-{{ ai_gen_id }}">
            <div class="ai-collection-hero-stars-{{ ai_gen_id }}">
              {% for i in (1..5) %}
                <svg class="ai-collection-hero-star-{{ ai_gen_id }}" viewBox="0 0 24 24">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              {% endfor %}
            </div>
            {% if block.settings.rating_text != blank %}
              <span class="ai-collection-hero-rating-text-{{ ai_gen_id }}">{{ block.settings.rating_text }}</span>
            {% endif %}
          </div>
        {% endif %}

        {% if block.settings.show_badge and block.settings.badge_text != blank %}
          <div class="ai-collection-hero-badge-{{ ai_gen_id }}">
            {% if block.settings.show_badge_icon %}
              <svg class="ai-collection-hero-badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 6v6l4 2"></path>
              </svg>
            {% endif %}
            {{ block.settings.badge_text }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.body_text != blank %}
          <div class="ai-collection-hero-body-{{ ai_gen_id }}">
            {{ block.settings.body_text }}
          </div>
        {% endif %}
      </div>

      {% if block.settings.show_image %}
        <div class="ai-collection-hero-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1000 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-collection-hero-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-collection-hero-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_features %}
      <div class="ai-collection-hero-features-{{ ai_gen_id }}">
        {% if block.settings.feature_1_text != blank %}
          <div class="ai-collection-hero-feature-{{ ai_gen_id }}">
            {% if block.settings.show_feature_icons %}
              {% if block.settings.feature_1_icon %}
                <img
                  src="{{ block.settings.feature_1_icon | image_url: width: 200 }}"
                  alt=""
                  class="ai-collection-hero-feature-icon-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <svg class="ai-collection-hero-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                  <path d="M2 17l10 5 10-5M2 12l10 5 10-5"></path>
                </svg>
              {% endif %}
            {% endif %}
            <div class="ai-collection-hero-feature-text-{{ ai_gen_id }}">
              {{ block.settings.feature_1_text }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.feature_2_text != blank %}
          <div class="ai-collection-hero-feature-{{ ai_gen_id }}">
            {% if block.settings.show_feature_icons %}
              {% if block.settings.feature_2_icon %}
                <img
                  src="{{ block.settings.feature_2_icon | image_url: width: 200 }}"
                  alt=""
                  class="ai-collection-hero-feature-icon-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <svg class="ai-collection-hero-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              {% endif %}
            {% endif %}
            <div class="ai-collection-hero-feature-text-{{ ai_gen_id }}">
              {{ block.settings.feature_2_text }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.feature_3_text != blank %}
          <div class="ai-collection-hero-feature-{{ ai_gen_id }}">
            {% if block.settings.show_feature_icons %}
              {% if block.settings.feature_3_icon %}
                <img
                  src="{{ block.settings.feature_3_icon | image_url: width: 200 }}"
                  alt=""
                  class="ai-collection-hero-feature-icon-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <svg class="ai-collection-hero-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
              {% endif %}
            {% endif %}
            <div class="ai-collection-hero-feature-text-{{ ai_gen_id }}">
              {{ block.settings.feature_3_text }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.feature_4_text != blank %}
          <div class="ai-collection-hero-feature-{{ ai_gen_id }}">
            {% if block.settings.show_feature_icons %}
              {% if block.settings.feature_4_icon %}
                <img
                  src="{{ block.settings.feature_4_icon | image_url: width: 200 }}"
                  alt=""
                  class="ai-collection-hero-feature-icon-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <svg class="ai-collection-hero-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              {% endif %}
            {% endif %}
            <div class="ai-collection-hero-feature-text-{{ ai_gen_id }}">
              {{ block.settings.feature_4_text }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

